<?xml version="1.0" encoding="utf-8" ?>
<Sqls>

  <Sql>
    <key>GetMaxId</key>
    <query>
      select nvl(max(fdatcodi), 0) + 1 from si_fuentedatos
    </query>
  </Sql>

  <Sql>
    <key>Save</key>
    <query>
      insert into si_fuentedatos(
      fdatcodi,
      fdatnombre,
      fdattabla,
      fdatpk
      )
      values(
      {0},
      '{1}',
      '{2}',
      '{3}'
      )
    </query>
  </Sql>

  <Sql>
    <key>Update</key>
    <query>
      update si_fuentedatos
      set
      fdatnombre = '{1}',
      fdattabla = '{2}',
      fdatpk = '{3}'
      where
      fdatcodi = {0}
    </query>
  </Sql>
  

  <Sql>
    <key>Delete</key>
    <query>
      delete from si_fuentedatos
      where
      fdatcodi = :fdatcodi
    </query>
  </Sql>

  <Sql>
    <key>GetById</key>
    <query>
      select
      *
      from
      si_fuentedatos
      where
      fdatcodi = :fdatcodi

    </query>
  </Sql>

  <Sql>
    <key>List</key>
    <query>
      select
      *
      from
      si_fuentedatos
      order by FDATNOMBRE
    </query>
  </Sql>

  <!--INICIO PR5-->
  <Sql>
    <key>ListarXModulo</key>
    <query>
      select
      F.*
      from
      si_fuentedatos F inner join si_modulofuentedatos M
      on M.fdatcodi = F.fdatcodi
      where M.modcodi = {0}
    </query>
  </Sql>
  <!--FIN PR5-->

</Sqls>