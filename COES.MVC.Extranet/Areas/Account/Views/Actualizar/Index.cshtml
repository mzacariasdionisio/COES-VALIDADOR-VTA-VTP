@model COES.MVC.Extranet.Areas.Account.Models.RegistroModel
@{
    ViewBag.Title = "Actualizar datos de usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/Areas/Account/Content/Css/css.css" rel="stylesheet" />
    <script src="~/Areas/Account/Content/Scripts/actualizar.js"></script>
}

<div class="form-title" style="color: #278CCC; margin-bottom:0px;">Actualizar datos de usuario</div>
<div class="home-content" style="line-height:20px">
    <div id="divRegistro">
        <div id="mensaje" class="action-message">Por favor complete los datos solicitados.</div>
        <form id="frmRegistro" name="frmRegistro">

            <table class="table-form-content">
                <tr>
                    <td class="label">Nombres:</td>
                    <td>
                        <input type="text" id="txtNombre" maxlength="50" value="@Model.Nombre" disabled="disabled" />
                        <input type="hidden" id="hfNombre" value="@Model.Nombre" name="Nombre" />
                    </td>
                </tr>
                <tr>
                    <td class="label">Empresa:</td>
                    <td>
                        <select id="cbEmpresa" disabled="disabled">
                            <option value="">-SELECCIONE-</option>
                            @foreach (var item in Model.ListaEmpresas)
                            {
                                if (Model.EmpresaId == item.EMPRCODI)
                                {
                                    <option value="@item.EMPRCODI" selected>@item.EMPRNOMB</option>
                                }
                                <option value="@item.EMPRCODI">@item.EMPRNOMB</option>
                            }
                        </select>
                        <input type="hidden" id="hfEmpresa" name="EmpresaNombre" />
                        <input type="hidden" id="hfIdEmpresa" value="@Model.EmpresaId" name="EmpresaId" />
                    </td>
                </tr>
                <tr>
                    <td class="label">Correo coporativo: <span class="boldazul">(*)</span></td>
                    <td>
                        <input type="text" id="txtCorreo" name="Email" maxlength="50" value="@Model.Email" />
                    </td>
                </tr>
                <tr>
                    <td class="label">Teléfono:</td>
                    <td>
                        <input type="text" id="txtTelefono" name="Telefono" maxlength="50" value="@Model.Telefono" />
                    </td>
                </tr>
                <tr>
                    <td class="label">Área Laboral:</td>
                    <td>
                        <input type="text" id="txtArea" name="AreaLaboral" maxlength="50" value="@Model.AreaLaboral" />
                    </td>
                </tr>
                <tr>
                    <td class="label">Cargo:</td>
                    <td>
                        <input type="text" id="txtCargo" name="Cargo" maxlength="50" value="@Model.Cargo" />
                    </td>
                </tr>
            </table>
        </form>
        <div style="width:200px; text-align:center; margin:auto; margin-top:20px">
            <input type="button" id="btnActualizar" value="Actualizar" />
            <input type="button" id="btnCancelar" value="Cancelar" />
        </div>

        <p style="">
            <b><span class="boldazul">(*)</span></b> Campo obligatorio. Se suguiere ingresar correo corporativo.
        </p>

    </div>
    <div id="divResultado" style="display:none">
        <div class="action-exito">Los datos fueron actualizados correctamente.</div>
        <br />
        <div id="divDatosEnviados">
        </div>
    </div>
    <br />
</div> 