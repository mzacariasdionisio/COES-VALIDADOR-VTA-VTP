@model COES.MVC.Extranet.Areas.Account.Models.RepresentanteModel
@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if(Model.IndicadorAcceso)
{ 
    <script src="~/Areas/Account/Content/Scripts/representante.js"></script>

    <div class="form-title">
        <div class="content-titulo" style="text-align:left; padding-left:20px">Usuarios de la empresa: <strong>@Model.EmpresaNombre</strong></div>
        <div class="content-botonera">            
        </div>
    </div>
    <div style="clear:both"></div>
    <div class="content-hijo">
        <div id="mensaje" class="action-message">Desde esta opción puede consultar los datos de los usuarios de la empresa.</div>

        <div id="listado"></div>
        <input type="hidden" id="hfEmpresa" value="@Model.EmpresaId" />
    </div>

    <div id="popupEdicion" class="general-popup" style="min-width:700px">
        <div><span class="button b-close"><span>X</span></span></div>
     
        <div class="popup-text" id="contenidoEdicion">
        </div>
    </div>
}
else
{
    <div class="form-title">
        <div class="content-titulo">Usuarios de la empresa:</div>       
    </div>
    <div class="content-hijo">
        Usted no tiene acceso a este módulo.
    </div>
}

