@model COES.MVC.Extranet.Areas.Coordinacion.Models.RegistroObservacionModel
           
@{
    ViewBag.Title = ".::Registro de Observaciones de señales SCADA::.";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Areas/Coordinacion/Content/Scripts/registroobservacion.js"></script>


@if (!Model.IndicadorEmpresa)
{ 
    <script type="text/javascript">

        $(function () {


            $('#mensaje').removeClass();
            $('#mensaje').addClass('action-alert');
            $('#mensaje').html("Usted no tiene empresas asignadas.");
            $('#cntBusqueda').css('display', 'none');
        });

    </script>
}

<div class="form-title" style="color: #278CCC; margin-bottom:0px;">
   Levantamiento de Observaciones de Señales ICCP   
</div>

<div class="form-main" style="margin-top:10px">

    <div id="mensaje"></div>

    <div class="search-content" style="margin-bottom:0px; padding:10px" id="cntBusqueda">
        <table class="table-search" style="width:auto">
            <tr>
                <td>Empresa:</td>
                <td>
                    <select id="cbEmpresa">                        
                        @foreach (var item in Model.ListaEmpresas)
                        {
                            <option value="@item.Emprcodi">@item.Emprenomb</option>
                        }
                    </select>
                </td>
                <td>Fecha desde:</td>
                <td>
                    <input type="text" id="txtFechaInicio" value="@Model.FechaInicio" />
                </td>
                <td>Fecha hasta:</td>
                <td>
                    <input type="text" id="txtFechaFin" value="@Model.FechaFin" />
                </td>
                <td>
                    <input type="button" id="btnConsultar" value="Consultar" />                    
                </td>
                <td style="width:100px"></td>
                <td style="text-align:right">
                    <a href="~/manuales/Manual_usuario_extranet_observaciones_señales_iccp.pdf" target="_blank" style="color:#278CCC; font-weight:bold">Descargar manual de usuario</a>
                </td>
            </tr>
        </table>
    </div>
    <div style="clear:both; height:20px"></div>

    <div id="listado">
    </div>

    <br />
    <br />
</div>

<div id="popupEdicion" class="general-popup" style="width:600px">
    <div><span class="button b-close"><span>X</span></span></div>
    

    <div class="popup-text" id="contenidoEdicion" style="margin-top:0">

    </div>
</div>

