@model COES.MVC.Extranet.Areas.CortoPlazo.Models.InformacionOperativaModel

@{
    ViewBag.Title = "Información Operativa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Content/Scripts/jquery.easytabs.min.js"></script>
<link href="~/Content/Css/tabs.css" rel="stylesheet" />
<script src="~/Areas/CortoPlazo/Content/Scripts/informacionoperativa.js"></script>
<link href="~/Content/Css/form.css" rel="stylesheet" />
<link href="~/Areas/CortoPlazo/Content/Css/css.css?v=1.20" rel="stylesheet" />
<script src="~/Content/Scripts/plupload.full.min.js"></script>
<link href="~/Areas/CortoPlazo/Content/Css/cssfile.css" rel="stylesheet" />
<script src="~/Content/Scripts/contextmenu.js"></script>
<script src="~/Areas/CortoPlazo/Content/Scripts/multidownload.js"></script>

<div class="form-title_intranet">
    <div class="content-titulo">Información Operativa</div>
</div>

<div class="content-hijo" id="mainLayout">
    <div class="search-content" style="margin-bottom:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Fecha:</td>
                <td><input type="text" id="txtFecha" value="@Model.FechaConsulta" style="width:120px" /></td>

                <td style="padding-left: 15px;">
                    <input type="button" id="btnConsultar" value="Consultar" />
                </td>
            </tr>
            <tr></tr>
        </table>
    </div>

    <table width="100%">
        <tr>
            <td style="width: 400px; vertical-align: top;">
                <div class="popup-title"><span>Información Operativa</span></div>
                <div id="listado">

                </div>
            </td>
            <td style="width:30px"></td>
            <td style="vertical-align: top;">
                <div class="popup-title"><span>Resultados</span></div>
                <div id="folder" hidden>
                    <div class="content-header-file" id="cabecera">
                        <div class="header-boton" id="btn-downloadfile">
                            <img src="~/Areas/CortoPlazo/Content/Images/Download.png" />
                            <span>Descargar<br />archivo</span>
                        </div>
                    </div>
                    <div style="clear:both"></div>

                    <div class="page">
                        <div id="browserDocument"></div>
                    </div>

                    <div id="multiDownload">
                    </div>
                </div>
            </td>
        </tr>
    </table>
</div>



