@model COES.MVC.Extranet.Areas.Eventos.Models.EventoScoModel
@{
    ViewBag.Title = "Recepción de Informes de Falla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Areas/Eventos/Content/Css/css.css" rel="stylesheet" />
<script src="~/Areas/Eventos/Content/Scripts/InformesFalla/Index.js"></script>

<div class="form-title" style="color: #278CCC; margin-bottom:0px;">Recepción de Informes de Falla de la Operación</div>
<div class="content-hijo" id="mainLayout">
    <div class="form-main" style="margin-top:10px">
        <div style="clear:both; height:5px;"></div>
        <div class="search-content" style="margin-bottom:0px; padding:10px">
            <table class="table-search">
                <tr>
                    <td>Fecha inicial:</td>
                    <td><input type="text" id="dtInicio" value="@ViewBag.FechaInicio" /></td>
                    <td>Fecha final:</td>
                    <td><input type="text" id="dtFin" value="@ViewBag.FechaFin" /></td>
                    <td><input type="button" id="btnConsultar" value="Consultar" /></td>
                </tr>
            </table>
        </div>
        <div class='action-message' id='mensajeEventoIndex' style='display:none'></div>
        <div style="clear:both"></div>
        <div class="content-tabla">
            <div class="table-list" id="listado"></div>
            <div style="clear:both; margin-bottom:40px"></div>
        </div>
    </div>
</div>
<div id="popupDetalleEvento" class="general-popup" style="width:650px">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Detalle de Evento</span></div>
    <div class="popup-text" id="contenidoDetalle">
    </div>
</div>
<div id="popupCargaArchivo" class="general-popup" style="width:650px">
    @*<div><span class="button b-close"><span>X</span></span></div>*@
    <div class="popup-title" style="text-align: center;"><span>Detalle de Evento></span></div>
    <div class="popup-text" id="listaArchivosEventos">
    </div>
</div>