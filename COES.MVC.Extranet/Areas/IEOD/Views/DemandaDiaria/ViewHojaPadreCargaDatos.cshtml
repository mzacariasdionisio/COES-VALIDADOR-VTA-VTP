@model COES.MVC.Extranet.Areas.IEOD.Models.DemandaDiariaModel

<script type="text/javascript">
    var numHojaView = '@(Model.IdHoja)';
    //configuración de la hoja
    var config = crearConfigHoja();

    setConfigHoja(config, numHojaView);
    //inicializarHoja(numHoja);
</script>

<div id="formHoja@(Model.IdHoja)">
    <div class="content-hijo" id="mainLayoutMain" style="overflow:auto; background-color:#fff">
        <input type="hidden" id="hfIdEnvio" value="@Model.IdEnvio" />
        <div id="mensaje" class="action-message" style="margin:0; margin-bottom:10px;display:none;">Por favor seleccione empresa y la fecha.</div>
        <div class='action-message' id='mensajeEvento' style='display:none'></div>

        <div class="search-content3">

            <div style="display:table">
                <div style="display:table-row">
                    <div style="display:table-cell;">
                        <div style="display:table">
                            <div style="display:table-row">
                                <div class="celda-item" style="width: 60px; margin-bottom: 6px;">
                                    Empresa:
                                </div>
                                <div class="filtro-contenido" style="display: table-cell; width: 250px; padding-right: 5px;">
                                    <select id="cbEmpresa" name="IdEmpresa" style="width: 190px; margin-bottom: 6px;">
                                    </select>
                                </div>
                                <!--Filtro de fechas-->
                                <div class="cntFecha celda-item" style="width: 60px; display: none">
                                    Fecha:
                                </div>
                                <div class="cntFecha filtro-contenido" style="display: none; padding-right: 5px;">
                                    <input type="text" name="Fecha" id="txtFecha" value="@Model.Dia" style="width:100px" class="filtro-contenido" />
                                </div>

                                <div class="cntSemana celda-item" style="width: 60px; display: none">
                                    Año:
                                </div>
                                <div class="cntSemana filtro-contenido" style="display: table-cell; padding-right: 5px; display: none">
                                    <input type="text" id="Anho" name="Anho" style="width:62px;" value="@Model.Anho" class="filtro-contenido" />
                                </div>
                                <div class="cntSemana celda-item" style="width: 88px; display: none">
                                    Semana:
                                </div>
                                <div class="cntSemana filtro-contenido" style="display: table-cell; padding-right: 5px; display: none">
                                    <div id="divSemana" style="display:inline-block"> </div>
                                </div>

                                <div class="cntMes filtro-contenido divmes" style="width: 190px; display: none">
                                    <div class="celda-item" style="display: inline; width: 80px; ">
                                        Mes-Año:
                                    </div>
                                    <div class="cntMes filtro-contenido" style="display: inline; width: 110px;">
                                        <input type="text" name="Mes" id="txtMes" value="@Model.Mes" style="width:90px;" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div style="display: table-cell;width:100%">
                    </div>
                    <div style="display: table-cell; text-align: right;">
                        <div style="display:table;" id="barra">
                            <div style="display:table-row">
                                <div class="content-action" style="display: none">
                                    <a href="#" id="btnEditarEnvio">
                                        <div class="content-item-action">
                                            <img src="~/Content/Images/edit.png" /><br />
                                            <span>Editar</span>
                                        </div>
                                    </a>
                                </div>

                                <div class="content-action" style="display: table-cell;">
                                    <a href="#" id="btnDescargarFormato">
                                        <div class="content-item-action">
                                            <img src="~/Content/Images/bajar.png" /><br />
                                            <span>Descargar</span>
                                        </div>
                                    </a>
                                </div>
                                <div class="content-action" style="display: table-cell;">
                                    <a href="#" id="btnSelectExcel@(Model.IdHoja)">
                                        <div class="content-item-action">
                                            <img src="~/Content/Images/subir.png" /><br />
                                            <span>Importar</span>
                                        </div>
                                    </a>
                                </div>
                                <div class="content-action" style="display: table-cell;">
                                    <a href="#" id="btnEnviarDatos">
                                        <div class="content-item-action">
                                            <img src="~/Content/Images/enviar.png" /><br />
                                            <span>Enviar</span>
                                        </div>
                                    </a>
                                </div>
                                <div class="content-action" style="display: table-cell;">
                                    <a href="#" id="btnMostrarErrores">
                                        <div class="content-item-action">
                                            <img src="~/Content/Images/errores.png" /><br />
                                            <span>Errores</span>
                                        </div>
                                    </a>
                                </div>
                                <div class="content-action" style="display: table-cell;">
                                    <a href="#" id="btnVerJustificaciones">
                                        <div class="content-item-action">
                                            <img src="~/Content/Images/Pen.png" /><br />
                                            <span>Justificaciones</span>
                                        </div>
                                    </a>
                                </div>
                                <div class="content-action" style="display: table-cell;">
                                    <a href="#" id="btnVerEnvios">
                                        <div class="content-item-action">
                                            <img src="~/Content/Images/envios.png" /><br />
                                            <span>Envíos</span>
                                        </div>
                                    </a>
                                </div>
                                <div class="content-action" style="display: table-cell;">
                                    <a href="#" id="btnLeyenda">
                                        <div class="content-item-action">
                                            <img src="~/Content/Images/leyenda.png" /><br />
                                            <span>Leyenda</span>
                                        </div>
                                    </a>
                                </div>
                                <div class="content-action" style="display: table-cell;">
                                    <a href="#" id="btnExpandirRestaurar">
                                        <div class="content-item-action">
                                            <img src="~/Content/Images/expandir.png" id="imgExpandirContraer" /><br />
                                            <span id="spanExpandirContraer">Expandir</span>
                                        </div>
                                    </a>
                                    <input type="hidden" id="hfExpandirContraer" value="E" />
                                </div>
                                <!--Assetec - 06/02/2020 - Inicio-->
                                <div class="content-action" style="display: table-cell;">
                                    <a href="~/manuales/Manual_Usuario_Extranet_DemandaDiariaSemanal_v1.0.pdf" id="btnManual" >
                                        <div class="content-item-action">
                                            <img src="~/Content/Images/prn-ico-manual.png" />
                                            <span>Manual</span>
                                        </div>
                                    </a>
                                </div>
                                <!--Assetec - 06/02/2020 - Fin-->

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--ASSETEC: 201909 / para mostrar quitar filtro_grilla2 el 2 y el none-->
        <div class="search-content2" id="filtro_grilla2" style="display:none;">
            <div style="display:table">
                <div style="display:table-row">
                    <div class="filtro-label" style="display: table-cell; width: 50px;">
                        <label>Area</label>
                    </div>
                    <div class="filtro-contenido div_area" style="display:table-cell;width:120px;">
                        <select id="cbArea"></select>
                    </div>
                    <div class="filtro-label" style="display: table-cell; width: 80px;">
                        <label>Sub Estación</label>
                    </div>
                    <div class="filtro-contenido div_subestacion" style="display:table-cell;width:150px;">
                        <select id="cbSubestacion" style="width:120px;"></select>
                    </div>
                </div>
            </div>
        </div>

        <div style="clear:both; height: 15px"></div>

        <div class="content-tabla">
            <div id="tab-container" class='tab-container' style="display: none">
                <ul class='etabs'></ul>
                <div class='panel-container'>
                </div>
            </div>
        </div>

        <div style="clear:both; height:30px"></div>

        <input type="hidden" id="hfHojaMain" value="@Model.IdHoja" />
        <input type="hidden" id="hfIdEnvio" value="@Model.IdEnvio" />
        <input type="hidden" id="hfFormato" value="@Model.IdFormato" />
        <input type="hidden" id="hfFormatPeriodo" value="@Model.Periodo" />
        <input type="hidden" id="hfEmpresa" value="@Model.IdEmpresa" />
        <input type="hidden" id="hfFecha" value="@Model.Fecha" />
        <input type="hidden" id="hfAnho" value="@Model.Anho" />
        <input type="hidden" id="hfSemana" value="@Model.NroSemana" />
        <input type="hidden" id="hfMes" value="@Model.Mes" />
    </div>
</div>