@model COES.MVC.Extranet.Areas.IEOD.Models.GestionAdministradorModel
@{
    ViewBag.Title = "Listado de Envío";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Css/multiselect.css" rel="stylesheet" />
<script src="~/Content/Scripts/multiselect.js"></script>

<script src="~/Content/Scripts/Formato/Hoja/global.js?v=1.3"></script>
<script src="~/Content/Scripts/Formato/Hoja/hojaGlobal.js?v=2.0.8"></script>
<script src="~/Content/Scripts/Formato/Hoja/hojaFormatoGrilla.js?v=1.3"></script>
<script src="~/Content/Scripts/Formato/Hoja/hojaFormato.js?v=1.3"></script>
<script src="~/Areas/IEOD/Content/Scripts/administradorListadoEnvio.js"></script>

<div class="form-title_intranet">
    <div class="content-titulo">Consulta Histórica de Envíos</div>
    <div class="content-botonera">
        <input type="button" id="btnBuscar" value="Consultar" />
        <input type="button" id="btnExportar" value="Exportar" />
    </div>
</div>

<div class="content-hijo" id="mainLayout">
    <div class="search-content">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Formato:</td>
                <td>
                    <select id="cbFormato" style="width: 330px;">
                        @foreach (var item in Model.ListaFormato)
                        {
                            <option value="@item.Formatcodi">@item.Formatnombre</option>
                        }
                    </select>
                </td>

                <td>Empresa:</td>
                <td style="width:200px;">
                    <div id="empresas"></div>
                </td>
            </tr>
            <tr>
                <td>Estado:</td>
                <td>
                    <select id="cbEstado" multiple="multiple">
                        @foreach (var item in Model.ListaEstadoEnvio)
                        {
                            <option value="@item.Estenvcodi">@item.Estenvnombre</option>
                        }
                    </select>
                    <input type="hidden" id="hfEstado" />
                </td>

                <td>Fecha Desde:</td>
                <td><input type="text" id="fechaInicio" name="fechaInicio" value="@Model.FechaInicio" /></td>
                <td>Fecha Hasta:</td>
                <td><input type="text" id="fechaFin" name="fechaFin" value="@Model.FechaFin" /></td>
            </tr>

        </table>
    </div>

    <div class="content-tabla">
        <div class="tabla-header">
            <div class="table-paginado" id="paginado"></div>
        </div>
        <div style="clear:both; height:5px"></div>
        <div class="table-list" id="listado"></div>
    </div>
</div>

