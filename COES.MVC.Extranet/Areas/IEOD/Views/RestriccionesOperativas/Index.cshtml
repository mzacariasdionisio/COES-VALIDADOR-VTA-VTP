@model COES.MVC.Extranet.Areas.IEOD.Models.RestriccionesOperativasModel
@{
    ViewBag.Title = "Restricciones operativas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Content/Scripts/plupload.full.min.js"></script>
<script src="~/Content/Scripts/Formato/global.js?v=1.7.1"></script>
<script src="~/Content/Scripts/Formato/panelEnvio.js?v=1.7.8"></script>
<script src="~/Areas/IEOD/Content/Scripts/restricciones.js?v=1.7.8"></script>
<script src="~/Content/Scripts/Formato/mensajes.js?v=1.7.1"></script>
<script src="~/Content/Scripts/moment.js"></script>
<script src="~/Content/Scripts/jquery.plugin.js"></script>
<script src="~/Content/Scripts/inputmaskmin.js"></script>

<link href="~/Content/Css/Formato/panelEnvio.css?v=1.7.8" rel="stylesheet" />
<link href="~/Content/Css/jquery.timeentry.css" rel="stylesheet">
<link href="~/Content/Css/css.css?v=1.1" rel="stylesheet" />
<link href="~/Areas/IEOD/Content/Css/formulario.css" rel="stylesheet" />
<link href="~/Areas/IEOD/Content/Css/css.css" rel="stylesheet" />

<style>
    .content-action {
        text-align: center;
        padding-left: 6px;
        padding-right: 6px;
        padding-bottom: 5px;
    }
</style>

<div class="form-title_intranet">
    <div class="content-titulo">Restricciones Operativas</div>
</div>

<div class="content-hijo" id="mainLayout">

    <div id="mensaje" class="action-message" style="margin:0; margin-bottom:10px">Por favor seleccione empresa y la fecha.</div>
    <div class='action-message' id='mensajeEvento' style='display:none'></div>

    <input type="hidden" id="hfIdEnvio" value="@Model.IdEnvio" />
    <input type="hidden" id="hfIdSubcausacodi" value="@Model.Subcausacodi" />

    <div class="search-content3">
        <div style="display:table;width:100%">
            <div style="display:table-row">
                <div style="display:table-cell;">
                    <div style="display:table">
                        <div style="display:table-row">
                            <div class="celda-item" style="display:table-cell;width:150px;">
                                Empresa:
                            </div>
                            <div class="filtro-contenido" style="display: table-cell; width: 250px; padding-right: 5px;">
                                <select id="cbEmpresa" name="IdEmpresa" style="width:250px;">
                                    @foreach (var item in Model.ListaEmpresas)
                                    {
                                        <option value="@item.Emprcodi">@item.Emprnomb</option>
                                    }
                                </select>
                            </div>
                            <div class="celda-item" style="display:table-cell;width:30px;">
                                Fecha:
                            </div>
                            <div class="filtro-contenido" style="display: table-cell;  padding-right: 5px;">
                                <input type="text" id="txtFecha" name="Fecha" value="@Model.Fecha" style="width: 95px" />
                            </div>
                            <div class="celda-item" style="display:table-cell;width:30px;">
                                <input type="button" id="btnConsultar" value="Aceptar" />
                            </div>

                        </div>
                    </div>
                </div>
                <div style="display: table-cell;width:100%;">
                </div>
                <div style="display: table-cell; text-align: right;">
                    <div style="display:none;" id="barraRestriccionesOperativas">
                        <div style="display:table-row">

                            <div class="content-action" style="display: table-cell;">
                                <a href="#" id="btnAgregarRestriccion" style="display: none">
                                    <div class="content-item-action">
                                        <img src="~/Areas/IEOD/Content/Images/btn-add.png" /><br />
                                        <span>Agregar</span>
                                    </div>
                                </a>
                            </div>
                            <div class="content-action" style="display: none;">
                                <a href="#" id="btnCopiarRestriccion" style="display:none;">
                                    <div class="content-item-action">
                                        <img src="~/Areas/IEOD/Content/Images/continuar.jpg" /><br />
                                        <span>Copiar</span>
                                    </div>
                                </a>
                            </div>
                            <div class="content-action" style="display: table-cell;">
                                <a href="#" id="btnVerEnvios">
                                    <div class="content-item-action">
                                        <img src="~/Areas/IEOD/Content/Images/envios.png" /><br />
                                        <span>Envíos</span>
                                    </div>
                                </a>
                            </div>
                            <div class="content-action" style="display: table-cell;">
                                <a href="#" id="btnEnviarDatos">
                                    <div class="content-item-action">
                                        <img src="~/Areas/IEOD/Content/Images/enviar.png" /><br />
                                        <span>Enviar</span>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="content-tabla">
        <div style="clear:both; height:5px"></div>
        <div class="table-list" id="listado"></div>
    </div>

    <div id="newRestricciones" style="z-index:9999999999;">
        <span class="button b-close"><span>X</span></span>
        <div class="popup-title"><span>Registro de Restricciones Operativas</span></div>
        <div id="idRestricciones">

        </div>
    </div>

    <div id="enviosanteriores" style="z-index:9999999998;">
        <span class="button b-close"><span>X</span></span>
        <div class="popup-title"><span>Envios Anteriores</span></div>
        <div id="idEnviosAnteriores">
        </div>
    </div>

    <div style="clear:both; height:30px"></div>

</div>
<div class="panel-ieod" id="idIeod"></div>