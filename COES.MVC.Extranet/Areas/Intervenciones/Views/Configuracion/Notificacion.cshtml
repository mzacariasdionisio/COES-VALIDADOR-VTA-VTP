@model COES.MVC.Extranet.Areas.Intervenciones.Models.NotificacionModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Configuración de mensajes";
}

<script src="~/Areas/Intervenciones/Content/Scripts/Configuracion/notificacion.js"></script>

<div class="form-title">
    Configuración de notificación de mensajes
</div>

<div class="form-main">
    <div id="mensaje" class="action-message">Seleccione los tipos de notificaciones que desea recibir</div>
    <div id="detalleFormato">

        


    </div>
    <br />
    <br />
    <div style="width:100px; margin:auto">
        <input type="button" value="Aceptar" id="btnAceptar" />
    </div>
</div>

<div id="popupConfirmacion" class="general-popup">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Confirmar operación</span></div>
    <div class="popup-text" id="contenidoError">
        <strong>
            ¿Está seguro de realizar esta operación?
        </strong>
        <br />
        <br />
        <div>
            <input type="button" value="Confirmar" id="btnConfirmar" />
            <input type="button" value="Cancelar" id="btnCancelar" />
        </div>
    </div>
</div>


<div id="popupHistorico" class="general-popup" style="min-width:900px">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Histórico de Cambios</span></div>
    <div class="popup-text" id="contenidoHistorico">

    </div>
</div>
