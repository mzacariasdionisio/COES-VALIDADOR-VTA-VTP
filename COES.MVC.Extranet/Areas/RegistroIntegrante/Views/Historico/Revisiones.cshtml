@model COES.MVC.Extranet.Areas.RegistroIntegrante.Models.ReporteModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Areas/RegistroIntegrante/Content/Scripts/HistoricoRevisiones.js?v=1.11"></script>
<div class="form-title" style="color: #278CCC; margin-bottom:0px;">HISTÓRICO DE REVISIONES</div>
<div class="form-main" style="margin-top:10px">
    <div id="mensaje"></div>
    <div style="clear:both; height:5px;"></div>
    <div class="search-content" style="margin-bottom:0px; padding:10px">
        <table class="table-search">
            <tr>
                <td>Fecha Desde:</td>
                <td>
                    <input type="text" id="FechaDesde" name="FechaInicio" value="@Model.FechaInicio" />
                </td>
                <td>Fecha Hasta:</td>
                <td>
                    <input type="text" id="FechaHasta" name="FechaFin" value="@Model.FechaFin" />
                </td>
                <td>Empresa:</td>
                <td>
                    <select id="cbEmpresa" name="IdEmpresa" style="width:200px">
                        @foreach (var item in Model.ListaEmpresas)
                        {
                            <option value="@item.EMPRCODI">@item.EMPRNOMB</option>
                        }
                    </select>
                    <input type="hidden" id="hfEmpresa" value="@Model.IdEmpresa" />
                </td>
                <td>Revisión:</td>
                <td>
                    <select id="cbTipoRevision" style="width:140px">
                        @foreach (var item in Model.ListaTipoRevision)
                        {
                            <option value="@item.TipoRevisionCodigo">@item.TipoRevisionDescripcion</option>
                        }
                    </select>
                </td>
                <td>
                    <input type="button" id="btnConsultar" value="Consultar" />
                </td>
                <td>
                    <a href="JavaScript:ExportarExcel();" title="Exportar a Excel">
                        <img src="~/Content/Images/ExportExcel.png" width="30" height="30" />
                    </a>
                </td>
                <td></td>
            </tr>
        </table>
    </div>
    <div style="clear:both"></div>
    <div class="content-tabla">
        <div class="tabla-header">
            <div class="table-paginado" id="paginado"></div>
        </div>
        <div class="table-list" id="listado"></div>
        <div style="clear:both; margin-bottom:40px"></div>
    </div>

</div>