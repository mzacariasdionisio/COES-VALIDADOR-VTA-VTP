        box-shadow: 2px 2px 10px rgba(0,0,0,0.3);
        transition: transform 0.3s ease;
    }

        .btn-wsp:hover {
            transform: scale(1.1);
        }

        .btn-wsp img {
            width: 100%;
            height: auto;
            border-radius: 50%;
        }
