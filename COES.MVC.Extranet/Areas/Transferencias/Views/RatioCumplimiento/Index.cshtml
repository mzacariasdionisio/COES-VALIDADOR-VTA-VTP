@model COES.Dominio.DTO.Transferencias.TipoEmpresaDTO

@{
    ViewBag.Title = "Transferencias - Ratios de Cumplimiento";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var tipoempresa = (IEnumerable<SelectListItem>)TempData["Tipoemprcodigo"];
    var periodo = (IEnumerable<SelectListItem>)TempData["Pericodigo"];
}

<link href="~/Areas/Transferencias/Content/Css/Transferencia.css" rel="stylesheet" />
<script src="~/Areas/Transferencias/Content/Scripts/ratiocumplimiento.js"></script>

<div class="ast">
    <div class="form-title">RATIOS DE CUMPLIMIENTO POR MES DE VALORIZACIÓN</div>

    <div class="content-hijo" style="padding-top:8px">
        <div class="content-busqueda" style="border-style: double; border-width: 1px; border-color: #2980B9; border-radius: 5px;">
            <table cellpadding="5" cellspacing="2" style="width:100%;">
                <tr class="THCabecera" style="color:#FFFFFF; background-color:#2980B9;">
                    <td colspan="6"><div class="editor-label"><b>Filtros de búsqueda</b></div></td>
                </tr>
                <tr>
                    <td><div class="editor-label">PERIODO</div></td>
                    <td><div class="editor-field">@Html.DropDownList("Pericodi", @periodo, "--Seleccione--")</div></td>
                    <td>
                        <div class="editor-label">Versión </div>
                    </td>
                    <td>
                        <div class="editor-field">
                            <select id="Version" style="width:100px;"></select>
                        </div>
                    </td>
                    <td><div class="editor-label">TiPO EMPRESA</div></td>
                    <td><div class="editor-field">@Html.DropDownList("Tipoemprcodi", @tipoempresa, "--Seleccione--")</div></td>
                </tr>
                <tr>
                    <td colspan="6" style="text-align:center;">
                        <div class="busqueda-item"><input type="button" id="btnGenerarExcel" value="Generar Excel" />&nbsp;&nbsp;&nbsp;<input type="button" id="btnBuscar" value="Consultar" /></div>
                    </td>
                </tr>
            </table>
        </div>
        <br />
        <div class="listado" id="listado"></div>
    </div>
</div>

<!-- Botón flotante de WhatsApp -->
<a href="https://wa.me/51905469444" class="wsp" target="_blank" title="¿Necesitas ayuda? Escríbenos por WhatsApp">
    <img src="https://img.icons8.com/color/48/000000/whatsapp--v1.png" alt="WhatsApp">
</a>

<style>
    .wsp {
        position: fixed;
        width: 60px;
        height: 60px;
        bottom: 20px;
        right: 20px;
        z-index: 9999;
        cursor: pointer;
        border-radius: 50%;
        box-shadow: 2px 2px 10px rgba(0,0,0,0.3);
        transition: transform 0.3s ease;
    }

        .wsp:hover {
            transform: scale(1.1);
        }

        .wsp img {
            width: 100%;
            height: auto;
            border-radius: 50%;
        }
</style>