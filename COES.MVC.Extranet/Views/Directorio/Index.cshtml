@model COES.MVC.Extranet.Models.DirectorioModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Indicador == 1) { 

<script src="~/Content/Scripts/directorio.js"></script>

<div class="form-title">DIRECTORIO COES</div>

<div class="form-main">

    <div class="search-content" style="margin-bottom:0px; padding:10px">
        <table class="table-search">
            <tr>
                <td>Área:</td>
                <td>
                    <select id="cbArea" style="width:300px">
                        <option value="-1">TODOS</option>
                        @foreach (var item in Model.ListaAreas)
                        { 
                            <option value="@item.Areacodi">@item.Areanomb</option>
                        }
                    </select>
                </td>        
                <td>
                    <input type="button" id="btnConsultar" value="Consultar" />
                </td>
            </tr>
        </table>
    </div>
    <div style="clear:both"></div>
    <div class="content-tabla">
        <div class="tabla-header">
            <div class="table-paginado" id="paginado"></div>
        </div>
        <div class="table-list" id="listado"></div>
        <div style="clear:both; margin-bottom:40px"></div>
    </div>
</div>
    
    <div id="popupEdicion" class="general-popup" style="width:500px">
        <div><span class="button b-close"><span>X</span></span></div>
        <div class="popup-title"><span>Edición de Anexo Alternativo</span></div>
        <div class="popup-text" id="contenidoEdicion">

        </div>
    </div>

}
else{
    <div class="action-alert">No tiene acceso.</div>
}

