@model COES.MVC.Intranet.Areas.Admin.Models.AccesoModeloModel

<div class="popup-title">
    <span>Configuración Acceso</span>
</div>

<div class="content-registro">

    <form id="frmRegistroAcceso">
        <div id="mensajeAcceso" class="action-message">Ingrese los datos solicitados.</div>
        <table style="width:100%">

            <tr style="display:none">
                <td class="registro-label">Número de veces permitidas:</td>
                <td class="registro-control">
                    <input type="text" id="txtNroVeces" name="NroVeces" value="@Model.NroVeces" />
                </td>
            </tr>
            <tr>
                <td class="registro-label">Activo desde:</td>
                <td class="registro-control">
                    <input type="text" id="txtActivoDesde" name="ActivoDesde" value="@Model.ActivoDesde" />
                </td>
            </tr>
            <tr>
                <td class="registro-label">Hasta:</td>
                <td class="registro-control">
                    <input type="text" id="txtActivoHasta" name="ActivoHasta" value="@Model.ActivoHasta"  />
                </td>
            </tr>
           
        </table>

        <div style="width:200px; margin:auto; text-align:center; margin-top:20px">
            <input type="button" id="btnGrabarAcceso" value="Grabar" />
            <input type="button" id="btnCancelarAcceso" value="Cancelar" />
        </div>

        <input type="hidden" id="hfAccesoCorreo" value="@Model.IdEmpresaCorreo" name="IdEmpresaCorreo" />
        <input type="hidden" id="hfAccesoEmpresa" value="@Model.IdEmpresa" name="IdEmpresa" />
        <input type="hidden" id="hfAccesoModulo" value="@Model.IdModulo" name="IdModulo" />
      

    </form>
</div>
