@model COES.MVC.Intranet.Areas.Admin.Models.ContactoModel
@{
    ViewBag.Title = "Administración de Contactos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Areas/Admin/Content/Scripts/contacto.js?v=1.0"></script>
<link href="~/Content/Css/form.css" rel="stylesheet" />

<div class="form-title">
    <div class="content-titulo">Administración de Contactos</div>
    <div class="content-botonera">
        <input type="button" id="btnComites" value="Gestionar Comités" />
        <input type="button" id="btnProcesos" value="Gestionar Procesos" />
        <input type="button" id="btnNuevo" value='Nuevo' />
        <input type="button" id="btnExportar" value='Exportar' />
    </div>
</div>

<div class="content-hijo">

    <div id="mensaje"></div>

    <div class="search-content" style="margin-bottom:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Tipo de empresa:</td>
                <td>
                    <select id="cbTipoEmpresa">
                        <option value="">-TODOS-</option>
                        @foreach (var item in Model.ListaTipoEmpresas)
                        {
                            <option value="@item.Tipoemprcodi">@item.Tipoemprdesc</option>
                        }
                    </select>
                </td>
                <td>Empresa:</td>
                <td>
                    <select id="cbEmpresa">
                        <option value="">-TODOS-</option>
                        @foreach (var item in Model.ListaEmpresas)
                        {
                            <option value="@item.Emprcodi">@item.Emprnomb</option>
                        }
                    </select>
                </td>
                <td>Fuente:</td>
                <td>
                    <select id="cbFuente">
                        <option value="">-TODOS-</option>
                        <option value="R">Registro Integrantes</option>
                        <option value="C">Comités</option>
                        <option value="E">Extranet</option>
                        <option value="O">Otros</option>
                  
                    </select>
                </td>
                <td id="tdComite">
                    Comité:
                    <select id="cbComite">
                        <option value="">-TODOS-</option>
                        @foreach (var item in Model.ListaComite)
                        {
                            <option value="@item.Comitecodi">@item.Comitename</option>
                        }
                    </select>
                </td>
                <td id="tdProceso">
                    Proceso:
                    <select id="cbProceso">
                        <option value="-1">-TODOS-</option>
                        @foreach (var item in Model.ListaProceso)
                        {
                            <option value="@item.Procesocodi">@item.Procesoname</option>
                        }
                    </select>
                </td>
                <td id="tdListas">
                    Listas:
                    <select id="cbListas">
                        <option value="-1">-TODOS-</option>
                    </select>
                </td>
                <td>
                    <input type="button" id="btnConsultar" value="Consultar" />
                </td>
            </tr>
        </table>
    </div>

    <div id="listado">
    </div>

    <br />
    <br />
</div>

<div id="popupEdicion" class="general-popup" style="width:600px; margin:5px;">
    <div><span class="button b-close"><span>X</span></span></div>

    <div class="popup-text" id="contenidoEdicion" style="margin-top:0">

    </div>
</div>

<div id="popupNuevoContacto" class="general-popup" style="width:300px">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Agregar Nuevo Contacto</span></div>
    <div class="popup-text">
        <div class="formulario-boton">
            <input id="btnNuevoComite" class="btnok" type="button" value="Comité" />
            <input id="btnNuevoProceso" type="button" value="Proceso" />
        </div>
    </div>
</div>

<input type="hidden" id="hfIndicadorPublico" value="N" />
