@model COES.MVC.Intranet.Areas.Admin.Models.EmpresaModel
@{
    ViewBag.Title = "Administración de Empresas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Areas/Admin/Content/Scripts/empresa.js?v=6.5"></script>
<link href="~/Areas/Admin/Content/css.css" rel="stylesheet" />
<script src="~/Areas/Admin/Content/Scripts/app-common.js"></script>
<script src="~/Areas/Admin/Content/Scripts/empresa.js?v=6.45"></script>



@if (Model.Indicador == "S") { 
    
    <script type="text/javascript">SS

        $(function () {
            $('#cntMenu').hide();
            $('.header').hide();
            $('.content-header').hide();
            $('.footer').hide();           
        });
        
    </script>
}

<div class="form-title">
    <div class="content-titulo">Administración de Empresas</div>
    <div class="content-botonera">                
        @if (Model.IndicadorGrabar == "S") { 
            <input type="button" id="btnNuevo" value='Nuevo' />
        }
        <input type="button" id="btnExportar" value='Exportar' />
    </div>
</div>

<div class="content-hijo" id="mainLayout">

    <div id="mensaje"></div>

    <div class="search-content" style="margin-bottom:10px" id="cntBusqueda">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Nombre:</td>
                <td>
                    <input type="text" id="txtNombreFiltro" />
                </td>
                <td>RUC:</td>
                <td>
                    <input type="text" id="txtRucFiltro" />
                </td>
                <td>Tipo Empresa:</td>
                <td>
                    <select id="cbTipoEmpresaFiltro">
                        <option value="-2">-TODOS-</option>
                        @foreach (var item in Model.ListaTipoEmpresa)
                        {
                            <option value="@item.Tipoemprcodi">@item.Tipoemprdesc</option>
                        }
                    </select>
                </td>
                <td>Estado:</td>
                <td>
                    <select id="cbEstadoFiltro">
                        <option value="-1">-TODOS-</option>
                        <option value="A">Activo</option>
                        <option value="B">Baja</option>                        
                    </select>
                </td>
                <td>Empresa SEIN:</td>
                <td>
                    <select id="cbSeinFiltro">
                        <option value="-1">-TODOS-</option>
                        <option value="S">Si</option>
                        <option value="N">No</option>
                    </select>
                </td>
                <td>
                    <input type="button" id="btnConsultar" value='Consultar' />
                </td>
            </tr>
        </table>
    </div>

    <div class="content-tabla">
        <div class="tabla-header" >
            <div class="table-paginado" id="paginado" ></div>
        </div>
        <div style="clear:both;height:5px"></div>
        <div class="table-list" id="listado"></div>
    </div>
    <input type="hidden" id="hfNroPagina" name="NroPagina" value="1" />
    <input type="hidden" id="hfIndicadorGrabar" value="@Model.IndicadorGrabar" />

</div>

<input type="hidden" id="hfIndicador" value="@Model.Indicador" />

<br />
<br />

<div id="popupDetalle" class="general-popup" style="width:650px">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Datos de la Empresa</span></div>
    <div class="popup-text" id="contenidoDetalle">
    </div>
</div>
