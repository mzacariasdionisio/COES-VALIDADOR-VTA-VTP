@model COES.MVC.Intranet.Areas.Admin.Models.EmpresaModel
@{
    ViewBag.Title = "Vigencia de Empresa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Css/table.css" rel="stylesheet" />
<link href="~/Content/Css/multiselect.css" rel="stylesheet" />
<script src="~/Content/Scripts/multiselect.js"></script>

<link href="~/Areas/Admin/Content/css.css?v=1.1" rel="stylesheet" />
<script src="~/Areas/Admin/Content/Scripts/vigencia.js"></script>

<div class="form-title">
    <div class="content-titulo">Vigencia de Empresa</div>
    <div class="content-botonera">
        <input type="button" id="btnConsultar" value="Consultar" />
    </div>
</div>

<div class="content-hijo" id="mainLayout">
    <div class="search-content">
        <table class="content-tabla-search" style="width: auto">
            <tbody>
                <tr>
                    <td class="tbform-label">Empresa:</td>
                    <td>
                        <select id="empresa" style="width: 350px">
                            <option value="0">-SELECCIONE-</option>
                            @foreach (var item in Model.ListaEmpresa)
                            {
                                <option value="@item.Emprcodi">@item.EmprnombAnidado</option>
                            }
                        </select>

                    </td>
                </tr>
                <tr>
                    <td class="tbform-label">Fecha Consulta:</td>
                    <td>
                        <input type="text" id="txtFecha" value="@Model.Fecha" />
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="content-tabla">
        <div class="table-list" id="listado"></div>
    </div>

    <div style="clear:both; height:30px"></div>

</div>