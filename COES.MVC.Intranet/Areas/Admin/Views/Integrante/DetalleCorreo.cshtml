@model COES.MVC.Intranet.Areas.Admin.Models.IntegranteModel

<div class="popup-title">
    <span>Registro de Cuentas de Correo</span>
</div>

<div class="content-registro">

    <form id="frmRegistro">
        <div id="mensajeCuenta" class="action-message">Por favor complete los datos</div>
        <table style="width:100%">

            <tr>
                <td class="registro-label">Nombre:</td>
                <td class="registro-control">
                    <input type="text" id="txtNombreCuenta" name="NombreCuenta" value="@Model.EmpresaCorreo.Empcornomb" />
                </td>
            </tr>
            <tr>
                <td class="registro-label">Correo:</td>
                <td class="registro-control">
                    <input type="text" id="txtCorreoCuenta" name="CorreoCuenta" value="@Model.EmpresaCorreo.Empcoremail" />
                </td>
            </tr>
            <tr>
                <td class="registro-label">Cargo:</td>
                <td class="registro-control">
                    <input type="text" id="txtCargo" name="CargoCuenta" value="@Model.EmpresaCorreo.Empcorcargo" />
                </td>
            </tr>

            <tr>
                <td class="registro-label">Teléfono:</td>
                <td class="registro-control">
                    <input type="text" id="txtTelefono" name="TelefonoCuenta" value="@Model.EmpresaCorreo.Empcortelefono" />
                </td>
            </tr>

            <tr>
                <td class="registro-label">Móvil:</td>
                <td class="registro-control">
                    <input type="text" id="txtMovil" name="MovilCuenta" value="@Model.EmpresaCorreo.Empcormovil" />
                </td>
            </tr>
            <tr>
                <td class="registro-label">¿Incluir en notificación?:</td>
                <td class="registro-control">
                    <select id="cbIncluirNotificacion" name="IncluirNotificacion">
                        <option value="S">Si</option>
                        <option value="N">No</option>
                    </select>
                    <input type="hidden" id="hfIncluirNotificacion" value="@Model.EmpresaCorreo.Empcorindnotic" />
                </td>
            </tr>
            <tr>
                <td class="registro-label">Estado:</td>
                <td class="registro-control">
                    <select id="cbEstadoCuenta" name="EstadoCuenta">
                        <option value="">-SELECCIONE-</option>
                        <option value="A">Activo</option>
                        <option value="B">Baja</option>
                    </select>
                    <input type="hidden" id="hfEstadoCuenta" value="@Model.EmpresaCorreo.Empcorestado" />
                </td>
            </tr>
        </table>

        <div style="width:200px; margin:auto; text-align:center; margin-top:20px">
            <input type="button" id="btnGrabarCuenta" value="Grabar" />
            <input type="button" id="btnCancelarCuenta" value="Cancelar" />
        </div>

        <input type="hidden" id="hfIdCuenta" name="CodigoCuenta" value="@Model.EmpresaCorreo.Empcorcodi" />
        <input type="hidden" id="hfCuentaEmpresa" name="EmpresaCuenta" value="@Model.EmpresaCorreo.Emprcodi" />

    </form>
</div>
