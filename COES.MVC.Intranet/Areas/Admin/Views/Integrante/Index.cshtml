@model COES.MVC.Intranet.Areas.Admin.Models.IntegranteModel
@{
    ViewBag.Title = "Administración de Accesos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Areas/Admin/Content/Scripts/integrante.js?v=6.31"></script>

<div class="form-title">
    <div class="content-titulo">Accesos al Portal de Trámite Virtual</div>
    <div class="content-botonera">
        <input type="button" id="btnGenerarMasivo" value="Generar credenciales" style="display:none" />
    </div>
</div>

<div class="content-hijo" id="mainLayout">

    <div id="mensaje" class="action-message">Seleccione cada empresa para generar claves de acceso al Portal de Trámite Virtual</div>

    <div class="search-content" style="margin-bottom:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>

                <td>Tipo Agente:</td>
                <td>
                    <select id="cbTipoAgente">
                        <option value="S">Integrante</option>
                        <option value="N">No Integrante</option>
                    </select>
                </td>
                <td>Tipo Empresa:</td>
                <td>
                    <select id="cbTipoEmpresa">
                        <option value="0">TODOS</option>
                        <option value="1">TRANSMISIÓN</option>
                        <option value="2">DISTRIBUCIÓN</option>
                        <option value="3">GENERACIÓN</option>
                        <option value="4">USUARIOS LIBRES</option>
                    </select>
                </td>
                <td>Acceso Virtual</td>
                <td>
                    <select id="cbUsuarioTramite">
                        <option value="-1">TODOS</option>
                        <option value="S">SI</option>
                        <option value="N">NO</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td>RUC</td>
                <td>
                    <input type="text" id="txtRUC" />
                </td>
                <td>Nombre / Razón Social</td>
                <td>
                    <input type="text" id="txtRazonSocial" />
                </td>
                <td>
                    <input type="button" id="btnConsultar" value="Consultar" />
                    <input type="button" id="btnExportar" value="Exportar personas de contacto" />
                </td>
            </tr>
        </table>
    </div>


    <div class="content-tabla">
        <div class="tabla-header">
            <div class="table-paginado" id="paginado"></div>
        </div>
        <div style="clear:both;height:5px"></div>
        <div class="table-list" id="listado"></div>
    </div>
    <input type="hidden" id="hfNroPagina" name="NroPagina" value="1" />
    <br />
    <br />
    <br />

</div>


<div id="popupDetalle" class="general-popup" style="width:1000px">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Datos de la Empresa</span></div>
    <div class="popup-text" id="contenidoDetalle">
    </div>
</div>
