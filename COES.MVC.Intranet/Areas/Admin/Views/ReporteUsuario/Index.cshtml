@model COES.MVC.Intranet.Areas.Admin.Models.ReporteUsuarioModel
@{
    ViewBag.Title = "Reporte de Usuarios Extranet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Areas/Admin/Content/Scripts/reporteusuario.js"></script>

<div class="form-title">
    <div class="content-titulo">Reporte de Usuarios</div>
    <div class="content-botonera">
        <input type="button" id="btnConsultar" value='Consultar' />
        <input type="button" id="btnExportar" value='Exportar' />
    </div>
</div>

<div class="content-hijo">

    <div id="mensaje"></div>

    <div class="search-content" style="margin-bottom:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Empresa:</td>
                <td>
                    <select id="cbEmpresa">
                        <option value="">-TODOS-</option>
                        @foreach (var item in Model.ListaEmpresas)
                        {
                            <option value="@item.EMPRCODI">@item.EMPRNOMB</option>
                        }
                    </select>
                </td>
                <td>Estado:</td>
                <td>
                    <select id="cbEstado">
                        <option value="0">-TODOS-</option>
                        <option value="A">Activo</option>
                        <option value="P">Pendiente</option>
                        <option value="B">Baja</option>
                    </select>
                </td>                
            </tr>
        </table>
    </div>

    <div id="listado">
        @Model.Resultado
    </div>

    <br />
    <br />
</div>

<div id="popupDetalle" class="general-popup" style="width:650px">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Lista de Usuarios</span></div>
    <div class="popup-text" id="contenidoDetalle">

    </div>
</div>
