@model COES.MVC.Intranet.Areas.Admin.Models.RepresentanteModel

<table border="0" class="pretty tabla-icono" id="tabla">
    <thead>
        <tr>
            <th style="width:80px">Acciones</th>
            <th>Empresa</th>
            <th>Login</th>
            <th>Correo</th>
            <th>Nombre</th>
            <th>Teléfono</th>
            <th>Celular</th>
            <th style="width:90px">Estado</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.ListaUsuarios.Count > 0)
        {
            foreach (var item in Model.ListaUsuarios)
            {
                <tr>
                    <td style="width:80px">
                        <a href="JavaScript:editar(@item.UserCode);"><img src="~/Content/Images/btn-edit.png" title="Editar los datos" /></a>
                        <a href="JavaScript:darbaja(@item.UserCode)"><img src="~/Content/Images/btn-cancel.png" title="Dar de baja al usuario" /></a>
                        <a href="JavaScript:generarClave(@item.UserCode)"><img src="~/Content/Images/btn-add.png" title="Generar nueva clave" /></a>
                    </td>
                    <td>@item.EmpresaNombre</td>
                    <td>@item.UserLogin</td>
                    <td>@item.UserEmail</td>
                    <td>@item.UsernName</td>
                    <td>@item.UserTlf</td>
                    <td>@item.Usermovil</td>
                    <td style="width:90px">
                        @if (item.UserState == "P")
                        {
                            <span style="color:#ffd800">Pendiente</span>
                        }
                        else if (item.UserState == "A")
                        {
                            <span style="color:green">Activo</span>
                        }
                        else if (item.UserState == "B")
                        {
                            <span style="color:#ff0000">Baja</span>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>