@model COES.MVC.Intranet.Areas.Admin.Models.RepresentanteModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Areas/Admin/Content/Scripts/represetante.js?v=1"></script>

<div class="form-title">
    <div class="content-titulo">Representantes Legales</div>
    <div class="content-botonera">      
        <input type="button" id="btnSalir" value="Cancelar" />        
    </div>
</div>

<div class="content-hijo">
    <div id="mensaje" class="action-message">Listado de representantes legales de las empreas.</div>
    
    <div class="search-content" style="margin-bottom:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Tipo de empresa:</td>
                <td>
                    <select id="cbTipoEmpresa">
                        <option value="">-TODOS-</option>
                        @foreach (var item in Model.ListaTipoEmpresaFiltro)
                        { 
                            <option value="@item.Tipoemprcodi">@item.Tipoemprdesc</option>
                        }
                    </select>
                </td>
                <td>Empresa:</td>
                <td>
                    <select id="cbEmpresa">
                        <option value="">-TODOS-</option>
                        @foreach (var item in Model.ListaEmpresaFiltro)
                        {
                            <option value="@item.Emprcodi">@item.Emprnomb</option>
                        }
                    </select>
                </td>
                <td>
                    <input type="button" id="btnConsultar" value="Consultar" />
                </td>
            </tr>
        </table>
    </div>
    <div id="listado"></div>    

</div>

<div id="popupEdicion" class="general-popup" style="width:500px">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Datos del Representante</span></div>
    <div class="popup-text" id="contenidoEdicion">
    </div>
</div>
