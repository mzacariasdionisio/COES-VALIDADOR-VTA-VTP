@model COES.MVC.Intranet.Areas.Admin.Models.RepresentanteModel
@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Areas/Admin/Content/Scripts/adminuser.js?v=4.2"></script>
<script src="~/Content/Scripts/jquery-ui-autocomplete.js"></script>
<script src="~/Content/Scripts/jquery.select-to-autocomplete.min.js"></script>

<div class="form-title">
    <div class="content-titulo">Administración de Usuarios Extranet</div>
    <div class="content-botonera">
        <input type="button" id="btnNuevo" value="Nuevo" />
        <input type="button" id="btnNoCoes" value="Accesos a modelos" />
        <input type="button" id="btnSalir" value="Salir" />
    </div>
</div>

<div class="content-hijo">
    <div id="mensaje" class="action-message">Desde esta opción puede crear, modificar o dar de baja a los usuarios</div>
    
    <div class="search-content" style="margin-bottom:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>              
                <td>Empresa:</td>
                <td>
                    <select id="cbEmpresa">
                        <option value="">-TODOS-</option>
                        @foreach (var item in Model.ListaEmpresas)
                        {
                            <option value="@item.EMPRCODI">@item.EMPRNOMB</option>
                        }
                    </select>
                </td>
                <td>
                    <input type="button" id="btnConsultar" value="Consultar" />
                </td>
            </tr>
        </table>
    </div>

    <div id="listado"></div>
    <input type="hidden" id="hfEmpresa" value="@Model.EmpresaId" />
</div>

<div id="popupEdicion" class="general-popup" style="min-width:500px">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Administración de Usuarios</span></div>
    <div class="popup-text" id="contenidoEdicion">
    </div>
</div>

