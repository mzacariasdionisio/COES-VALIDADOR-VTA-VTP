@model COES.MVC.Intranet.Areas.Admin.Models.UsuariosModel

<table border="0" class="pretty tabla-icono">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Quitar</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.ListaEmpresaSeleccionado.Count() > 0)
        {
            foreach (var item in Model.ListaEmpresaSeleccionado)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.EMPRCODI)</td>
                    <td>@Html.DisplayFor(modelItem => item.EMPRNOMB)</td>
                    <td><a href="JavaScript:removeEmpresa(@item.EMPRCODI)">

                            <img src="~/Content/Images/btn-cancel.png" />
                       </a></td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">Agrege empresas...</td>
            </tr>
        }
    </tbody>
</table>
