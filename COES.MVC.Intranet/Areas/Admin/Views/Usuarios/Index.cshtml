@model COES.MVC.Intranet.Areas.Admin.Models.UsuariosModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Areas/Admin/Content/Scripts/usuarios.js"></script>

<div class="form-title">
    <div class="content-titulo">Administración de Usuarios Extranet</div>
    <div class="content-botonera">
        <input type="button" id="btnConsultar" value='Consultar' />       
        <input type="button" id="btnCancelar" value='Cancelar' />   
    </div>
</div>

<div class="content-hijo">

    <div id="mensaje"></div>

    <div class="search-content" style="margin-bottom:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Empresa:</td>
                <td>
                    <select id="cbEmpresa">
                        <option value="">-TODOS-</option>
                        @foreach (var item in Model.ListaEmpresas) 
                        {
                            <option value="@item.EMPRCODI">@item.EMPRNOMB</option>
                        }
                    </select>
                </td>
                <td>Estado:</td>
                <td>
                    <select id="cbEstado">
                        <option value="">-TODOS-</option>
                        <option value="A">Activo</option>
                        <option value="P">Pendiente</option>
                        <option value="B">Baja</option>
                    </select>
                </td>
                <td>Módulo:</td>
                <td>
                    <select id="cbModulo">
                        <option value="">-TODOS-</option>
                        @foreach(var item in Model.ListaModulos)
                        {
                            <option value="@item.ModCodi">@item.ModNombre</option>                            
                        }
                    </select>
                </td>                
                <td>Desde:</td>
                <td><input type="text" id="txtFechaInicio"/></td>
                <td>Hasta:</td>
                <td><input type="text" id="txtFechaFin"/></td>
            </tr>
        </table>
    </div>

    <div id="listado">

    </div>

    <br />
    <br />
</div>
