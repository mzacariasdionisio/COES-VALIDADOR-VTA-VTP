@model COES.MVC.Intranet.Areas.CPPA.Models.CPPAModel
<script src="~/Areas/CPPA/Content/Scripts/registroParametroAjuste/transmisores.js?v=2.0"></script>

<div>
    <div class="search-content">
        <div class="flex-row">
            <div class="flex-row" style="margin-right: 35px;">
                <div style="margin-top: 5px;">
                    <label>
                        Estado:
                    </label>
                </div>
                <div style="margin-left: 10px">
                    <label>
                        <input type="radio" name="genEstadoTransmisor" value="A" checked/>Activo
                    </label>
                    <label>
                        <input type="radio" name="genEstadoTransmisor" value="X" />Anulado
                    </label>
                </div>
            </div>
            <input type="button" id="btnGenConsultarTransmisor" value="Consultar" style="margin-right: 10px;">
            <input type="button" id="btnGenExportarTransmisor" value="Exportar Excel" style="margin-right: 10px;">
            <input type="button" id="btnGenNuevoTransmisor" value="Nuevo" style="margin-right: 10px;">
        </div>
    </div>
    <div style="margin-bottom: 10px;">
        <table id="dtListaEmpresasTransmisoras"
               class="pretty tabla-icono"></table>
    </div>
</div>

<div id="popupNuevaEmpresaTransmisora" class="general-popup" style="min-width: 500px;">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title">
        <span>Nueva Empresa Transmisora</span>
    </div>
    <div class="popup-text">
        <div id="message-popup" style="display: none"></div>
        <div class="h-panel" style="margin-bottom: 10px;">
            <div style="display: flex; align-items: center; margin-bottom: 20px;">
                <div style="margin-right: 20px; white-space: nowrap;">Empresa :</div>
                <select id="cboPopEmpresaTransmisora" class="f-select" style="width: 450px">
                    @foreach (var item in Model.ListEmpresasTransmision)
                    {
                        <option value="@item.Emprcodi">@item.EmprnombConcatenado</option>

                    }
                </select>
            </div>
            <div style="text-align: center;">
                <input id="btnPopGuardarTransmisora" type="button" value="Grabar" style="margin-right: 10px;" />
                <input id="btnPopCancelarTransmisora" type="button" value="Cancelar" />
            </div>
        </div>
    </div>
</div>

