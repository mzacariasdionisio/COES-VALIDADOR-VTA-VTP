@model COES.MVC.Intranet.Areas.CalculoResarcimiento.Models.CalidadProductoModel
@{
    ViewBag.Title = "Eventos por mala calidad de producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Areas/CalculoResarcimiento/Content/Scripts/eventoproducto.js?v=2.1"></script>
<script src="~/Areas/CalculoResarcimiento/Content/Scripts/base.js?v=1.0.2"></script>
<link href="~/Content/Css/form.css" rel="stylesheet" />
<script src="~/Content/Scripts/tinymce/tinymce.min.js"></script>
<script src="~/Content/Scripts/inputmaskmin.js"></script>
<link href="~/Areas/CalculoResarcimiento/Content/Css/css.css?v=1.0.2" rel="stylesheet" />

<div class="form-title">
    <div class="content-titulo">Eventos por mala calidad de producto por tensión</div>
    <div class="content-botonera">
        @if (Model.Grabar) { 
            <input type="button" id="btnNuevo" value="Nuevo" />
        }
        <input type="button" id="btnExportar" value="Exportar" />
    </div>
</div>

<div class="content-hijo">
    <div id="mensaje"></div>
    <div class="search-content" style="margin-bottom:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Año:</td>
                <td>
                    <select id="cbAnio">
                        <option value="0">-SELECCIONE-</option>
                        @foreach (var item in Model.ListaAnio)
                        {
                            <option value="@item">@item</option>
                        }
                    </select>
                    <input type="hidden" id="hfAnio" value="@Model.Anio" />
                </td>
                <td>Mes:</td>
                <td>
                    <select id="cbMes">
                        <option value="0">-SELECCIONE-</option>
                        <option value="1">ENERO</option>
                        <option value="2">FEBRERO</option>
                        <option value="3">MARZO</option>
                        <option value="4">ABRIL</option>
                        <option value="5">MAYO</option>
                        <option value="6">JUNIO</option>
                        <option value="7">JULIO</option>
                        <option value="8">AGOSTO</option>
                        <option value="9">SETIEMBRE</option>
                        <option value="10">OCTUBRE</option>
                        <option value="11">NOVIEMBRE</option>
                        <option value="12">DICIEMBRE</option>
                    </select>
                    <input type="hidden" id="hfMes" value="@Model.Mes" />
                </td>
                <td>
                    <input type="button" id="btnConsultar" value='Consultar' />
                </td>
            </tr>
        </table>
    </div>
    <div id="listado"></div>
    <br />
    <br />
</div>


<div id="popupEvento" class="general-popup">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Eventos por mala de calidad de producto</span></div>
    <div class="popup-text" id="contenidoEvento">

    </div>
</div>


<div id="popupCorreoNotificacion" class="general-popup"  style="width:1300px">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Envío de notificación por correo electrónico</span></div>
    <div class="popup-text" id="contenidoNotificacion">
        <div id="mensaje_Notificacion"></div>
        <div>
            <div id="div_filtro" class="content-tabla">

            </div>
            <div id="div_detalle" class="content-tabla">

            </div>
        </div>
    </div>
</div>



