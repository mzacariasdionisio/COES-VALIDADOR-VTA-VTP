@model COES.MVC.Intranet.Areas.CalculoResarcimiento.Models.ConfiguracionModel
<table border="0" class="pretty tabla-icono" id="tablaCausaInterrupcion">
    <thead>
        <tr>
            <th style="width:70px">Acciones</th>
            <th>Causa de Interrupción</th>
            <th>Tipo de Interrupción</th>
            <th>Estado</th>
            <th>Usuario creación / modificación</th>
            <th>Fecha creación / modificación</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListaCausasInterrupcion)
        {
            <tr>
                <td style="width:70px">
                    @if (item.IndicadorEdicion == "S")
                    {
                        <a href="JavaScript:editar(@item.Recintcodi);"><img src="~/Content/Images/btn-edit.png" alt="Editar" title="Editar causa de interrupción" /></a>
                        <a href="JavaScript:eliminar(@item.Recintcodi);"><img src="~/Content/Images/btn-cancel.png" alt="Eliminar" title="Eliminar causa de interrupción" /></a>                        
                    }
                </td>
                <td>@item.Recintnombre</td>
                <td>@item.Retintnombre</td>
                <td>@item.Recintestado</td>
                <td>@item.Recintusumodificacion</td>
                <td>@(item.Recintfecmodificacion != null?((DateTime)item.Recintfecmodificacion).ToString("dd/MM/yyyy HH:mm:ss"): "")</td>
            </tr>
        }
    </tbody>
</table>