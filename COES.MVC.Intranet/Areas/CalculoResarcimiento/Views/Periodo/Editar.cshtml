@model COES.MVC.Intranet.Areas.CalculoResarcimiento.Models.PeriodoModel

<div class="content-registro">

    <form id="frmRegistro">
        <div id="mensajeEdicion" class="action-message">Por favor complete los datos</div>
        <table style="width:100%" id="tablaRegistro">
            <tr>
                <td class="registro-label">Año:</td>
                <td class="registro-control">
                    <input type="text" id="txtAnio" name="Anio" value="@Model.Entidad.Reperanio" />
                </td>
                <td class="registro-label">Tipo de Periodo:</td>
                <td class="registro-control">
                    <select id="cbTipoPeriodo" name="TipoPeriodo">
                        <option value="">-SELECCIONE-</option>
                        <option value="S">Semestral</option>
                        <option value="T">Trimestral</option>
                    </select>
                    <input type="hidden" id="hfTipoPeriodo" value="@Model.Entidad.Repertipo" />
                </td>
            </tr>
            <tr>
                <td class="registro-label">Periodo de revisión:</td>
                <td class="registro-control">
                    <select id="cbPeriodoRevision" name="PeriodoRevision">
                        <option value="">-SELECCIONE-</option>
                        <option value="S">SI</option>
                        <option value="N">NO</option>
                    </select>
                    <input type="hidden" id="hfPeriodoRevision" value="@Model.Entidad.Reperrevision" />
                </td>
                <td class="registro-label">Nombre:</td>
                <td class="registro-control">
                    <input type="text" id="txtNombre" name="Nombre" value="@Model.Entidad.Repernombre" />
                </td>
            </tr>
            <tr>
                <td class="registro-label">Fecha inicio:</td>
                <td class="registro-control">
                    <input type="text" id="txtFechaInicio" name="FechaInicio" value="@Model.Entidad.FechaInicio" />
                </td>
                <td class="registro-label">Fecha fin:</td>
                <td class="registro-control">
                    <input type="text" id="txtFechaFin" name="FechaFin" value="@Model.Entidad.FechaFin" />
                </td>
            </tr>
            <tr>
                <td class="registro-label">Periodo padre:</td>
                <td class="registro-control">
                    <select id="cbPeriodoPadre" name="PeriodoPadre">
                        <option value="">-SELECCIONE-</option>
                        @foreach (var item in Model.ListaPadre)
                        {
                            <option value="@item.Repercodi">@item.Repernombre</option>
                        }
                    </select>
                    <input type="hidden" id="hfPeriodoPadre" value="@Model.Entidad.Reperpadre" />
                </td>
                <td class="registro-label">Orden anual:</td>
                <td class="registro-control">
                    <input type="text" id="txtOrdenAnual" name="OrdenAnual" value="@Model.Entidad.Reperorden" />
                </td>
            </tr>
            <tr>
                <td class="registro-label">Tipo de cambio:</td>
                <td class="registro-control">
                    <input type="text" id="txtTipoCambio" name="TipoCambio" value="@Model.Entidad.Repertcambio" />
                </td>
                <td class="registro-label">Factor de compensación unitaria:</td>
                <td class="registro-control">
                    <input type="text" id="txtFactorCompensacion" name="FactorCompensacion" value="@Model.Entidad.Reperfactorcomp" />
                </td>
            </tr>
            <tr>
                <td class="registro-label">Estado:</td>
                <td class="registro-control">
                    <select id="cbEstado" name="Estado">
                        <option value="">-SELECCIONE-</option>
                        <option value="A">Activo</option>
                        <option value="I">Inactivo</option>
                    </select>
                    <input type="hidden" id="hfEstado" value="@Model.Entidad.Reperestado" />
                </td>
                <td class="registro-label"></td>
                <td class="registro-control">
                </td>
            </tr>
        </table>


        <input type="hidden" id="hfCodigo" name="Codigo" value="@Model.Entidad.Repercodi" />


        <div style="clear: both; height:15px"></div>
        <div class="popup-title"><span>Etapas del periodo</span></div>
        <div style="clear: both; height:15px"></div>
        <div id="divEtapas">

        </div>
        <input type="hidden" id="hfDataEtapa" name="DataEtapa" />
        <input type="hidden" id="hfFechaActual" value="@(DateTime.Now.ToString("dd/MM/yyyy"))" />
        <div style="width:200px; margin:auto; text-align:center; margin-top:20px">

            @if (Model.Grabar)
            {
                <input type="button" id="btnGrabar" value="Grabar" />

            }
            <input type="button" id="btnCancelar" value="Cancelar" />
        </div>

    </form>


</div>
