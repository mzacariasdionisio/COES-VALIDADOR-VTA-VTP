@model COES.MVC.Intranet.Areas.CalculoResarcimiento.Models.PeriodoModel
@{
    ViewBag.Title = "Administración de Periodos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Areas/CalculoResarcimiento/Content/Scripts/periodo.js?v=1.4"></script>
<script src="~/Content/Scripts/handsontable.full.min.js"></script>
<script src="~/Areas/CalculoResarcimiento/Content/Scripts/base.js?v=1.5"></script>
<link href="~/Content/Css/handsontable.full.min.css" rel="stylesheet" />
<link href="~/Content/Css/form.css" rel="stylesheet" />
<link href="~/Areas/CalculoResarcimiento/Content/Css/css.css" rel="stylesheet" />

<div class="form-title">
    <div class="content-titulo">Administración de Periodos</div>
    <div class="content-botonera">
        @if (Model.Grabar) { 
            <input type="button" id="btnNuevo" value='Nuevo' />
        }
    </div>
</div>

<div class="content-hijo">
    <div id="mensaje"></div>
    <div class="search-content" style="margin-bottom:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Año desde:</td>
                <td>
                    <input type="text" id="txtAnioDesde" value="@Model.Anio" />
                </td>
                <td>Año hasta:</td>
                <td>
                    <input type="text" id="txtAnioHasta" value="@Model.Anio" />
                </td>
                <td>Estado:</td>
                <td>
                    <select id="cbEstadoFiltro">
                        <option value="A">Activo</option>
                        <option value="I">Inactivo</option>
                        <option value="-1">-TODOS-</option>
                    </select>
                </td>
                <td>
                    <input type="button" id="btnConsultar" value='Consultar' />
                </td>
            </tr>
        </table>
    </div>
    <div id="listado">
    </div>
    <br />
    <br />
</div>

<div id="popupEdicion" class="general-popup" style="min-width:900px">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Periodo de cálculo de resarcimientos</span></div>
    <div class="popup-text" id="contenidoEdicion">

    </div>
</div>


<div id="popupCopiar" class="general-popup">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Actualizar interrupciones desde el trimestral</span></div>
    <div class="popup-text" id="contenidoCopiar">

        <div class="content-registro">

            <div id="mensajeCopiar" class="action-message">Seleccione los datos solicitados.</div>
            <table style="width:100%" id="tablaTrimestral">
                <tr>
                    <td class="registro-label">Seleccione periodo trimestral:</td>
                    <td class="registro-control">
                        <select id="cbPeriodoTrimestral">
                        </select>
                    </td>
                </tr>
            </table>
            <input type="hidden" id="hfIdPeriodoSeleccion" />

            <div class="dialog-boton" style="width:200px; margin:auto; margin-top:20px">
                <input type="button" id="btnAceptarCopiar" value="Copiar datos" />
                <input type="button" id="btnCancelarCopiar" value="Cancelar" />
            </div>
        </div>
    </div>
</div>