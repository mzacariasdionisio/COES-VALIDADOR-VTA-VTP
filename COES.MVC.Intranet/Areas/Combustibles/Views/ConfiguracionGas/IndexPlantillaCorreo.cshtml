@model COES.MVC.Intranet.Areas.Combustibles.Models.CombustibleGasModel
@{
    ViewBag.Title = "Configuración Aplicativo PR31 - Gaseoso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Content/Scripts/datatable.js"></script>

<script src="~/Content/Scripts/jquery.easytabs.min.js?v=1.1"></script>
<link href="~/Content/Css/tabs.css" rel="stylesheet" />

<link href="~/Content/Css/form.css" rel="stylesheet" />
<script src="~/Content/Scripts/tinymce/tinymce.min.js"></script>

<link type="text/css" rel="stylesheet" href="~/Areas/Combustibles/Content/Css/Gas/css.css?v=1.9.7.2" />
<script src="~/Areas/Combustibles/Content/Scripts/Gas/configuracionPlantillaCorreo.js?v=1.9.7.2"></script>

<div class="form-title">
    <div class="content-titulo">Configuración de Notificaciones y Recordatorios</div>
    <div class="content-botonera">
    </div>
</div>

<div class="content-hijo" id="mainLayout">
    <div id="mensaje"></div>
    <div id="tab-container" class='tab-container'>
        <ul class='etabs'>
            <li class='tab'><a href="#tabLista">Listado</a></li>
            <li class='tab'><a href="#tabDetalle">Detalle</a></li>
        </ul>
        <div class='panel-container'>

            <div id="tabLista">

                <div class="search-content">
                    <table class="content-tabla-search" style="width:auto">
                        <tr>
                            <td>Tipo de Plantilla :</td>
                            <td>
                                <select id="cbTipoPlantilla" style="width: 115px;">
                                    <option value="1">Notificaciones</option>
                                    <option value="2">Recordatorios</option>
                                </select>
                            </td>
                            <td>Tipo de Central :</td>
                            <td>
                                <select id="cbTipoCentral" style="width: 115px;">                                    
                                    <option value="E">Existente</option>
                                    <option value="N">Nueva</option>
                                </select>
                            </td>
                        </tr>
                    </table>
                </div>

                <div id="vistaListado">

                    <div id="div_listado" class="content-tabla">

                    </div>
                </div>

            </div>

            <div id="tabDetalle">
                
                <div id="div_detalle" class="content-tabla" style="overflow-x: scroll;">

                </div>
            </div>

        </div>
    </div>   

</div>

<div id="popupAgregarVariable" class="general-popup" style="width: 350px">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Agregar Variable</span></div>
    <div id="mensaje_popupCargos"></div>
    <div class="table-list" id="seccionListadoVariables" style="margin: 20px">


    </div>
</div>

<div id="popupEditarCentral" class="popup-class-1 general-popup" style="width: 500px">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Editar Central</span></div>
    <div class="panel-container">
        <div id="mensaje_popupEditar"></div>
        <div id="" style="margin-top: 10px;"></div>
        <input type="hidden" id="hfIdCentral" />

        <div>
            <table id="" style="margin-top: 10px; padding-left: 80px;">
                <tr style="height: 25px;">
                    <td class="tbform-label">Empresa:</td>
                    <td>
                        <div id="campoEmpresa"></div>
                    </td>
                </tr>
                <tr style="height: 25px;">
                    <td class="tbform-label">Central:</td>
                    <td>
                        <div id="campoCentral"></div>
                    </td>
                </tr>
                <tr style="height: 25px;">
                    <td class="tbform-label">Tipo:</td>
                    <td>
                        <input type="checkbox" id="chbxExistente">
                        <input type="hidden" value="0" />
                        <label style="padding-right: 25px;">Existente</label>
                        <input type="checkbox" id="chbxNueva">
                        <label>Nueva</label><br>
                    </td>
                </tr>
                <tr style="height: 25px;">
                    <td class="tbform-label">Visibilidad en Extranet:</td>
                    <td>
                        <input type="checkbox" id="chbxEnExtranet">

                    </td>
                </tr>
            </table>
        </div>
        <div style="padding-top: 20px; padding-bottom: 20px;">
            <table border="0" class="pretty tabla-adicional" id="tablaValoresCentral" style="width: auto">
                <thead>
                    <tr style="height:20px">
                        <th style="width: 270px;">Ítem</th>
                        <th style="width: 90px;">Mínimo</th>
                        <th style="width: 90px;">Máximo</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="width: 270px;">Precio Unitario Por Suministro F3 (USD/GJ)</td>
                        <td><input type="number" min="0" max="1000000" step="0.00000000001" style="width: 90px;" id="minPUSum"></td>
                        <td><input type="number" min="0" max="1000000" step="0.00000000001" style="width: 90px;" id="maxPUSum"></td>
                    </tr>
                    <tr>
                        <td style="width: 270px;">Precio Unitario Por Transporte F3 (USD/GJ)</td>
                        <td><input type="number" min="0" max="1000000" step="0.00000000001" style="width: 90px;" id="minPUTransp"></td>
                        <td><input type="number" min="0" max="1000000" step="0.00000000001" style="width: 90px;" id="maxPUTransp"></td>
                    </tr>
                    <tr>
                        <td style="width: 270px;">Precio Unitario Por Distribución F3 (USD/GJ)</td>
                        <td><input type="number" min="0" max="1000000" step="0.00000000001" style="width: 90px;" id="minPUDistrib"></td>
                        <td><input type="number" min="0" max="1000000" step="0.00000000001" style="width: 90px;" id="maxPUDistrib"></td>
                    </tr>
                    <tr>
                        <td style="width: 270px;">Costo de Gas Natural</td>
                        <td><input type="number" min="0" max="10" step="0.00000000001" style="width: 90px;" id="minCostoGN"></td>
                        <td><input type="number" min="0" max="10" step="0.00000000001" style="width: 90px;" id="maxCostoGN"></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div>
            <div style="width: 150px; margin: 0 auto;">
                <input type="submit" id="GuardarCentral" value="Guardar" style="margin-top: 15px;">
                <input type="button" id="" value="Cancelar" onclick="cerrarPopup('popupEditarCentral')">

            </div>
        </div>

    </div>
</div>