@model COES.MVC.Intranet.Areas.Compensacion.Models.ArranquesParadasGeneralModel
@{
    ViewBag.Title = "Arranques y Paradas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-hijo" id="mainLayout" style="height: 750px;">
    <div class="form-title">
        <div>Arranques y Paradas</div>
    </div>
    <div id="mensaje"></div>
    <table>
        <tr>
            <td>
                <div class="search-content" style="margin-bottom:0px; padding:15px">
                    <table class="content-tabla-search" style="width:auto">
                        <tr>
                            <td style="width: 65px;">Periodo:</td>
                            <td>
                                <select id="pericodi" name="pericodi">
                                    @foreach (var item in Model.ListTrnPeriodo)
                                    {
                                        <option value="@item.PeriCodi">@item.PeriNombre</option>
                                    }
                                </select>
                            </td>
                            <td style="width: 65px;">Versión:</td>
                            <td>
                                <select id="pecacodi" name="pecacodi">
                                </select>
                            </td>
                            <td colspan="4">
                                <input type="button" value="Procesar" id="btnProcesar" name="btnProcesar" class="form-action" />
                                <input type="button" value="Incrementos/Reducciones" id="btnIncrementosReducciones" name="btnIncrementosReducciones" class="form-action" />
                                <input type="button" value="Compensación Especial (Ilo2)" id="btnCompensacionEspecialIlo2" name="btnCompensacionEspecialIlo2" class="form-action" />
                                <input type="button" value="Registrar Cálculo Manual" id="btnRegistrarCalculoManual" name="btnRegistrarCalculoManual" class="form-action" />
                                <br /><br />
                            </td>
                        </tr>
                        <tr>
                            <td>Empresa: </td>
                            <td>
                                <select id="empresa" name="empresa">
                                    <option value="">-- SELECCIONE --</option>
                                    @foreach (var item in Model.ListSiEmpresa)
                                    {
                                        <option value="@item.Emprcodi">@item.Emprnomb</option>
                                    }
                                </select>
                            </td>
                            <td>Central: </td>
                            <td>
                                <select id="central" name="central"></select>
                            </td>
                            <td>Grupo: </td>
                            <td>
                                <select id="grupo" name="grupo"></select>
                            </td>
                            <td>Modo Operación: </td>
                            <td>
                                <select id="modo" name="modo"></select>
                            </td>
                           <!--  DSH 19-07-2017 : cambio por requerimiento
                             <td>Tipo Operación: </td>
                            <td>
                                <select id="tipo" name="tipo" style="width:250px;">
                                    <option value="">-- SELECCIONE --</option>
                                    @foreach (var item in Model.ListEveSubcausaevento)
                                    {
                                        <option value="@item.Subcausacodi">@item.Subcausadesc</option>
                                    }
                                </select>
                            </td>
                            -->
                        </tr>
                        <tr>
                            <td colspan="10">
                                <input type="button" value="Consultar" id="btnConsultar" name="btnConsultar" class="form-action" />
                                <input type="button" value="Exportar Excel" id="btnExportar" name="btnExportar" class="form-action" />
                            </td>
                        </tr>
                    </table>
                </div>
            </td>
        </tr>
    </table>
    <br />
    <div class="content-tabla" style="margin-bottom:0px;">
        @*<div id="mensaje"></div>*@
        <div class="content-tabla">
            <div class="table-list" id="listado"></div>
        </div>
    </div>
</div>

<!--Hoja de estilos-->
<link href="~/Areas/Compensacion/Content/Css/css.css" rel="stylesheet" />
<!--Menu contextual-->
<script src="~/Content/Scripts/contextmenu.js"></script>
<link href="~/Content/Css/contextmenu.css" rel="stylesheet" />
<script src="~/Areas/Compensacion/Content/Scripts/arranquesParadas.js"></script>
<script src="~/Areas/Compensacion/Content/Scripts/util.js"></script>
<script src="~/Areas/Compensacion/Content/Scripts/json2.js"></script>
