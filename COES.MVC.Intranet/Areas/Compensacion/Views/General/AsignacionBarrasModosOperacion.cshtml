<div class="form-title">
    <div class="content-titulodemanda">Asignación de Barras a los Modos de Operación</div>
</div>
<div id="mensaje"></div>
<div class="content-hijo" id="mainLayout">
    <div class="search-content">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td style="width:120px">Modo Operación:</td>               
                <td style="width:40px"></td>                
                <td style="width:300px">
                    <input style="width:100%;" type="text" id="modoOperacion" value="@Model.ModoOperacion.Gruponomb" readonly="readonly"/>
                </td>
                <td style="width:80px"></td>
                <td>
                    <input type="button" id="btnAgregar" value='Agregar' />
                </td>
                <td>
                    <input type="button" id="btnRegresar" value='Regresar' />
                </td>
            </tr>
        </table>

    </div>


    <div class="content-tabla">
        <div class="tabla-header" style="height:34px">
            <div class="table-paginado" id="paginado"></div>
            <div style="clear:both"></div>
        </div>
        <div style="clear:both"></div>
        <div class="table-list" id="listado"></div>
        <div style="clear:both"></div>
    </div>
    <div id="popupEdicion" class="general-popup">
        <span class="button b-close"><span>X</span></span>
        <div class="popup-title">
            <span>Asignación de Barra</span>
        </div>
        <div class="popup-text" id="contenidoEdicion">
            <table>
                <tr>
                    <td>
                        Fecha Vigencia:
                    </td>
                    <td>
                        <input type="text" id="fechaVigencia" name="fechaVigencia" />
                    </td>
                </tr>               
                <tr>
                    <td>
                        Barra:
                    </td>
                    <td>
                        <select id="barrcodi" name="barrcodi">     
                            <option value="">-- SELECCIONE --</option>                       
                            @foreach (var item in Model.ListBarras)
                            {
                                <option value="@item.Barrcodi">@item.Barrbarratransferencia</option>
                            }
                        </select>

                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <br /><br />
                        <div style="float:left">
                            <input type="button" value="Guardar" id="btnGuadarEdicion" name="btnGuadarEdicion" class="form-action" />
                            <input type="button" value="Cancelar" id="btnCancelarEdicion" name="btnCancelarEdicion" />
                        </div>
                    </td>
                </tr>
            </table>
            <input type="hidden" id="esNuevo" name="esNuevo" />
        </div>
    </div>

</div>

<input type="hidden" id="hdnGrupocodi" value="@Model.ModoOperacion.Grupocodi" />
<input type="hidden" id="hdnRecacodi" value="0" />
<input type="hidden" id="hdnEstado" value="" />
