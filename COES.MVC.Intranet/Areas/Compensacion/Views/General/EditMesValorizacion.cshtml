@model COES.MVC.Intranet.Areas.Compensacion.Models.MesValorizacionGeneralModel
@{
    ViewBag.Title = "Editar parámetros del periodo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-hijo" id="mainLayout" style="height:700px;">
    <div class="form-title">
        <div>Editar parámetros del periodo</div>
    </div>
    <div class='action-message' id='mensaje' style="margin-bottom:5px; margin-top:0; "></div>
    <div style="height:250px">
    <table>
        <tr>
                <td style="text-align:left">Lista de Recalculos del Mes de Valorización: @Model.TrnPeriodoDTO.PeriNombre </td>
            </tr>
            <tr>
                <td style="text-align:right">
                    <table>
                                <tr>
                            <td style="width:550px">&nbsp;</td>                            
                            <td style="width:80px"><input type="button" value="Nuevo" id="btnNuevo" name="btnNuevo" class="form-action" style="width:80px;" /></td>
                            <td style="width:80px"><input type="button" value="Refrescar" id="btnRefrescar" name="btnRefrescar" class="form-action" style="width:80px;" /></td>
                            <td style="width:80px"><input type="button" value="Regresar" id="btnRegresar" name="btnRegresar" class="form-action" style="width:80px;" /></td>
                        </tr>
                    </table>
                                    </td>
            </tr>
            <tr>
                                    <td>
                    <div class="content-tabla">
                        <div class="content-tabla">
                            <div class="table-list" id="listadoVersiones"></div>
                        </div>
                    </div>
                                    </td>
            </tr>
        </table>

    </div>
    <br />
    <table id="tbListado" style="display:none">
        <tr>
            <td style="text-align:left"><b><label id="lblTituloEntidades"></label> </b> </td>
        </tr>
        <tr>
                                    <td>
                <div class="content-tabla" style="margin-bottom:0px;">
                    <div id="mensaje"></div>
                    <div class="content-tabla">
                        <div class="table-list" id="listado"></div>
                    </div>
                </div>
                                    </td>
                                </tr>
    </table>
    <div id="popupEdicion" class="general-popup" style="width:540px">
        <span class="button b-close"><span>X</span></span>
        <div class="popup-title">
            <span>Nueva Revisión</span>
        </div>
        <div class="popup-text" id="contenidoEdicion">
            <fieldset>
                <legend>Datos Generales</legend>
                <table class="content-tabla-search" style="width:auto">
                    <tbody>
                        <tr>
                            <td>
                                <span>Periodo:</span>
                            </td>
                            <td>
                                <b>@Model.TrnPeriodoDTO.PeriNombre</b>
                                <input type="hidden" id="pericodi" name="pericodi" value="@Model.TrnPeriodoDTO.PeriCodi" />
                            </td>
                            <td>
                                <input type="button" value="Crear nueva versión" id="btnNuevoCalculo" name="btnNuevoCalculo" class="form-action" style="display:none" />
                                <input type="button" value="Inicializar datos" id="btnInicializar" name="btnInicializar" class="form-action" style="width:150px; display:none" />
                                <input type="button" value="Cerrar Periodo" id="btnCerrarPeriodo" name="btnCerrarPeriodo" class="form-action" style="width:150px; display:none" />
                                <input type="button" value="Abrir Periodo" id="btnAbrirPeriodo" name="btnAbrirPeriodo" class="form-action" style="width:150px; display:none" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Nombre Versión:
                            </td>
                            <td>
                                <input type="text" id="pecanombre" name="pecanombre" value="" style="width:200px;" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Tipo de cambio:
                            </td>
                            <td>
                                <input type="text" id="tc" name="tc" value="" onkeypress="return soloNumeros(event)" style="width:70px;" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Revisión de VTEA:
                            </td>
                            <td>
                                <select id="version" name="version" style="width:200px;">
                                    <option value="">Seleccione</option>
                                    @foreach (var item in Model.ListTrnCostoMarginal)
                                    {
                                        <option value="@item.id">@item.name</option>
                                    }
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Estado:

                            </td>
                            <td>
                                <input type="text" id="estado" name="estado" value="..." disabled style="width:200px;" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Motivo:

                            </td>
                            <td>
                                <input type="text" id="motivo" name="motivo" style="width:200px;" />
                            </td>
                        </tr>

                    </tbody>
                </table>
                    </fieldset><br>                    
                    <table class="content-tabla-search" style="width:auto">                       
                        <tr>
                            <td>
                                <input type="button" value="Grabar" id="btnGrabar" name="btnGrabar" class="form-action" />
                                <input type="button" value="Cancelar" id="btnCancelar" name="btnCancelar" class="form-action" />
                            </td>
                        </tr>
                    </table>
            <input type="hidden" id="esNuevo" name="esNuevo" />
            <input type="hidden" id="hdnPecacodi" name="hdnPecacodi" value="0" />
                    </div>
    </div>

</div>

<!--Hoja de estilos-->
<link href="~/Areas/Compensacion/Content/Css/css.css" rel="stylesheet" />
<!--Menu contextual-->
<script src="~/Content/Scripts/contextmenu.js"></script>
<link href="~/Content/Css/contextmenu.css" rel="stylesheet" />
<script src="~/Areas/Compensacion/Content/Scripts/editMesValorizacion.js"></script>
<script src="~/Areas/Compensacion/Content/Scripts/util.js"></script>