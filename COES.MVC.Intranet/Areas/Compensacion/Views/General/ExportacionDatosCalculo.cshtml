@model COES.MVC.Intranet.Areas.Compensacion.Models.ExportacionDatosCalculoGeneralModel
@{
    ViewBag.Title = "Exportar Datos Calculos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-hijo" id="mainLayout" style="height: 650px;">

    <div class="form-title">
        <div class="content-titulo">Exportar Datos Calculos</div>
    </div>
    <div id="mensaje" style="margin-bottom:5px; margin-top:0;"></div>
    <table>
        <tr>
            <td>
                <div class="search-content" style="margin-bottom:5px; padding:10px">
                    <table class="content-tabla-search" style="width:auto">
                        <tr>
                            <td style="width: 45px;">Periodo:</td>
                            <td style="width: 45px;">
                                <select id="pericodi" name="pericodi">
                                    @foreach (var item in Model.ListTrnPeriodo)
                                    {
                                        <option value="@item.PeriCodi">@item.PeriNombre</option>
                                    }
                                </select>
                            </td>
                            <td style="width: 45px;">Versión:</td>
                            <td>
                                <select id="pecacodi" name="pecacodi"></select>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="search-content" style="margin-bottom:5px; padding:6px">
                    <table class="content-tabla-search" style="width:auto">
                        <tr>
                            <td colspan="10">
                                <label style="font-size:medium"><B>Compensaciones por Costo Variable</B></label>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="10">
                                <input type="checkbox" id="checkTodos" />Marcar o Desmarcar Todos
                            </td>
                        </tr>
                        <tr>
                            <td colspan="10">
                                <!--
                                <input type="checkbox" checked id="cr" name="cr" class="grupo1"/>
                                Compensación Regular         
                                <input type="checkbox" checked id="ce" name="ce" class="grupo1" />
                                Compensación Especial      
                                <input type="checkbox" id="dcr" name="dcr" class="grupo1" />
                                Detalle Compensación Regular   
                                -->
                                <input type="checkbox" checked id="ctm" name="ctm" class="grupo1"/>
                                Compensación MME (Total Mes)         
                                <input type="checkbox" checked id="csd" name="csd" class="grupo1" />
                                Compensación (Subtotales diarios)      
                                <input type="checkbox" id="dp" name="dp" class="grupo1" />
                                Detalle x Periodo 15 min        
                                <input type="checkbox" id="cv" name="cv" class="grupo1" />
                                Costos Variables         
                                <input type="checkbox" id="pg" name="pg" class="grupo1" />
                                Parámetros Generador         
                                <input type="checkbox" id="me" name="me" class="grupo1" />
                                Medidores (Energia)        
                                <input type="checkbox" id="cm" name="cm" class="grupo1" />
                                Costos Marginales         
                                <input type="checkbox" id="ho" name="ho" class="grupo1" />
                                Horas Operación         
                            </td>
                        </tr>
                        <tr>
                            <td colspan="10">
                                <input type="button" value="Exportar a Excel" id="btnExportar" name="btnExportar" class="form-action" />
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="search-content" style="margin-bottom:5px; padding:10px">

                    <table class="content-tabla-search" style="width:auto">
                        <tr>
                            <td colspan="10">
                                <label style="font-size:medium"><b>Compensaciones por Arranques y Paradas</b></label>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="10">
                                <input type="checkbox" id="ap" name="ap" class="grupo2" />
                                Arranques y Paradas
                                <input type="checkbox" id="dap" name="dap" class="grupo2" />
                                Detalle Arranques y Paradas
                            </td>
                        </tr>
                        <tr>
                            <td colspan="10">
                                <input type="button" value="Exportar a Excel" id="btnExportar2" name="btnExportar2" class="form-action" />
                            </td>
                        </tr>
                    </table>
                </div>
            </td>
        </tr>
    </table>
    <div class="content-tabla">
        <div class="content-tabla">
            <div class="table-list" id="listado"></div>
        </div>
    </div>
</div>

<!--Hoja de estilos-->
<link href="~/Areas/Compensacion/Content/Css/css.css" rel="stylesheet" />
<!--Menu contextual-->
<script src="~/Content/Scripts/contextmenu.js"></script>
<link href="~/Content/Css/contextmenu.css" rel="stylesheet" />
<script src="~/Areas/Compensacion/Content/Scripts/exportacionDatosCalculo.js"></script>
<script src="~/Areas/Compensacion/Content/Scripts/util.js"></script>
<script src="~/Areas/Compensacion/Content/Scripts/json2.js"></script>