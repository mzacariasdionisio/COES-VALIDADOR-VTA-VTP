@model COES.MVC.Intranet.Areas.ConsumoCombustible.Models.ConsumoCombustibleModel
@{
    ViewBag.Title = "Factor de Conversión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Css/multiselect.css" rel="stylesheet" />
<script src="~/Content/Scripts/multiselect.js"></script>

<script src="~/Areas/ConsumoCombustible/Content/Scripts/conf_factor.js?v=1.5"></script>
<link href="~/Areas/ConsumoCombustible/Content/Css/css.css?v=1.1" rel="stylesheet" />

<div class="form-title">
    <div class="content-titulo">Factor de Conversión</div>

    <div class="content-botonera">
        @if (Model.TienePermiso)
        {
            <input type="button" id="btnNuevo" value="Nuevo">
        }
    </div>
</div>

<div class="content-hijo" id="mainLayout">

    <div class="content-tabla">
        <div style="clear:both; height:5px"></div>

        <div style=" font-size: 20px; margin-bottom: 10px;">
            <span>(Unidad Destino)</span> <span style="color: red;">= </span> <span>Factor de Conversión</span> <span style="color: red;">*</span> <span># (Unidad origen)</span>
        </div>

        <div id="listado">

        </div>
    </div>
</div>

<div id="popupNuevo" class="general-popup">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Nuevo Factor de Conversión</span></div>
    <div class="table-list">

        <table class="table-form-vertical">

            <tr>
                <td>Medida Origen:</td>
                <td>
                    <select id="cbMedidaOrigen" style="width: 330px;">
                        @foreach (var item in Model.ListaMedida)
                        {
                            <option value="@item.Tipoinfocodi">@item.Tipoinfodesc ( @item.Tipoinfoabrev )</option>
                        }
                    </select>
                </td>
            </tr>

            <tr>
                <td>Medida Destino:</td>
                <td>
                    <select id="cbMedidaDestino" style="width: 330px;">
                        @foreach (var item in Model.ListaMedida)
                        {
                            <option value="@item.Tipoinfocodi">@item.Tipoinfodesc ( @item.Tipoinfoabrev )</option>
                        }
                    </select>
                </td>
            </tr>

            <tr>
                <td>Factor de conversión:</td>
                <td>
                    <input type="text" id="txtFactor" value="" style="background-color: white" />
                </td>
            </tr>

            <tr>
                <td colspan="2" style="margin:0 auto">
                    <div style="margin:0 auto">
                        <input type="button" id="btnGuardar" value="Guardar" />
                    </div>
                </td>

            </tr>

        </table>

    </div>
</div>


<div id="popupEditar" class="general-popup">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Edición de Factor de Conversión</span></div>
    <div class="table-list">

        <table class="table-form-vertical">

            <tr>
                <td>Medida Origen:</td>
                <td>
                    <input type="text" id="txtMedidaOrigen" value="" disabled style="background-color: #c5c5c5" />
                </td>
            </tr>

            <tr>
                <td>Medida Destino:</td>
                <td>
                    <input type="text" id="txtMedidaDestino" value="" disabled style="background-color: #c5c5c5" />
                </td>
            </tr>

            <tr>
                <td>Factor de conversión:</td>
                <td>
                    <input type="text" id="txtFactorEdicion" value="" style="background-color: white" />
                    <input type="hidden" id="hfFactorcodi" />
                </td>
            </tr>

            <tr>
                <td colspan="2" style="margin:0 auto">
                    <div style="margin:0 auto">
                        <input type="button" id="btnEditar" value="Guardar" />
                    </div>
                </td>

            </tr>

        </table>

    </div>
</div>