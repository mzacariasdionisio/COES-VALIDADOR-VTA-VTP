@model COES.MVC.Intranet.Areas.Coordinacion.Models.AsociacionEmpresanModel

@{
    ViewBag.Title = ".::Asociación Empresas SICOES - SCADA SP7::.";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Areas/Coordinacion/Content/Scripts/asociacionempresa.js?v=1.1"></script>
<link href="~/Content/Css/form.css" rel="stylesheet" />

<div class="form-title">
    <div class="content-titulo">Asociación Empresas SICOES - SCADA SP7</div>
    <div class="content-botonera">
        <input type="button" id="btnNuevo" value='Nuevo' />
        <input type="button" id="btnExportar" value='Exportar' />
    </div>
</div>

<div class="content-hijo">

    <div id="mensaje"></div>

    <div class="search-content" style="margin-bottom:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                </td>
                <td>Nombre:</td>
                <td>
                    <input type="text" id="txtNombre" />
                </td>
                <td>
                    <input type="button" id="btnConsultar" value="Consultar" />
                </td>
            </tr>
        </table>
    </div>

    <div id="listado">
    </div>

    <br />
    <br />
</div>



<div id="popupAsociacion" class="general-popup" style="min-width:500px">
    <div><span class="button b-close"><span>X</span></span></div>

    <div class="popup-text" id="contenido">
        <div class="popup-title"><span>Asociación de Códigos de Empresas</span></div>
        <div class="popup-text">
            <div id="mensajeAsociacion" class="action-message" style="display: none; width: 95%">Por favor complete los datos.</div>
            <div class="content-registro">
                <table style="width:auto">
                    <tr>
                        <td>Empresa SICOES:</td>                        
                        <td>
                            <select id="cbEmpresa" style="width:300px">
                                <option value="-1">-SELECCIONE-</option>
                                @foreach (var item in Model.ListaEmpresas)
                                {
                                    <option value="@item.Emprcodi">@item.Emprnomb</option>
                                }
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td class="registro-label">Empresa SCADA SP7:</td>
                        <td>
                            <select id="cbEmpresasp7" style="width:300px">
                                <option value="-1">-SELECCIONE-</option>
                                @foreach (var item in Model.ListaEmpresasSp7)
                                {
                                    <option value="@item.Emprcodi">@item.Emprenomb</option>
                                }
                            </select>
                        </td>
                    </tr>
                </table>
                <div style="height:10px; clear:both"></div>
                <div style="width:200px; margin:auto">
                    <input id="btnCancelarNuevo" type="button" value="Cancelar" style="margin: 5px 0 5px 0;" />
                    <input id="btnGrabarNuevo" type="button" value="Grabar" style="margin: 5px 0 5px 0;" />
                </div>
            </div>
        </div>
    </div>
</div>


<div id="popupEditar" class="general-popup" style="min-width:500px">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Editar nombre de Empresa SP7</span></div>
    <div class="popup-text" id="contenidoEditar">
        <div class="content-registro">
            <table style="width:100%">
                <tr>
                    <td class="registro-label">Nombre:</td>
                    <td class="registro-control">
                        <input type="text" id="txtNombreScada" style="width:400px" maxlength="50"  />
                    </td>
                </tr>
                <tr>
                    <td colspan="2" style="text-align:center; padding-top:20px">
                        <input type="button" id="btnGrabarScada" value="Grabar" />
                        <input type="button" id="btnCancelarScada" value="Cancelar" />
                        <input type="hidden" id="hfCodigoEmpresaScada" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
