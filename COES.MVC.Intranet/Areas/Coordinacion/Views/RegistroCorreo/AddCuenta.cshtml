@model COES.MVC.Intranet.Areas.Coordinacion.Models.RegistroCorreoModel

<div class="content-registro">

    <form id="frmRegistro">
        <div id="mensajeCuenta" class="action-message">Por favor complete los datos</div>
        <table style="width:100%">
            <tr>
                <td class="registro-label">Empresa:</td>
                <td class="registro-control">
                    <select id="cbEmpresaCuenta">
                        <option value="-1">-SELECCIONE-</option>
                        @foreach (var item in Model.ListaEmpresas)
                        {
                            <option value="@item.Emprcodi">@item.Emprenomb</option>
                        }
                    </select>
                    <input type="hidden" id="hfEmpresaCuenta" value="@Model.Entidad.Emprcodi" />
                </td>
            </tr>
            <tr>
                <td class="registro-label">Nombre:</td>
                <td class="registro-control">
                    <input type="text" id="txtNombreCuenta" value="@Model.Entidad.Obscornombre" />
                </td>
            </tr>
            <tr>
                <td class="registro-label">Cuenta correo:</td>
                <td class="registro-control">
                    <input type="text" id="txtCorreoCuenta" value="@Model.Entidad.Obscoremail" />
                </td>
            </tr>           
            <tr>
                <td class="registro-label">Estado:</td>
                <td class="registro-control">
                    <select id="cbEstadoCuenta">
                        <option value="">-SELECCIONE-</option>
                        <option value="A">Activo</option>
                        <option value="B">Baja</option>
                    </select>
                    <input type="hidden" id="hfEstadoCuenta" value="@Model.Entidad.Obscorestado" />
                </td>
            </tr>
        </table>

        <div style="width:200px; margin:auto; text-align:center; margin-top:20px">
            <input type="button" id="btnGrabarCuenta" value="Grabar" />
            <input type="button" id="btnCancelarCuenta" value="Cancelar" />
        </div>

        <input type="hidden" id="hfIdCuenta" value="@Model.Entidad.Obscorcodi" />

    </form>
</div>
