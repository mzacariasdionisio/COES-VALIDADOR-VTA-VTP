@model COES.MVC.Intranet.Areas.Coordinacion.Models.RelacionModel
@{
    ViewBag.Title = "Relacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Areas/Coordinacion/Content/Scripts/relacion.js?v=1.1"></script>
<link href="~/Content/Css/form.css" rel="stylesheet" />

<div class="form-title">
    <div class="content-titulo">Equivalencia de Códigos</div>
    <div class="content-botonera">       
        <input type="button" id="btnNuevo" value='Nuevo' />        
    </div>
</div>

<div class="content-hijo">
    <div id="mensaje"></div>
    <div class="search-content" style="margin-bottom:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Empresa:</td>
                <td>
                    <select id="cbEmpresa">
                        <option value="-1">-TODOS-</option>
                        @foreach (var item in Model.ListaEmpresa)
                        {
                            <option value="@item.Emprcodi">@item.Emprnomb</option>
                        }
                    </select>
                </td>
                <td>Estado:</td>
                <td>
                    <select id="cbEstado">
                        <option value="-1">-TODOS-</option>
                        <option value="A">Activo</option>                        
                        <option value="I">No activo</option>
                    </select>
                </td>
                <td>
                    <input type="button" id="btnConsultar" value='Consultar' />
                </td>               
            </tr>
        </table>
    </div>
    <div id="listado">
    </div>
    <br />
    <br />
</div>

<div id="popupRelacion" class="general-popup" style="width:500px">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Configuración de Equivalencias</span></div>
    <div class="popup-text" id="contenidoRelacion">

    </div>
</div>