@model COES.MVC.Intranet.Areas.CortoPlazo.Models.BarraModel
@{
    ViewBag.Title = "Configuración de Barras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Areas/CortoPlazo/Content/Scripts/barra.js?v=4.0"></script>
<link href="~/Content/Css/form.css" rel="stylesheet" />
<link href="~/Areas/CortoPlazo/Content/Css/css.css?v=2.0" rel="stylesheet" />

<div class="form-title">
    <div class="content-titulo">Configuración de Barras CMgN</div>
    <div class="content-botonera">
        <input type="button" id="btnNuevo" value='Nuevo' />        
    </div>
</div>

<div class="content-hijo">
    <div id="mensaje"></div>
    <div class="search-content" style="margin-bottom:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Publicar en Portal:</td>
                <td>
                    <select id="cbPublicar">
                        <option value="-1">-TODOS-</option>
                        <option value="S">Si</option>
                        <option value="N">No</option>
                    </select>
                </td>
                <td>Estado:</td>
                <td>
                    <select id="cbEstado">
                        <option value="-1">-TODOS-</option>
                        <option value="A">Activo</option>
                        <option value="I">No activo</option>
                    </select>
                </td>
                <td>
                    <input type="button" id="btnConsultar" value='Consultar' />
                </td>
            </tr>
        </table>
    </div>
    <div id="listado">
    </div>
    <br />
    <br />
</div>

<div id="popupRelacion" class="general-popup" style="width:500px">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Configuración de Barras CM</span></div>
    <div class="popup-text" id="contenidoRelacion">

    </div>
</div>

<div id="popupMapa" class="general-popup" style="min-width:1050px; min-height:620px">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Coordenadas de la barra</span></div>
    <div id="contenidoMapa">

    </div>
</div>