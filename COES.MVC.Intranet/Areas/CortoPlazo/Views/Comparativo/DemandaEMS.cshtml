@model COES.MVC.Intranet.Areas.CortoPlazo.Models.ComparativoModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Areas/CortoPlazo/Content/Scripts/comparativodemandaEMS.js?v=1"></script>
<script src="~/Content/Scripts/highcharts.js"></script>
<script src="~/Content/Scripts/jquery.format.js"></script>
<link href="~/Areas/CortoPlazo/Content/Css/comparativo.css" rel="stylesheet" />

<div class="form-title">
    <div class="content-titulo">Comparativo Demanda EMS vs Demanda Ejecutada</div>
    <div class="content-botonera">
        <input type="button" id="btnExportar" value='Exportar a excel' />
        <input type="button" id="btnExportarMasivo" value='Reporte masivo' />
    </div>
</div><div class="div-exportar" id="divExportar">
    <div class="div-exportar-close" onclick="closeExportar();">X</div>
    <div class="div-exportar-content">
        <div class="popup-title"><span>Exportar Datos</span></div>
        <div class="action-exito" id="mensajeExportar">
            Seleccione el rango de fechas a exportar:
        </div>

        Fecha desde:
        <input type="text" id="txtExportarDesde" style="width:140px" value="@Model.Fecha" />
        Hasta:
        <input type="text" id="txtExportarHasta" style="width:140px" value="@Model.Fecha" />


        <div class="div-exportar-boton" id="container" style=" margin-top:30px">
            <input type="button" id="btnOkExportarMasivo" value="Aceptar" />
        </div>

        <input type="hidden" id="hfFechaActual" value="@Model.FechaPeriodo" />

    </div>
</div>

<div class="content-hijo">

    <div id="mensaje"></div>

    <div class="search-content" style="margin-bottom:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Fecha:</td>
                <td>
                    <input type="text" id="txtFecha" value="@Model.Fecha" />
                </td>
                <td>Barra EMS:</td>
                <td>
                    <select id="cbBarra">
                        <option value="">--SELECCIONE--</option>
                        @foreach (var item in Model.ListaBarra)
                        {
                            <option value="@item.Cnfbarcodi">@item.Cnfbarnombre</option>
                        }
                    </select>
                </td>
              
                <td>
                    <input type="button" id="btnConsultar" value="Consultar" />
                </td>
            </tr>
        </table>
    </div>

    <div id="listado">

        <table>
            <tr>
                <td valign="top">
                    <div id="contentTabla"></div>
                </td>
                <td style="width:30px"></td>
                <td valign="top">
                    <div id="contentGrafico" style="width: 750px; height: 500px; background-color: #F2F5F7; border: 1px solid #DDDDDD; padding:15px; border-radius:5px; display:none"></div>
                </td>
            </tr>
        </table>

    </div>

    <br />
    <br />
</div>