@model COES.MVC.Intranet.Areas.CortoPlazo.Models.GrupoLineaModel

<div class="content-registro">

    <form id="frmRegistroGrupo">
        <div id="mensajeEditGrupo" class="action-message">Por favor complete los datos</div>
        <table style="width:100%">
            
            <tr>
                <td class="registro-label">Nombre Grupo:</td>
                <td class="registro-control">
                    <input type="text" id="txtNombreGrupo" name="Nombre" value="@Model.Entidad.Grulinnombre" />
                </td>
            </tr>
            <tr>
                <td class="registro-label">Límite máximo del Flujo:</td>
                <td class="registro-control">
                    <input type="text" id="txtLimiteGrupo" name="Limite" value="@Model.Entidad.Grulinvallintrans" />
                </td>
            </tr>
            <tr>
                <td class="registro-label">% a considerar congestión:</td>
                <td class="registro-control">
                    <input type="text" id="txtPorcentajeGrupo" name="Porcentaje" value="@Model.Entidad.Grulinporlimtrans" />
                </td>
            </tr>
            <tr style="display:none">
                <td class="registro-label">Código NCP:</td>
                <td class="registro-control">
                    <input type="text" id="txtCodigoNCPGrupo" name="CodigoNcp" value="@Model.Entidad.Codincp" onkeypress="return validarNumero(this,event)" />
                </td>
            </tr>
            <tr style="display:none">
                <td class="registro-label">Nombre NCP:</td>
                <td class="registro-control">
                    <input type="text" id="txtNombreNCPGrupo" name="NombreNcp" value="@Model.Entidad.Nombrencp" />
                </td>
            </tr>            
            <tr>
                <td class="registro-label">Estado:</td>
                <td class="registro-control">
                    <select id="cbEstadoGrupo" name="Estado">
                        <option value="">-SELECCIONE-</option>
                        <option value="A">Activo</option>
                        <option value="B">Baja</option>
                    </select>
                    <input type="hidden" id="hfEstadoGrupo" value="@Model.Entidad.Grulinestado" />
                </td>
            </tr>
            <tr>
                <td class="registro-label">Equipo:</td>
                <td class="registro-control">
                    <select id="cbEquipo" name="Equipo">
                        <option value="">-SELECCIONE-</option>
                        @foreach(var item in Model.ListaEquipo)
                        {
                            <option value="@item.Equicodi">@item.Equinomb</option>
                        }
                    </select>
                    <input type="hidden" id="hfEquipo"  value="@Model.Entidad.Equicodi" />
                </td>
            </tr>
        </table>

        <div style="width:200px; margin:auto; text-align:center; margin-top:20px">
            <input type="button" id="btnGrabarGrupo" value="Grabar" />
            <input type="button" id="btnCancelarGrupo" value="Cancelar" />
        </div>

        <input type="hidden" id="hfIdGrupoLinea" name="Codigo" value="@Model.Entidad.Grulincodi" />
        <input type="hidden" id="hfTipoGrupo" name="TipoGrupo" value="@Model.Entidad.Grulintipo" />

    </form>
</div>
