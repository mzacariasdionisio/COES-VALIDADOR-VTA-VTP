@model COES.MVC.Intranet.Areas.CortoPlazo.Models.RelacionModel
@{
    ViewBag.Title = "Relacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Areas/CortoPlazo/Content/Scripts/relacion.js?v=5.2"></script>
<link href="~/Content/Css/form.css" rel="stylesheet" />
<link href="~/Areas/CortoPlazo/Content/Css/css.css" rel="stylesheet" />
<div class="form-title">
    <div class="content-titulo">Equivalencia de Códigos</div>
    <div class="content-botonera">       
        <input type="button" id="btnNuevo" value='Nuevo' />
        <input type="button" id="btnListado" value='Edición tipo Excel' style="display:none" />        
    </div>
</div>

<div class="content-hijo">
    <div id="mensaje"></div>
    <div class="search-content" style="margin-bottom:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Empresa:</td>
                <td>
                    <select id="cbEmpresa">
                        <option value="-1">-TODOS-</option>
                        @foreach (var item in Model.ListaEmpresa)
                        {
                            <option value="@item.Emprcodi">@item.Emprnomb</option>
                        }
                    </select>
                </td>
                <td>Estado:</td>
                <td>
                    <select id="cbEstado">
                        <option value="-1">-TODOS-</option>
                        <option value="ACTIVO">Activo</option>                        
                        <option value="NO ACTIVO">No activo</option>
                    </select>
                </td>
                <td>
                    <input type="button" id="btnConsultar" value='Consultar' />
                </td>               
            </tr>
        </table>
    </div>
    <div id="listado">
    </div>
    <br />
    <br />
</div>

<div id="popupRelacion" class="general-popup" style="width:500px">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Configuración de unidades no modeladas en el EMS</span></div>
    <div class="popup-text" id="contenidoRelacion">
        
        <div class="popup-title"><span>Barras EMS</span></div>
        <div style="clear:both; height:15px"></div>
        Barra EMS:
        <select>
            <option>-SELECCIONE BARRA EMS-</option>
        </select>
        <input type="button" value="Agregar" />
        <div style="clear:both; height:15px"></div>
        <table border="0" class="pretty tabla-icono">
            <thead>
                <tr>
                    <th>Quitar</th>
                    <th>Barra EMS</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <a href="#"><img src="~/Content/Images/btn-cancel.png" /></a>
                    </td>
                    <td>CHAVARR60</td>
                </tr>
                <tr>
                    <td>
                        <a href="#"><img src="~/Content/Images/btn-cancel.png" /></a>
                    </td>
                    <td>CHAVARRIA 220</td>
                </tr>
            </tbody>
        </table>
        <div style="clear:both; height:15px"></div>
        <div class="popup-title"><span>Potencias Generadas</span></div>
        <div style="clear:both; height:15px"></div>
        <table border="0" class="pretty tabla-icono">
            <thead>
                <tr>
                    <th>Modo operación</th>
                    <th>Potencia Generada</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        OQUENDO TG1 GAS
                    </td>
                    <td><input type="text" style="background-color:#fff; width:60px" /></td>
                </tr>
                <tr>
                    <td>
                        OQUENDO TG1 DIESEL
                    </td>
                    <td><input type="text" style="background-color:#fff; width:60px" /></td>
                </tr>
            </tbody>
        </table>
        <div style="clear:both; height:15px"></div>
        <div style="width:150px; margin:auto">
            <input type="button" value="Grabar" />
            <input type="button" value="Cancelar" />
        </div>
    </div>
</div>

<div id="popupConfiguracion" class="general-popup" style="width:500px">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Configuración de unidades no modeladas en el EMS</span></div>
    <div class="popup-text" id="contenidoConfiguracion">

    </div>
</div>