@model COES.MVC.Intranet.Areas.CortoPlazo.Models.RelacionModel
<form id="frmConfiguracion">
    <div id="mensajeEditBarraEMS" class="action-message">Por favor complete los datos</div>

    <div class="popup-title"><span>Barras EMS</span></div>
    <div style="clear:both; height:10px"></div>
    Barra EMS:
    <select id="cbBarraEMS">
        <option value="-1">-SELECCIONE-</option>
        @foreach (var item in Model.ListaBarraEMS)
        {
            <option value="@item.Cnfbarcodi">@item.Cnfbarnombre</option>
        }
    </select>
    <input type="button" value="Agregar" id="btnAgregar" />
    <div style="clear:both; height:10px"></div>
    <table id="tbBarras" border="0" class="pretty tabla-icono">
        <thead>
            <tr>
                <th>Quitar</th>
                <th>Barra EMS</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ListaBarra)
            {
                <tr>
                    <td>
                        <input type="hidden" id="hfBarraEMS" value="@item.Cnfbarcodi" />
                        <a><img src="~/Content/Images/btn-cancel.png" alt="" onclick="$(this).parent().parent().parent().remove();" style="cursor:pointer" /></a>
                    </td>
                    <td>@item.Cnfbarnombre</td>
                </tr>
            }
        </tbody>
    </table>
    <div style="clear:both; height:15px"></div>
    <div class="popup-title"><span>Potencias Generadas</span></div>
    <div style="clear:both; height:10px"></div>
    <table id="tbPotencias" border="0" class="pretty tabla-icono">
        <thead>
            <tr>
                <th>Modo de Operación</th>
                <th>Potencia Generada</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ListaPotencia)
            {
                <tr>
                    <td>
                        @item.Gruponomb
                        <input type="hidden" value="@item.Grupocodi" id="hfGrupoCodi" />
                    </td>
                    <td>
                        <input type="text" value="@item.Genpotvalor" id="txtPotencia" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <input type="hidden" id="hfListaBarras" name="CodigosBarra" />
    <input type="hidden" id="hfListaPotencia" name="CodigosPotencia" />
    <input type="hidden" id="hfCodigoRelacion" name="RelacionCodi" value="@Model.Relacioncodi" />
    <div style="clear:both; height:15px"></div>
    <div style="width:200px; margin:auto">
        <input type="button" id="btnGrabarConfiguracion" value="Grabar" />
        <input type="button" id="btnCancelarConfiguracion" value="Cancelar" />
    </div>
</form>