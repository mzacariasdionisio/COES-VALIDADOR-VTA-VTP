@model COES.MVC.Intranet.Areas.CortoPlazo.Models.RelacionModel

<table border="0" class="pretty tabla-icono" id="tablaRelacion">
    <thead>
        <tr>
            <th></th>
            <th>Empresa</th>
            <th>Equipo</th>
            <th>Cod. SGOCOES</th>
            <th>Nom. Barra</th>
            <th>ID</th>
            <th>Nombre TNA</th>
            <th>C.C.</th>
            <th>Estado</th>
            <th>RER</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.ListaRelacion.Count > 0)
        {
            foreach (var item in Model.ListaRelacion)
            {
                <tr>
                    <td>
                        <a href="JavaScript:editarRelacion(@item.Relacioncodi);"><img src="~/Content/Images/btn-edit.png" /></a>
                        <a href="JavaScript:eliminarRelacion(@item.Relacioncodi);"><img src="~/Content/Images/btn-cancel.png" /></a>

                        @if(item.Indnomodeladatna == "S")
                    {
                        <a href="JavaScript:verConfiguracionTNA(@item.Relacioncodi);"><img src="~/Content/Images/btn-properties.png" /></a>
                    }

                    </td>
                    <td>@item.Emprnomb</td>
                    <td>@item.Equinomb</td>
                    <td>@item.Equicodi</td>
                    <td>@item.Nombarra</td>
                    <td>@item.Idgener</td>
                    <td>@item.Nombretna</td>
                    <td>@item.Descripcion</td>
                    <td>@item.Estado</td>
                    <td>
                        @if (item.Indgeneracionrer == "S")
                        {
                            <span>Si</span>
                        }
                        else
                        {
                            <span>No</span>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>