@model COES.MVC.Intranet.Areas.CortoPlazo.Models.UmbralModel
@{
    ViewBag.Title = "Configuración de Umbrales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Css/form.css" rel="stylesheet" />
<script src="~/Content/Scripts/jquery.easytabs.min.js"></script>
<link href="~/Content/Css/tabs.css" rel="stylesheet" />
<script src="~/Areas/CortoPlazo/Content/Scripts/umbral.js?v=1.1"></script>

<div class="form-title">
    <div class="content-titulo">Parámetros</div>
    <div class="content-botonera">

    </div>
</div>

<div class="content-hijo">
   
    <div id="tab-container" class='tab-container'>
        <ul class='etabs'>
            <li class='tab'><a href="#configuracion">Umbrales para comparativos</a></li>
            <li class='tab'><a href="#anguloOptimo">Cálculo de Ángulo óptimo</a></li>

        </ul>
        <div class='panel-container'>
            <div id="configuracion">

                <div class="popup-title"><span>Porcentajes máximos de variación de comparativos de datos</span></div>
                <div id="mensaje" class="action-message">Por favor complete los datos solicitados.</div>
                <div class="search-content">
                    <form id="frmRegistro">
                        <table class="pretty tabla-formulario" style="width:50%;">
                            <thead>
                                <tr>

                                    <th>Concepto</th>
                                    <th>Valor</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td style="text-align:left">Horas de operación vs Despacho Ejecutado</td>
                                    <td style="text-align:left"><input type="text" id="txtHoraOperacion" name="UmbralHOP" value="@Model.Entidad.Cmumcohopdesp" />(%)</td>
                                </tr>
                                <tr>
                                    <td style="text-align:left">Generación EMS vs Despacho Ejecutado</td>
                                    <td style="text-align:left"><input type="text" id="txtGeneracionEMS" name="UmbralGeneracionEMS" value="@Model.Entidad.Cmumcoemsdesp" />(MW)</td>
                                </tr>
                                <tr>
                                    <td style="text-align:left">Demanda EMS vs Demanda Ejecutada</td>
                                    <td style="text-align:left"><input type="text" id="txtDemandaEMS" name="UmbralDemandaEMS" value="@Model.Entidad.Cmuncodemanda" />(MW)</td>
                                </tr>
                                <tr>
                                    <td style="text-align:left">Costos Incrementales</td>
                                    <td style="text-align:left"><input type="text" id="txtCI" name="UmbralCI" value="@Model.Entidad.Cmumcoci" />(S/.)</td>
                                </tr>


                            </tbody>
                        </table>
                        <br /><br />

                        <div><input type="button" value="Guardar" id="btnGrabar" /></div>
                        <input type="hidden" id="hfCodigo" name="Codigo" value="@Model.Entidad.Cmumcocodi" />
                        <input type="hidden" name="NumTab" value="1" />
                    </form>
                </div>

            </div>

            <div id="anguloOptimo">
                <div class="popup-title"><span>Parámetros para el cálculo del ángulo óptimo</span></div>
                <div id="mensaje2" class="action-message">Por favor complete los datos solicitados.</div>
                <div class="search-content">
                    <form id="frmRegistroAngulo">
                        <table class="pretty tabla-formulario" style="width:50%;">
                            <thead>
                                <tr>

                                    <th>Concepto</th>
                                    <th>Valor</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td style="text-align:left">Número de iteraciones</td>
                                    <td style="text-align:left"><input type="text" id="txtNumIter" name="UmbralNumIter" value="@Model.Entidad.Cmumconumiter" /></td>
                                </tr>
                                <tr>
                                    <td style="text-align:left">Variación del ángulo</td>
                                    <td style="text-align:left"><input type="text" id="txtVarAng" name="UmbralVarAng" value="@Model.Entidad.Cmumcovarang" /></td>
                                </tr>

                            </tbody>
                        </table>
                        <br /><br />

                        <div><input type="button" value="Guardar" id="btnGrabarAngulo" /></div>
                        <input type="hidden" id="entidadCodigo" name="Codigo" value="@Model.Entidad.Cmumcocodi" />
                        <input type="hidden" name="NumTab" value="2" />
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<div id="popupConfirmar" class="general-popup" style="width:300px">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>¿Está seguro de realizar la operación?</span></div>
    <div class="popup-text">
        <div class="formulario-boton">
            <input type="button" id="btnConfirmar" value="Aceptar" />
            <input type="button" id="btnCancelar"  value="Cancelar" />
        </div>
    </div>
</div>

