@model COES.MVC.Intranet.Areas.CortoPlazo.Models.BusquedaEqEquipoModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Areas/CortoPlazo/Content/Scripts/equipo.js?v=1.15"></script>
<link href="~/Areas/CortoPlazo/Content/Css/css.css" rel="stylesheet" />
<script src="~/Content/Scripts/inputmaskmin.js"></script>

<div class="form-title">
    <div class="form-title">
        <div class="content-titulo">Equipo - Capacidad de regulaci&oacute;n</div>
        <div class="content-botonera">            
        </div>
    </div>
</div>

        <div class="content-hijo" id="mainLayout">
            <div class="search-content" style="margin-bottom:10px">
                <table class="content-tabla-search" style="width:auto">
                    <tr>
                        <td>Empresa:</td>
                        <td>
                            <select id="cbEmprNomb" name="EmprNomb" style="width:300px">
                                <option value="0">TODOS</option>
                                @foreach (var item in Model.ListaSiEmpresa)
                                {
                                    <option value="@item.Emprcodi">@item.Emprnomb</option>
                                }
                            </select>
                        </td>
                        <td>Ubicaci&oacute;n:</td>
                        <td>
                            <select id="cbAreaabrev" name="Areaabrev" style="width:200px">
                                <option value="0">TODOS</option>
                                @foreach (var item in Model.ListaEqArea)
                                {
                                    <option value="@item.Areacodi">@item.Areanomb</option>
                                }
                            </select>
                        </td>
                        

                        

                    </tr>
                    <tr>
                        <td>Tipo equipo:</td>
                        <td>
                            <select id="cbFamAbrev" name="FamAbrev" style="width:300px" disabled="disabled">
                                <option value="0">TODOS</option>
                                @foreach (var item in Model.ListaEqFamilia)
                                {
                                    <option value="@item.Famcodi">@item.Famnomb</option>
                                }
                            </select>
                        </td>
                        <td>Fecha:</td>
                        <td><input type="text" id="txtFechaDesde" name="FechaInicio" value="@Model.FechaIni" style="width:120px" /></td>
                        
                        <td>
                            <input type="button" id="btnBuscar" value="Buscar" style="margin-left:0" />
                        </td>
                    </tr>
                </table>
            </div>

            <div class="content-tabla">
                <div class="tabla-header">
                    <div class="table-paginado" id="paginado"></div>
                </div>
                <div class="table-list" id="listado"></div>
            </div>
        </div>

<div id="popupEdicion" class="general-popup">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span></span></div>
    <div class="popup-text" id="contenidoEdicion">
    </div>
</div>
