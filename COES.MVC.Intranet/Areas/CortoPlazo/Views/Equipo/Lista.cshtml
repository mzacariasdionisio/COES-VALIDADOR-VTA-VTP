@model COES.MVC.Intranet.Areas.CortoPlazo.Models.BusquedaEqEquipoModel
@using System.Globalization

<div style="clear:both; height:15px"></div>
<div id="reporte" style="text-align: center" class="content-registro">
    <table id="tabla" class="pretty tabla-adicional" cellspacing="0">
        <thead>
            <tr>
                <th style="width:60px; min-width:60px">Acciones</th>
                <th>Empresa</th>
                <th>Ubicaci&oacute;n</th>                
                <th>Abreviatura</th>
                <th>Nombre</th>
                <th>Valor</th>                
                <th>Modificaci&oacute;n</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ListaEqEquipo)
            {                
                <tr>                    
                    <td style="width:60px; min-width:60px">   
                        @{
                var fechaLastdate = "";
                var fechaLastdate2 = "";
                var fecha = "";
                if (item.Lastdate != null)
                {
                    fechaLastdate = ((DateTime)item.Lastdate).ToString(COES.MVC.Intranet.Helper.Constantes.FormatoFecha);
                    fechaLastdate2 = fechaLastdate.Replace("/","");
                }
                fecha = "'" + fechaLastdate + "'";

                <a href="JavaScript:editar(@item.Equicodi,@item.Propcodi,'',1)" title="Nuevo...">
                    <img src="~/Content/Images/btn-add.png" />
                </a>

                if (@fechaLastdate.Length != 0)
                {
                    <a href="JavaScript:editar(@item.Equicodi,@item.Propcodi,@fechaLastdate2,0)" title="Ver...">
                        <img src="~/Content/Images/btn-open.png" />
                    </a>
                            <a href="JavaScript:editar(@item.Equicodi,@item.Propcodi,@fechaLastdate2,1)" title="Editar...">
                                <img src="~/Content/Images/btn-edit.png" />
                            </a>
                }
                else
                {
                    <a></a>
                            <a></a>
                }
                
                        }

                        

                        
                    </td>
                    <td>@item.Emprnomb</td>
                    <td>@item.Areanomb</td>                    
                    <td>@item.Equiabrev</td>
                    <td>@item.Equinomb</td>
                    <td>@item.B2</td>
                    <td>
                       
                        @fechaLastdate
                    </td>
                    <td>@item.Equiestado</td>

                </tr>
            }
        </tbody>
    </table>
</div>
