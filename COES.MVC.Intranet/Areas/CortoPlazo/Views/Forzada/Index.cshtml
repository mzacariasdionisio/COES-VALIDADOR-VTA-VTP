@model COES.MVC.Intranet.Areas.CortoPlazo.Models.ForzadaModel           
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Areas/CortoPlazo/Content/Scripts/genforzada.js?v=1.15"></script>
<script src="~/Content/Scripts/jquery.easytabs.min.js"></script>
<link href="~/Content/Css/tabs.css" rel="stylesheet" />
<link href="~/Content/Css/form.css" rel="stylesheet" />
<script src="~/Content/Scripts/inputmaskmin.js"></script>

<div class="form-title">
    <div class="content-titulo">Generación Forzada - Costos Marginales</div>
    <div class="content-botonera">        
    </div>
</div>

<div class="content-hijo">

    <div id="tab-container" class='tab-container'>
        <ul class='etabs'>
            <li class='tab'><a href="#hidraulicas">Generación Forzada C.H.</a></li>          
            <li class='tab'><a href="#fijos">Fijos</a></li>
        </ul>
        <div class='panel-container'>
            <div id="hidraulicas">

                <div id="mensajeHidroList" class="action-message">Registro de Unidades con Generación Forzada Hidroléctricas.</div>
                <div class="search-content" style="margin-bottom:10px">
                    <table class="content-tabla-search" style="width:auto">
                        <tr>
                            <td>Desde:</td>
                            <td>
                                <input type="text" id="txtFechaHidroDesde" value="@Model.FechaHidroInicio" />
                            </td>
                            <td>Hasta:</td>
                            <td>
                                <input type="text" id="txtFechaHidroHasta" value="@Model.FechaHidroFin" />                                
                            </td>
                            <td>
                                <input type="button" id="btnConsultarHidro" value="Consultar" />
                                <input type="button" id="btnNuevoHidro" value="Agregar" />
                            </td>
                        </tr>
                    </table>
                </div>                
                <div id="listadoHidro">
                </div>
            </div>       
            <div id="fijos">

                <div style="margin:5px">
                    <div class="search-content">
                        <table class="content-tabla-search" style="width:auto; ">
                            <tr>
                                <td><input type="button" id="btnNuevoMaestro" value='Nuevo' /></td>
                            </tr>
                        </table>
                    </div>


                    <div id="mensajeListMaestro"></div>
                    <div id="listadoMaestro">
                    </div>
                </div>
                 
            </div>
        </div>
    </div>
    <br />
    <br />
</div>


<div id="popupHidraulico" class="general-popup" style="width:500px">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Generación Forzada</span></div>
    <div class="popup-text" id="contenidoHidraulico">

    </div>
</div>

<div id="popupMaestro" class="general-popup" style="width:500px">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Configuración de Generación Forzada</span></div>
    <div class="popup-text" id="contenidoMaestro">

    </div>
</div>
