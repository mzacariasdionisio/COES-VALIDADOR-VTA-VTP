@model COES.MVC.Intranet.Areas.CortoPlazo.Models.ForzadaMaestroModel

<div class="content-registro">
    <form id="frmRegistroMaestro">
        <div id="mensajeEditMaestro" class="action-message">Por favor complete los datos</div>
        <table style="width:100%">
            <tr>
                <td class="registro-label">Generador:</td>
                <td class="registro-control">
                    <select id="cbGeneradorMaestro" name="CodigoRelacion" style="width:300px">
                        <option value="-1">-SELECCIONE-</option>
                        @foreach (var item in Model.ListaRelacion) 
                        {
                            <option value="@item.Relacioncodi">@item.Equinomb</option>
                        }
                    </select>
                    <input type="hidden" id="hfGeneradorMaestro" value="@Model.Entidad.Relacioncodi" />
                </td>
            </tr>
            <tr>
                <td class="registro-label">Símbolo:</td>
                <td class="registro-control">
                    <select id="cbSimboloMaestro" name="Simbolo" style="width:300px">
                        <option value="=">=</option>
                        <option value="<"><</option>
                        <option value=">">></option>
                    </select>
                    <input type="hidden" id="hfSimboloMaestro" value="@Model.Entidad.Genformaesimbolo" />
                </td>
            </tr>
            <tr>
                <td class="registro-label">Tipo:</td>
                <td class="registro-control">
                    <select id="cbTipoMaestro" name="Tipo" style="width:300px">
                        <option value="1">C.H. de pasada</option>
                        <option value="2">Otros</option>
                    </select>
                    <input type="hidden" id="hfTipoMaestro" value="@Model.Entidad.Genfortipo" />
                </td>
            </tr>        
            <tr>
                <td class="registro-label">Calificación:</td>
                <td class="registro-control">
                    <select id="cbSubcausaevento" name="Subcausa" style="width:300px">
                        <option value="">-SELECCIONE-</option>
                        @foreach (var item in Model.ListaSubCausa)
                        { 
                            <option value="@item.Subcausacodi">@item.Subcausadesc</option>
                        }
                    </select>
                    <input type="hidden" id="hfSubcausaevento" value="@Model.Entidad.Subcausacodi" />
                </td>
            </tr>  
            <tr>
                <td class="registro-label">Estado:</td>
                <td class="registro-control">
                    <select id="cbEstadoMaestro" name="Estado" style="width:300px">
                        <option value="">-SELECCIONE-</option>
                        <option value="A">Activo</option>
                        <option value="B">Inactivo</option>
                    </select>
                    <input type="hidden" id="hfEstadoMaestro" value="@Model.Entidad.Indestado" />
                </td>
            </tr>
        </table>

        <div style="width:200px; margin:auto; text-align:center; margin-top:20px">
            <input type="button" id="btnGrabarMaestro" value="Grabar" />
            <input type="button" id="btnCancelarMaestro" value="Cancelar" />
        </div>

        <input type="hidden" id="hfIdMaestro" name="Codigo" value="@Model.Entidad.Genformaecodi" />
    </form>
</div>
