@model COES.MVC.Intranet.Areas.CortoPlazo.Models.ParametroModel

<div class="content-registro">

    <form id="frmRegistro">
        <div id="mensajeEdicion" class="action-message">Por favor complete los datos</div>
        <table style="width:100%">

            <tr>
                <td class="registro-label">Descripcion:</td>
                <td class="registro-control">
                    <input type="text" id="txtDescripcion" name="Descripcion" maxlength="100" style="width:300px" value="@Model.Entidad.Cmparnombre" />
                </td>
            </tr>
            <tr>
                <td class="registro-label">Valor Inferior:</td>
                <td class="registro-control">
                    <input type="text" id="txtValorInferior" name="ValorInferior" maxlength="100" style="width:300px" value="@Model.Entidad.Cmparinferior" onkeypress="return validarNumero(this,event)" />
                </td>
            </tr>
            <tr>
                <td class="registro-label">Valor Superior:</td>
                <td class="registro-control">
                    <input type="text" id="txtValorSuperior" name="ValorSuperior" maxlength="100" style="width:300px" value="@Model.Entidad.Cmparsuperior" onkeypress="return validarNumero(this,event)" />
                </td>
            </tr>
            <tr>
                <td class="registro-label">Color del Evento:</td>
                <td class="registro-control">
                    <input type="text" id="txtColor" name="Color" value="@Model.Entidad.Cmparvalor" />
                </td>
            </tr>

        </table>

        <div style="width:200px; margin:auto; text-align:center; margin-top:20px">
            <input type="button" id="btnGrabar" value="Grabar" />
            <input type="button" id="btnCancelar" value="Cancelar" />
        </div>

        <input type="hidden" id="hfCodigo" name="Codigo" value="@Model.Entidad.Cmparcodi" />

    </form>
</div>
