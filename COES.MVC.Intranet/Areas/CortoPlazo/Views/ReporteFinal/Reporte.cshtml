@model COES.MVC.Intranet.Areas.CortoPlazo.Models.VersionReporteModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Areas/CortoPlazo/Content/Scripts/reportefinal.js?v=1"></script>
<script src="~/Content/Scripts/jquery.format.js"></script>
<link href="~/Areas/CortoPlazo/Content/Css/comparativo.css" rel="stylesheet" />

<div class="form-title">
    <div class="content-titulo">Generación de reporte de revisión y final de CMgCP</div>
    <div class="content-botonera">
        <input type="button" id="btnNuevo" value='Nuevo' />
    </div>
</div>

<div class="content-hijo">

    <div id="mensaje"></div>

    <div class="search-content" style="margin-bottom:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Fecha inicio:</td>
                <td>
                    <input type="text" id="txtFechaInicio" value="@Model.FechaInicio" />
                </td>
                <td>Fecha fin:</td>
                <td>
                    <input type="text" id="txtFechaFin" value="@Model.FechaFin" />
                </td>
                <td>
                    <input type="button" id="btnConsultar" value="Consultar" />
                </td>
            </tr>
        </table>
    </div>

    <div id="listado">

    </div>

    <br />
    <br />
</div>

<div id="popupEdicion" class="general-popup">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Generar reporte de revisión y final</span></div>
    <div class="popup-text" id="contenidoEdicion" style="margin-top:0">

        <div class="action-message" id="mensajeGeneracion">Seleccione fecha y presione "Generar reporte"</div>

        <div class="search-content" style="margin-bottom:10px">
            <table class="content-tabla-search" style="width:auto">
                <tr>
                    <td>Fecha:</td>
                    <td>
                        <input type="text" id="txtFecha" value="@Model.Fecha" />
                    </td>                   
                    <td>
                        <input type="button" id="btnGenerar" value="Generar reporte" />
                    </td>
                </tr>
            </table>
        </div>

    </div>
</div>
