@model COES.MVC.Intranet.Areas.CostoOportunidad.Models.CargaModel
@{
    ViewBag.Title = "Consultas de Costos de Oportunidad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Areas/CostoOportunidad/Content/Scripts/cargasenial.js?v=1.5"></script>
<script src="~/Content/Scripts/plupload.full.min.js"></script>
<link href="~/Content/Css/form.css" rel="stylesheet" />
<link href="~/Areas/CostoOportunidad/Content/Css/css.css" rel="stylesheet" />

<div class="form-title">
    <div class="content-titulo">Carga manual de señales SCADA</div>
    <div class="content-botonera">
        <input type="button" id="btnSubirArchivo" value="Subir archivo" />
    </div>
</div>

<div class="div-exportar" id="divExportar">
    <div class="div-exportar-close" onclick="closeExportar();">X</div>
    <div class="div-exportar-content">
        <div class="popup-title"><span>Carga de archivo de Señales Scada</span></div>       
        <div class="form-importar-content">
            <div class="form-importar-item">Seleccionar archivo(xlsx):</div>
            <div class="form-importar-item">
                <input type="button" id="btnSelectFile" value="Seleccionar" />
            </div>
            <div style="clear:both"></div>
        </div>

        <div id="progreso"></div>
        <div id="fileInfo"></div>

        <div class="div-importar-boton" id="container">
            <input type="button" id="btnProcesarFile" value="Procesar" />
        </div>

    </div>
</div>

<div class="content-hijo">

    <div id="mensaje"></div>

    <div class="search-content" style="margin-bottom:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                
                <td>Fecha Inicio:</td>
                <td>
                    <input type="text" id="txtFechaInicio" value="@Model.FechaInicio"/>
                </td>
                <td>Fecha Fin</td>
                <td>
                    <input type="text" id="txtFechaFin" value="@Model.FechaFin" />
                </td>          
                <td>URS</td>
                <td>
                    <select id="cbUrs">
                        <option value="0">-TODOS-</option>
                        @foreach (var item in Model.ListaURS)
                        {
                            <option value="@item.Grupocodi">@item.Ursnomb</option>
                        }
                    </select>
                </td>
                <td>Señal</td>
                <td>
                    <select id="cbSenial">
                        <option value="0">-TODOS-</option>
                    </select>
                </td>
                <td colspan="4">
                    <input type="button" id="btnConsultar" value="Consultar" />
                    
                </td>
            </tr>
        </table>
    </div>

    <div id="listado">
       
    </div>
    <br />
    <br />
</div>

