@model COES.MVC.Intranet.Areas.DemandaBarras.Models.CumplimientoDistribucionModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Areas/DemandaBarras/Content/Css/mediciones.css" rel="stylesheet" />

<script src="~/Content/Scripts/multiselect.js"></script>
<link href="~/Content/Css/multiselect.css" rel="stylesheet" />
<script src="~/Areas/DemandaBarras/Content/Scripts/cumplimiento.js"></script>
<div class="form-title">
    <div class="content-titulo">Reporte de cumplimiento de carga</div>
    <div class="content-botonera">
        <input type="button" id="btnExportar" value="Exportar" />
        <input type="button" id="btnCancelar" value="Cancelar" />
    </div>
</div>

<div class="content-hijo" id="mainLayout">
    <div class="search-content" style="margin-bottom:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Fecha inicial:</td>
                <td>
                    <input type="text" id="txtFechaInicial" style="width:140px" value="@Model.FechaInicio" />
                </td>
                <td>Fecha final:</td>
                <td>
                    <input type="text" id="txtFechaFinal" style="width:140px" value="@Model.FechaFin" />
                </td>
                <td>Empresa:</td>
                <td>
                    <select id="cbEmpresas" multiple="multiple">
                        @foreach (var item in Model.ListaEmpresas)
                        {
                            <option value="@item.Emprcodi">@item.Emprnomb</option>
                        }
                    </select>
                </td>                
                <td>
                    <input type="button" id="btnConsultar" value="Consultar" />
                </td>
            </tr>
        </table>
    </div>

    <div class="content-tabla">        
        <div style="clear:both"></div>
        <div class="table-list" id="listado"></div>
        <div style="clear:both"></div>
    </div>

    <br />
    <input type="hidden" id="hfEmpresa" />
</div>


<div id="popupEnvios" class="general-popup">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Reporte de envíos</span></div>
    <div id="contenedorEnvios">

    </div>
</div>
