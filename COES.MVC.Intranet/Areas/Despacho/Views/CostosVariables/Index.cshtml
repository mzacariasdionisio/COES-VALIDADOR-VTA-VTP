@model COES.MVC.Intranet.Areas.Despacho.ViewModels.IndexCostosVariablesViewModel
@{
    ViewBag.Title = "Costos Variables";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Areas/Despacho/Content/Css/Despacho.css" rel="stylesheet" />
<script src="~/Content/Scripts/jquery.easytabs.min.js"></script>
<link href="~/Content/Css/tabs.css" rel="stylesheet" />
<script src="~/Content/Scripts/inputmaskmin.js"></script>

<script src="~/Areas/Despacho/Content/Scripts/IndexCostosVariables.js?v=1.2"></script>

<div class="form-title">
    <div class="content-titulo">Costos Variables</div>
    <div class="content-botonera">
        <input type="button" id="btnNuevo" value="Nuevo" />
    </div>
</div>

<div class="content-hijo">
    <div class="search-content">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Tipo de Programa:</td>
                <td>
                    <select id="cbTipoPrograma" name="cbTipoPrograma" style="width: 190px; margin-bottom: 6px;">
                        <option value="-1">--TODOS--</option>
                        @foreach (var item in Model.ListaTipoPrograma)
                        {
                            <option value="@item.Valor">@item.Descripcion</option>
                        }
                    </select>

                </td>

                <!-- Diario-->
                <td class="tp_diario">Fecha inicio:</td>
                <td class="tp_diario">
                    <input type="text" id="FechaConsultaIni" name="FechaConsultaIni" value="@Model.FechaInicio.ToString("dd/MM/yyyy")" style="width:120px" />
                </td>

                <td class="tp_diario">Fecha fin:</td>
                <td class="tp_diario">
                    <input type="text" id="FechaConsultaFin" name="FechaConsultaFin" value="@Model.FechaFin.ToString("dd/MM/yyyy")" style="width:120px" />
                </td>

                <!-- Semanal -->
                <td class="tp_semanal" style="display: none">Año:</td>
                <td class="tp_semanal" style="display: none">
                    <input type="text" id="anho" name="anho" style="width:70px;" value="@Model.Anho" class="filtro-contenido" />
                </td>
                <td class="tp_semanal" style="display: none">Semana Operativa:</td>
                <td class="tp_semanal" style="display: none">
                    <div id="divSemana" style="display:inline-block">
                        <select id="cbSemana" name="IdSemana" style="width: 155px">
                        </select>
                    </div>
                </td>

                <td><input type="button" id="btnConsultar" value="Consultar" /></td>
            </tr>
        </table>
    </div>

    <div style="clear:both; height:30px;"></div>

    <div id="tab-container" class='tab-container'>
        <ul class='etabs'>
            <li class='tab'><a href="#vistaActualizaciones">Actualizaciones</a></li>
            <li class='tab'><a href="#vistaDocumentosCV">Documentos CV</a></li>
        </ul>
        <div class='panel-container'>
            <div id="vistaActualizaciones">
                <div id="listado"></div>
            </div>
            <div id="vistaDocumentosCV">
                <div id="documentosCV"></div>
            </div>
        </div>
    </div>

</div>

<div id="popupDetAct" class="general-popup" style="width: 900px">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Detalle de Actualización</span></div>
    <div style="clear:both; height:20px"></div>
    <div id="editarDetAct">
    </div>
</div>

<input type="hidden" id="hfSemana" value="@Model.SemanaActual" />