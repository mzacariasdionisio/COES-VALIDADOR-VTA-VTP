    $(function () {
        $('#FechaDat').Zebra_DatePicker({});
        $('#btnActualizar').click(function () {
            //var modo = $("#hfModoEdicion").val();
            //var concepto = $("#hfConcepCodi").val();
            //var grupo = $("#hfGrupoCodi").val();
