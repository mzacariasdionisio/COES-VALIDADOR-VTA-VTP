@model COES.MVC.Intranet.Areas.Equipamiento.Models.EquipoPropiedadesModel
@{
    ViewBag.Title = "Propiedades de equipo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Content/Scripts/plupload.full.min.js"></script>
<script src="~/Areas/Equipamiento/Content/Scripts/equipopropiedad.js"></script>
<div class="form-title">
    <div class="content-titulo">Propiedades de equipo</div>
    <div class="content-botonera">
        <input type="button" id="btnRegresar" value="Regresar" />
    </div>
</div>
<div class="content-hijo" id="mainLayout">
    @using (Html.BeginForm("", "Equipo", FormMethod.Post, new { @class = "form-search", id = "frmEquipoPropiedad" }))
    {
        <input id="hdnEnableEdit" type="hidden" value="@Model.EnableEditar" name="EnableEditar" />
        <input id="hdnEnableNuevo" type="hidden" value="@Model.EnableNuevo" name="EnableNuevo" />
        <input id="hdnEquiCodi" type="hidden" value="@Model.Equicodi" name="Equicodi" />
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td class="tbform-label">Código:</td>
                <td>
                    @Model.Equicodi
                </td>

                <td class="tbform-label">Nombre:</td>
                <td>
                    @Model.Equinomb
                </td>
                <td class="tbform-label">Abreviatura:</td>
                <td>
                    @Model.Equiabrev
                </td>
                <td class="tbform-label">Tipo equipo:</td>
                <td>
                    @Model.Famnomb
                </td>
                <td class="tbform-label">Empresa:</td>
                <td>
                    @Model.Emprnomb
                </td>
                <td class="tbform-label">Ubicación:</td>
                <td>
                    @Model.Areanomb
                </td>
                <td><div id="mensaje" style="width:600px; margin:0"></div></td>
            </tr>
            <tr>
                <td class="tbform-label">Propiedad:</td>
                <td>
                    <input type="text" id="txtPropiedad" name="PropiedadNombre" style="width: 120px" />
                </td>
                <td>
                    <input type="button" value="Buscar" id="btnBuscarPropiedad" />
                </td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </table>
        <input type="hidden" id="hfNroPagina" name="NroPagina" value="1" />
    }
    <div class="content-tabla">
        <div class="tabla-header">
            <div class="table-paginado" id="paginado"></div>
        </div>
        <div class="table-list" id="listado"></div>
    </div>

    <div style="clear:both; height:30px"></div>
</div>
<div id="popupHistorico">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Datos históricos de propiedad</span></div>
    <div id="historicoPropiedad"></div>
</div>
<div id="popupValorPropiedad">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Agregar valor de propiedad</span></div>
    <div id="valorPropiedad"></div>
</div>