@model COES.MVC.Intranet.Areas.Equipamiento.Models.EquipoPropiedadesModel
@{
    ViewBag.Title = "Propiedades de equipo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Content/Scripts/handsontable.full.min.js"></script>
<script src="~/Content/Scripts/Handson/htmaxlength.js"></script>
<script src="~/Content/Scripts/Handson/moment.js"></script>
<script src="~/Content/Scripts/Handson/select2.js"></script>
<script src="~/Content/Scripts/Handson/select2handson.js"></script>
<link href="~/Content/Css/handsontable.full.min.css" rel="stylesheet" />
<link href="~/Content/Css/Handson/select2.css" rel="stylesheet" />

<script src="~/Areas/Equipamiento/Content/Scripts/equipoPropiedadSheet.js?v=1.6.0"></script>
<link href="~/Areas/Equipamiento/Content/Css/Sheet.css?v=1.3" rel="stylesheet" />

<div class="form-title">
    <div class="content-titulo">Propiedades de Equipo</div>
    <div class="content-botonera">
        @if (Model.AccesoEditar)
        {
            <input type="button" id="btnEnable" value="Habilitar Edición" @Model.EnableNuevo />
        }
        @if (Model.AccesoNuevo)
        {
            <input type="button" id="btnSave" value="Guardar" @Model.EnableNuevo style="display: none" />
        }
        <input type="button" id="btnRegresar" value="Regresar" />
    </div>
</div>
<div class="content-hijo" id="mainLayout">
    <div class="search-content" style="margin-bottom: 0">
        <input id="hfEquipo" type="hidden" value="@Model.Equicodi" />
        <table class="content-tabla-search" style="width: auto">
            <tr>
                <td class="tbform-label">Código:</td>
                <td>
                    @Model.Equicodi
                </td>

                <td class="tbform-label">Nombre:</td>
                <td>
                    @Model.Equinomb
                </td>
                <td class="tbform-label">Abreviatura:</td>
                <td>
                    @Model.Equiabrev
                </td>
                <td class="tbform-label">Tipo equipo:</td>
                <td>
                    @Model.Famnomb
                </td>

                <td class="tbform-label">Empresa:</td>
                <td colspan="5">
                    @Model.Emprnomb
                </td>
                <td class="tbform-label">Ubicación:</td>
                <td>
                    @Model.Areanomb
                </td>
            </tr>

            <tr>
                <td class="tbform-label" colspan="5" style="text-align: right;">Fecha de Consulta:</td>
                <td colspan="1">
                    <input type="text" id="fecha_consulta" value="@Model.Fecha" />
                </td>
                <td class="tbform-label">Filtro de propiedades:</td>
                <td>
                    <input type="radio" name="rbFiltro" value="S">Ficha Técnica <br />
                    <input type="radio" name="rbFiltro" value="1">Aplicativos
                    <input type="radio" name="rbFiltro" value="-1" checked>Todos
                </td>
                @*<td class="tbform-label">Orden:</td>
                    <td>
                        <input type="radio" name="rbOrden" value="1" checked>Ficha Técnica <br />
                        <input type="radio" name="rbOrden" value="2">Alfabético
                    </td>*@
            </tr>
        </table>
    </div>


    <div id="mensaje" style="width: 600px; margin: 0"></div>

    <br />

    <p class="leyenda_vig" style=" margin-top: 0px;margin-bottom: 3px;; display: none">LEYENDA:</p>
    <table border="0" style="width:820px; margin-bottom: 10px; display: none" class="leyenda_vig" role="presentation">
        <tbody>
            <tr>
                <td style=" background-color: white; color: green; border: 1px solid #CCC; text-align: center;">DD/MM/YYYY</td>
                <td>Fecha de vigencia correcta.</td>
            </tr>
            <tr>
                <td style="background-color: white; color: rgb(218, 218, 32); border: 1px solid #CCC; text-align: center;">DD/MM/YYYY</td>
                <td>Fecha de vigencia en proceso de revisión o modificación que todavía no ha sido guardado en la base de datos COES.</td>
            </tr>
        </tbody>
    </table>

    <table border="0">
        <tbody>
            <tr>
                <td style="float:right"><div>BUSCAR: <input id="searchgrid" type="search"> </div></td>
            </tr>
        </tbody>
    </table>

    <div id='propiedadesEquipo' style="height:auto">

    </div>

</div>

<input id="hfDataExcel" type="hidden" value="" />

<div id="popupHistorico" class="general-popup" style="width: 900px">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Datos históricos de propiedad</span></div>
    <div id="historicoPropiedad"></div>
</div>