@model COES.MVC.Intranet.Areas.Equipamiento.Models.FTAreaRevisionModel
@{
    ViewBag.Title = "Envío Información Ficha Técnica";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Content/Scripts/jquery.format.js"></script>
<script src="~/Content/Scripts/multiselect.js"></script>
<link href="~/Content/Css/multiselect.css" rel="stylesheet" />

<script src="~/Areas/Equipamiento/Content/Scripts/fichatecnica/FTAreasRevision/principal.js?v=1.0.3"></script>
<link href="~/Areas/Equipamiento/Content/Css/principal.css?v=1.0.2" rel="stylesheet" />

<div class="form-title">
    <div class="content-titulo">Envío Información Ficha Técnica </div>
</div>

<div class="content-hijo" id="mainLayout">
    <div id="mensaje"></div>
    <input type="hidden" id="hdIdsAreaDelUsuario" value="@Model.StrIdsAreaDelUsuario"/>
    <input type="hidden" id="hfEmpresa" />
    <input type="hidden" id="hfEtapa" />
    <input type="hidden" id="hfEstado" />
    <input type="hidden" id="hdIdEstado" value="@Model.IdEstado" />
    
    <div class="search-content" style="padding: 5px; max-height: 40px;">
        <table class="content-tabla-search" style="">
            <tr>
                <td class="celda-item" style="width: 55px;">Empresa:</td>
                <td style="width: 150px;">
                    <select id="cbEmpresa" style="width: 150px;" name="IdEmpresa" multiple="multiple">
                        @foreach (var item in Model.ListaEmpresas)
                        {
                            <option value="@item.Emprcodi">@item.Emprnomb</option>
                        }
                    </select>
                </td>
                <td class="celda-item" style="padding-left: 5px; width: 35px;">Etapa:</td>
                <td style="width: 150px;">
                    <select id="cbEtapa" name="IdEtapa">
                        <option value="-1"> -- TODOS -- </option>
                        @foreach (var item in Model.ListaEtapas)
                        {
                            <option value="@item.Ftetcodi"> @item.Ftetnombre </option>
                        }
                    </select>
                </td>
                <td class="celda-item" style="padding-left: 5px; width: 50px;">Desde:</td>
                <td style="width: 120px;">
                    <input type="text" id="FechaDesde" style="width: 100%;" name="FechaInicio" value="@Model.FechaInicio" />
                </td>
                <td class="celda-item" style="padding-left: 5px; width: 50px;">Hasta:</td>
                <td style="width: 120px;">
                    <input type="text" id="FechaHasta" style="width: 100%;" name="FechaFin" value="@Model.FechaFin" />
                </td>
                <td style="padding-left: 10px; white-space: nowrap;">
                    <input type="button" id="btnBuscar" value="Buscar" style="margin-right: 5px;" />
                    <input type="button" id="btnExportar" value="Exportar" />
                </td>

                <td style="padding-left: 10px; white-space: nowrap; vertical-align: top;">
                    <a href="#" id="btnManualUsuario" style="text-decoration: none; display: inline-block;">
                        <div style="display: inline-block; text-align: center; line-height: 15px; font-size: 12px;">
                            <img src="~/Content/Images/prn-ico-manual.png" style="height: 25px;"><br>
                            <span style="color: #278CCC;">Manual de Usuario</span>
                        </div>
                    </a>
                </td>

            </tr>
        </table>

        

    </div>

    <div class="content-tabla">

        <!--Listado de envios por carpetas-->
        <div id="listadoGeneralEnvios">

            <div style="float: left; width: 174px; height: 460px;" id="bandeja">
                <div id="div_carpetas" style="margin:10px;">

                </div>
            </div>

            <div id="reporte" style="display: inline-block; padding-left: 10px; width: 83%; ">
            </div>

        </div>
    </div>

    <div style="clear:both; height:30px"></div>

    <form id="frmEnvio" action="" method="post">
        <input type="hidden" id="hdidEnvioForm" name="codigoEnvio" />
        <input type="hidden" id="hdidEmpresaForm" name="codigoEmpresa" />
        <input type="hidden" id="hdidEtapaForm" name="codigoEtapa" />
        <input type="hidden" id="hdidProyectoForm" name="codigoProyecto" />
        <input type="hidden" id="hdidsEquiposForm" name="codigoEquipos" />
        <input type="hidden" id="hdidsEquiposDarBajaForm" name="codigoModoBaja" />
        <input type="hidden" id="hdAccionForm" name="accion" />
    </form>
</div>
