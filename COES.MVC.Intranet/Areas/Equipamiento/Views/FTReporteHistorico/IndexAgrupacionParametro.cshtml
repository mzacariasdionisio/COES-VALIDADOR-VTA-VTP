@model COES.MVC.Intranet.Areas.Equipamiento.Models.FichaTecnicaModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Configuración Agrupación de Parámetros";
}

<script src="~/Areas/Equipamiento/Content/Scripts/fichatecnica/FTReporteHistorico/agrupacionParametro.js?v=1.0.2"></script>
<link href="~/Areas/Migraciones/Content/Css/css.css" rel="stylesheet" />
<link href="~/Areas/Migraciones/Content/Css/parametro.css" rel="stylesheet" />

<div class="form-title">
    <div class="content-titulo">Configuración Agrupación de Parámetros</div>
    <div class="content-botonera">
        <input type="button" id="btnCrearAgrup" value="Crear Agrupación" />
        <input type="button" id="btnConsultar" value="Consultar" />
    </div>
</div>

<div class="content-hijo" id="mainLayout">
    <div id="textoMensaje" style=" margin: 0; margin-bottom: 10px;"></div>

    <div class="search-content">

        <div class="table-list" id="listadoAgrupacion"></div>
        <div style="clear:both; height:30px"></div>
    </div>
</div>

<!-- Agrupacion -->
<div id="popupAgrupacion" class="general-popup" style="width: 900px;height: 610px">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Agrupación</span></div>
    <div style="clear:both; height:20px"></div>

    <div class="panel-container">
        <div class="active" style="display: block; max-height: 500px; overflow-y: auto;">

            <div class="content-botonera">
                <input type="button" id="btnAgregarConcepto" value="Agregar Concepto / Propiedad" style="display: none" />
            </div>

            <table>
                <tbody>
                    <tr>
                        <td class="tbform-label">Nombre:</td>
                        <td class="tbform-control">
                            <input type="text" id="frmAgrpNomb" value="" style="width: 250px;" autocomplete=off />
                        </td>
                    </tr>
                </tbody>
            </table>

            <table id='tabla_concepcodi' class='pretty tabla-icono' style="display: none; margin-top: 15px;"></table>

            <input type="hidden" id="hfCodigoAgrupacion" value="0" />
        </div>
    </div>

    <div style="clear:both; height:20px"></div>
    <table style="width:200px;">
        <tr>
            <td id="tdAgrpGuardar">
                <input id="btnAgrpGuardar" type="button" value="Guardar">
            </td>
            <td id="tdAgrpCancelar">
                <input id="btnAgrpCancelar" type="button" value="Cancelar">
            </td>
        </tr>
    </table>
</div>

<!-- Concepto -->
<div id="popupConcepto" class="general-popup" style="width: 850px; height: 676px">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Conceptos / Propiedades de Grupo</span></div>
    <div style="clear:both; height:20px"></div>

    <div class="panel-container">
        <div class="active" style="display: block;">
            <table>
                <tbody>
                    <tr>
                        <td class="tbform-label" style="text-align: right;vertical-align:top">Origen de datos:</td>
                        <td>
                            <input type="radio" id="origen_1" name="origen" value="2"> Tipo de Equipo
                            <input type="radio" id="origen_2" name="origen" value="1" checked> Categoria de Grupo
                            <br />
                            <select id="cbFamiliaEquipo" style=" width: 242px; display: none">
                                <option value="0">-TODOS-</option>
                                @foreach (var item in Model.ListaFamilia)
                                {
                                    <option value="@item.Famcodi">@item.Famnomb</option>
                                }
                            </select>

                            <select id="cbAgrpCategoria" style=" width: 251px; display: block">
                                <option value="-1">--TODOS--</option>
                                @foreach (var item in Model.ListaCategoria)
                                {
                                    <option value="@item.Catecodi">@item.Catenomb</option>
                                }
                            </select>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div id="div_tabla_eq_propiedad" style="width: 800px; height: 535px ">
            </div>

            <div id="div_tabla_pr_concepto" style="width: 800px; height: 535px">
            </div>
        </div>

        <div style="clear:both; height:20px"></div>
        <table style="width:200px;">
            <tr>
                <td id="tdPropGuardar">
                    <input id="btnCnpGuardar" type="button" value="Agregar">
                </td>
                <td id="tdAgrpCancelar">
                    <input id="btnCnpCancelar" type="button" value="Cancelar">
                </td>
            </tr>
        </table>
    </div>
</div>