@model COES.MVC.Intranet.Areas.Equipamiento.Models.FichaTecnicaModel
@{
    ViewBag.Title = "Ficha Técnica Maestra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Areas/Equipamiento/Content/Scripts/fichatecnica/fichamaestra.js?v=2.3"></script>
<link href="~/Areas/Equipamiento/Content/Css/css.css" rel="stylesheet" />
<link href="~/Areas/Equipamiento/Content/Css/fichatecnica.css?v=2.0" rel="stylesheet" />
<link href="~/Content/Css/table.css" rel="stylesheet" />

<div class="form-title">
    <div class="content-titulo">Ficha Técnica Maestra</div>
    <div class="content-botonera">
        <input type="button" id="btnAgregar" value="Crear" />
        @*<input type="button" id="btnConsultar" value="Consultar" />*@
    </div>
</div>

<div class="content-hijo" id="mainLayout">

    <div class="content-tabla">
        <div class="table-list" id="listado"></div>
    </div>

    <div style="clear:both; height:30px"></div>

    <div id="leyenda" style="width: 100%;">
        <p>LEYENDA de estado de las fichas técnicas maestras:</p>
        <table border="0" style="">
            <tbody>
                <tr>
                    <td style="width: 50px; border: 1px solid black; background-color: #bae8be !important; color: white;"></td>
                    <td style="padding-right: 20px;">
                        Activo:	Estado que corresponde a la ficha técnica maestra oficial.
                    </td>
                </tr>
                <tr>
                    <td style="width: 50px; border: 1px solid black; background-color: #FFDDDD !important; color: white;"></td>
                    <td style="padding-right: 20px;">
                        Baja:	Estado que corresponde a una ficha técnica maestra oficial eliminada.
                    </td>
                </tr>
                <tr>
                    <td style="width: 50px; border: 1px solid black; background-color: white !important; color: white;"></td>
                    <td style="padding-right: 20px;">
                        Proyecto:	Estado de ficha técnica maestra en proceso de elaboración.
                    </td>
                </tr>
                <tr>
                    <td style="width: 50px; border: 1px solid black; background-color: #b7b7b7 !important; color: white;"></td>
                    <td style="padding-right: 20px;">
                        Anulado:	Estado que corresponde a una ficha técnica maestra en estado proyecto eliminada.
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<!-- Crear -->
<div id="popupCrear" class="general-popup" style="width: 900px">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Ficha Maestra</span></div>
    <div style="clear:both; height:20px"></div>
    <div id="editarFichaMaestra"></div>
</div>