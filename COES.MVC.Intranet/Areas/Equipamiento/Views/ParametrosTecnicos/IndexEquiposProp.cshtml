@model COES.MVC.Intranet.Areas.Equipamiento.Models.DetalleEquipoModel
@{
    ViewBag.Title = "Reporte de equipos sin datos de Ficha Técnica";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Css/validacion.css" rel="stylesheet" />
<link href="~/Content/Css/popup.css" rel="stylesheet" />
<link href="~/Content/Css/tabs.css" rel="stylesheet" />
<link href="~/Content/Css/form.css" rel="stylesheet" />
<script src="~/Content/Scripts/plupload.full.min.js"></script>

<link href="~/Areas/Eventos/Content/Css/ctaf.css?v=1.1" rel="stylesheet" />
<script src="~/Areas/Equipamiento/Content/Scripts/IndexEquiposProp.js?v=1.1.3"></script>
<div class="form-title">
    <div class="content-titulo">
        Reporte de equipos sin datos de Ficha Técnica
    </div>
</div>

<div class="content-hijo" id="mainLayout">

    <div class="form-main" style="margin-top:10px">
        <div id="mensaje"></div>
        <div style="clear:both; height:5px;"></div>
        <div class="search-content" style="margin-bottom:6px; padding:10px">

            <table class="content-tabla-search" style="width:auto">
                <tr>
                    <td class="tbform-label">Tipo de empresa:</td>
                    <td>
                        <select id="cbTipoEmpresa" name="iTipoEmpresa">
                            <option value="-1">-TODOS-</option>
                            @foreach (var item in Model.ListaTipoEmpresa)
                            {
                                <option value="@item.Tipoemprcodi">@item.Tipoemprdesc</option>
                            }
                        </select>
                    </td>

                    <td class="tbform-label">Empresa :</td>
                    <td>
                        <select id="cbEmpresa" name="IdEmpresa" style="width:250px">
                            <option value="-1">-TODOS-</option>
                            @foreach (var item in Model.ListaEmpresa)
                            {
                                <option value="@item.Emprcodi">@item.Emprnomb</option>
                            }
                        </select>
                    </td>
                    <td class="tbform-label">Tipo Equipo :</td>
                    <td>
                        <select id="cbFamilia" name="IdEmpresa" style="width:250px">
                            <option value="-1">-TODOS-</option>
                            @foreach (var item in Model.ListaTipoEquipo)
                            {
                                <option value="@item.Famcodi">@item.Famnomb</option>
                            }
                        </select>
                    </td>
                    <td class="tbform-label">Estado:</td>
                    <td>
                        <select id="cbEstado" name="idEstado">
                            <option value="-1">-TODOS-</option>
                            <option value="A">ACTIVO</option>
                            <option value="P">EN PROYECTO</option>
                            <option value="F">FUERA DE COES</option>
                            @*@foreach (var item in Model.ListaTipoEmpresa)
                            {
                                <option value="@item.Tipoemprcodi">@item.Tipoemprdesc</option>
                            }*@
                        </select>
                    </td>
                    <td>
                        <div class="content-botonera">
                            <input type="button" id="btnConsultar" value='Consultar' />
                        </div>
                    </td>

                </tr>
                <tr></tr>
            </table>
        </div>

        <div id="leyenda" style="width: 100%;">
            <p>LEYENDA de estado de los equipos:</p>
            <table border="0" style="width: 450px;">
                <tbody>
                    <tr>
                        <td style="width: 50px; border: 1px solid black; background-color: white !important; color: white;"></td>
                        <td style="padding-right: 20px;">Activo</td>

                        <td style="width: 50px; border: 1px solid black; background-color: #ffff00 !important; color: white;"></td>
                        <td style="padding-right: 20px;">En Proyecto</td>

                        <td style="width: 50px; border: 1px solid black; background-color: #5b6ff9 !important; color: white;"></td>
                        <td style="padding-right: 20px;">Fuera de COES</td>

                        <!--<td style="width: 50px; border: 1px solid black; background-color: #FFDDDD !important; color: white;"></td>
                    <td style="padding-right: 20px;">Equipo de Baja</td>-->
                    </tr>
                </tbody>
            </table>
        </div>

        <div style="clear:both"></div>
        <div class="content-tabla">
            <div class="table-list" id="listado"></div>

            <div style="clear:both; margin-bottom:40px"></div>

        </div>

    </div>
</div>

<div id="popupPropiedadesValidas" class="general-popup" style="width:650px">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Detalle de propiedades de Ficha Técnica</span></div>

    <div class="content-tabla">
        <div class="table-list" id="contenidoDetalle"></div>
    </div>
    @*<div class="popup-text" id="contenidoDetalle">
        </div>*@
</div>