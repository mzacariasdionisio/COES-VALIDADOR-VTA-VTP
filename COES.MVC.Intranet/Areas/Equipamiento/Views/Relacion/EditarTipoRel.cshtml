@model COES.MVC.Intranet.Areas.Equipamiento.Models.TipoRelDetalleModel
<script src="~/Areas/Equipamiento/Content/Scripts/tiporel.js"></script>
<script>
    $(function () {

        $('#btnGrabar').click(function () {
            actualizar();
        });
    });
</script>
<div class="panel-container">
    @using (Html.BeginForm("Editar", "Relacion",FormMethod.Post, new { @name = "frmEditarArea", id = "frmEditarArea" }))
    {
        @Html.HiddenFor(m => m.TiporelEstado)
        @Html.HiddenFor(m => m.Tiporelcodi)
        <table style="width:50%;margin-right: auto" class="table-form-show">
            <tr>
                <td class="tbform-label">Código:</td>
                <td class="tbform-control">
                    @Html.DisplayTextFor(m => m.Tiporelcodi)
                </td>
            </tr>
            <tr>
                <td class="tbform-label">Nombre:</td>
                <td class="tbform-control">
                    @Html.TextBoxFor(m => m.Tiporelnomb)
                </td>
            </tr>
            <tr>
                <td class="tbform-label">Estado:</td>
                <td class="tbform-control">
                    <select id="cbEstadoEdit" name="cbEstado">
                        @foreach (var item in Model.lsEstado)
                        {
                            <option value="@item.EstadoCodigo">@item.EstadoDescripcion</option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td><input id="btnGrabar" value="Grabar" type="button"></td>
                <td></td>
            </tr>
        </table>
    }
</div>
<script>
    $(function () {
        $('#cbEstadoEdit').val($('#TiporelEstado').val());
    });
</script>