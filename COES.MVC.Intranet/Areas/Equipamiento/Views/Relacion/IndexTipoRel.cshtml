@model COES.MVC.Intranet.Areas.Equipamiento.Models.TipoRelModel
@{
    ViewBag.Title = "Tipo de Relación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Areas/Equipamiento/Content/Scripts/tiporel.js?v=1.1"></script>
<div class="form-title">
    <div class="content-titulo">Tipo de relaciones</div>
    <div class="content-botonera">
        <input type="button" id="btnBuscar" value="Buscar" />
        <input type="button" id="btnNuevo" value="Nuevo" @*@Model.EnableNuevo*@ />
    </div>
</div>
<div class="content-hijo" id="mainLayout">
    @using (Html.BeginForm("IndexTipoRel", "Relacion", FormMethod.Post, new { @class = "form-search", name = "frmBusqueda", id = "frmBusqueda" }))
    {
        <input id="hdnEnableEdit" type="hidden" value="@Model.EnableEditar" name="EnableEditar" />
        <input id="hdnEnableNuevo" type="hidden" value="@Model.EnableNuevo" name="EnableNuevo" />
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Estado:</td>
                <td>
                    <select id="cbEstado" name="EstadoCodigo">
                        <option value="">Todos</option>
                        @foreach (var item in Model.ListaEstados)
                        {
                            <option value="@item.EstadoCodigo">@item.EstadoDescripcion</option>
                        }
                    </select>
                </td>
                <td>Nombre de tipo de relación:</td>
                
                <td><input type="text" id="NombreTiporel" name="NombreTiporel" value="@Model.NombreTiporel" style="width:120px" /></td>
                <td>
                    <div id="mensaje" style="width:300px; margin:0"></div>
                </td>
            </tr>
        </table>

        <input type="hidden" id="hfNroPagina" name="NroPagina" value="1" />
        <div style="clear:both; height:30px"></div>
        <div class="content-tabla">
            <div class="tabla-header">
                <div class="table-paginado" id="paginado"></div>
            </div>
            <div class="table-list" id="listado" align="center"></div>
        </div>
        @Html.HiddenFor(model => model.idTipoRel)
    }
</div>
<div id="popupTiporel">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Nuevo tipo de relación</span></div>
    <div id="nuevotiporel"></div>
</div>
<div id="popUpDetalleTiporel">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Detalle de tipo de relación</span></div>
    <div id="detalletiporel"></div>
</div>
<div id="popUpEditarTiporel">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Editar tipo de relación</span></div>
    <div id="editartiporel"></div>
</div>
