@model COES.MVC.Intranet.Areas.Evaluacion.Models.BuscarLineaModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .text-wrap {
        white-space: normal;
    }

    .width-200 {
        width: 200px;
    }
</style>
<div class="form-title">
    <div class="content-titulo">Buscar línea para incluir</div>
    <div class="content-botonera">
        <input type="button" value="Cerrar" id="btnCerrar" name="btnCerrar" class="form-action" style="margin-top: 15px" />
        <input type="button" value="Incluir" id="btnIncluir" name="btnIncluir" class="form-action" style="margin-top: 15px" />
    </div>

</div>
<div id="mensaje"></div>

<input type="hidden" id="IdLinea" />
<input type="hidden" id="IdEquipo" />

<div class="content-hijo" id="mainLayout">
    <div id="idpanel" style="overflow:auto; background-color:#fff">

        <div class="search-content" style="margin-bottom:0px; padding:15px">
            <table class="content-tabla-search" style="width:auto">
                <tr>
                    <th style="width: 6%;"></th>
                    <th style="width: 13%;"></th>
                    <th style="width: 7%;"></th>
                    <th style="width: 13%;"></th>
                    <th style="width: 8%;"></th>
                    <th style="width: 13%;"></th>
                    <th style="width: 8%;"></th>
                    <th style="width: 13%;"></th>
                </tr>
                <tr id="SeccionProgramaExistente">
                    <td>Código ID: </td>
                    <td>
                        <input type="text" id="codigoId" name="codigoId" style="width: 100%;" value="" maxlength="20" />
                    </td>
                    <td>Código: </td>
                    <td>
                        <input type="text" id="codigo" name="codigo" style="width: 100%;" value="" maxlength="20" />
                    </td>
                    <td>Ubicación: </td>
                    <td>
                        <select id="idUbicacion" name="idUbicacion" style="width: 100%;" multiple="multiple">
                            <option value="">TODOS</option>
                            @foreach (var item in Model.listaUbicacion)
                            {
                                <option value="@item.Areacodi">@item.Areanomb</option>
                            }
                        </select>
                    </td>
                    <td>Empresa: </td>
                    <td>
                        <select id="idTitular" name="idTitular" style="width: 100%;" multiple="multiple">
                            <option value="">TODOS</option>
                            @foreach (var item in Model.listaTitular)
                            {
                                <option value="@item.Emprcodi">@item.Emprnomb</option>
                            }
                        </select>
                    </td>

                </tr>
                <tr id="SeccionProgramaExistente">
                    <td>Estado: </td>
                    <td>
                        @(Html.DropDownList("estado", new SelectList(Model.listaEstado, "Eqcatdabrev", "Eqcatddescripcion", Model.estado), "TODOS", new { style = "width: 100%;" }))
                    </td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
                <tr id="SeccionProgramaExistente">
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>
                        <div class="content-botonera">
                            <input type="button" value="Consultar" id="btnConsultar" name="btnConsultar" class="form-action" style="margin-top: 15px" />
                        </div>
                    </td>
                </tr>
            </table>

        </div>
        <br />
        <div class="content-hijo" id="mainLayout">
            <div id='lista'></div>
        </div>
    </div>
</div>

<div id="popUpIncluir">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span id="span_pop_title">Seleccionar motivo de la actualización</span></div>
    <div id="incluir"></div>
</div>

