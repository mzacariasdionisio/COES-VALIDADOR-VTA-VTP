@model COES.MVC.Intranet.Areas.Evaluacion.Models.ListadoTransversalModel

<div style="width: 100%;">
    <div style="width: 30%; float: left; margin-right: 1%;">
        <h4>Actualizaciones</h4>
    </div>

    <div style="width: 65%; float: left; margin-right: 1%; margin-left: 1%;">
        <h4>Propiedades actualizadas</h4>
    </div>
</div>
<div style="width: 100%;">
    <div style="width: 30%; float: left; margin-top: 1%; margin-right: 1%; margin-bottom: 1%;">
        
        <table border="0" class="pretty tabla-icono display compact" id="tablaListadoActualizaciones">
            <thead>
                <tr>
                    <th style="width:10%"></th>
                    <th style="width:30%">Motivo</th>
                    <th style="width:20%">Fecha Proyecto</th>
                    <th style="width:20%">Usuario/a</th>
                    <th style="width:20%">Actualizado el</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ListaActualizaciones)
                {
                    <tr>
                        <td><input type="radio" name="selection" onchange="mostrarListadoPropiedadActualizada(@item.Epproycodi);" value="" /></td>
                        <td>@item.Motivo</td>
                        <td>@item.FechaProyecto</td>
                        <td>@item.Usuario</td>
                        <td>@item.FechaActualizacion</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>

    <div id="listadoPropiedadesActualizadas" style="width: 65%; float: left; margin: 1%;">
        <table border="0" class="pretty tabla-icono display compact" id="tablaListadoPropiedadesActualizadas">
            <thead>
                <tr>
                    <th style="width:30%">Propiedad</th>
                    <th style="width:20%">Valor</th>
                    <th style="width:20%">Fecha Vigencia</th>
                    <th style="width:30%">Comentario</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ListaPropiedadActualizada)
                {
                    <tr>
                        <td style="text-align: left;">Propiedad #1</td>
                        <td style="text-align: left;">138 </td>
                        <td style="text-align: left;">Sample text</td>
                        <td style="text-align: left;">Sample text</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>