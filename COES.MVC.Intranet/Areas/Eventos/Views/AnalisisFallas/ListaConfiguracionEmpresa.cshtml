@model COES.MVC.Intranet.Areas.Eventos.Models.AnalisisFallasModel
@{
    ViewBag.Title = "Configuración de empresas";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<link href="~/Content/Css/popup.css" rel="stylesheet" />
<link href="~/Content/Css/tabs.css" rel="stylesheet" />
<link href="~/Content/Css/form.css" rel="stylesheet" />

<script src="~/Areas/Eventos/Content/Scripts/InterrupcionSuministros/configuracionEmpresa.js?V=1.3.1"></script>

<div class="form-title">
    <div class="content-titulo">
        Configuración de empresas
    </div>
    <div class="content-botonera">

        @if (Model.grabar)
        {
            <input type="button" id="btnNuevaConfiguracion" value="Agregar" />
        }
        <input type="button" id="btnRegresar" value="Regresar" />
    </div>
</div>

@*<div id="mensaje" class="action-message"></div>*@

<div class="content-hijo" id="mainLayout">
    <div class="content-registro" style="width:auto">

        <div style="clear:both; height:5px;"></div>

        <div style="clear:both; height:5px;"></div>

        <div class="search-content" style="margin-top: 5px;">
            Tipo de empresa:
            <select id="cbTipoEmpresaLista" name="Tipoemprcodi">
                <option value="-1">TODOS</option>
                @foreach (var item in Model.ListaTipoEmpresa)
                {
                    <option value="@item.Tipoemprcodi">@item.Tipoemprdesc</option>
                }
            </select>
            <input type="hidden" id="hfcbTipoEmpresaLista" value="@Model.Tipoemprcodi" />
        </div>

        <div id="listado">
        </div>
    </div>
</div>


<div id="popupNuevaConfiguracion" class="general-popup" style="width:650px">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Configuración de Empresa</span></div>
    <div class="popup-text" id="contenidoDetalle">
    </div>
</div>

<div id="popupEditarConfiguracion" class="general-popup" style="width:650px">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Editar Configuración de Empresa</span></div>
    <div class="popup-text" id="contenidoDetalleEditar">
    </div>
</div>