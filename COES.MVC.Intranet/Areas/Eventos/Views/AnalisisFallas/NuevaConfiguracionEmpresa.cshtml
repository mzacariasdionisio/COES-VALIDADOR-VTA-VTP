@model COES.MVC.Intranet.Areas.Eventos.Models.AnalisisFallasModel



<script type="text/javascript">
    $(function () {
        $('#cbTipoEmpresa').val($('#hfcbTipoEmpresa').val());
        $('#cbEmpresa').val($('#hfcbEmpresa').val());        
    });
</script>

@if (Model.Resultado == "-1")
{
    <input type="hidden" id="hdResultado_ED" value="@Model.Resultado" />
    <input type="hidden" id="hdMensaje_ED" value="@Model.StrMensaje" />
}
<div id="mensajeEdit" class="action-message">Por favor complete los datos</div>

<div id="div-edit-empresa" class="panel-container">

    <table class=" ">
        <tr>
            <td class="tbform-label">Tipo Empresa:</td>
            <td class="tbform-control">
                <select id="cbTipoEmpresa" name="Tipoemprcodi">

                    @foreach (var item in Model.ListaTipoEmpresa)
                    {
                        <option value="@item.Tipoemprcodi">@item.Tipoemprdesc</option>
                    }
                </select>
                <input type="hidden" id="hfcbTipoEmpresa" value="@Model.Tipoemprcodi" />
            </td>

        </tr>
        <tr>
            <td class="tbform-label">Empresa:</td>
            <td class="tbform-control">
                <select id="cbEmpresa" name="Emprcodi">

                    @foreach (var item in Model.ListaEmpresa)
                    {
                        <option value="@item.Emprcodi">@item.Emprnomb</option>
                    }
                </select>
                <input type="hidden" id="hfcbEmpresa" value="@Model.Emprcodi" />
            </td>
        </tr>
        <tr>
            <td class="tbform-label">Nombre empresa archivo ERACMF:</td>
            <td class="tbform-control">
                <input type="text" id="txtEmprActERACMF" name="NombEmpresaCodi" style="width: 220px" />
            </td>
        </tr>
        <tr>
            <td class="tbform-label">Código OSINERGMIN:</td>
            @*<td></td>*@
            <td style="padding-left:33px; font-size:11px;">* Si no ingresa el Código   se mostrará el nombre de la empresa en los reportes</td>
        </tr>
        <tr>
            @*<td class="tbform-label">Código OSINERGMIN:</td>*@
            <td></td>
            <td class="tbform-control">

                <input type="text" id="txtOsinergcodi" name="Osinergcodi" style="width: 220px" maxlength="6" />
            </td>
        </tr>
        <tr>
            <td class="tbform-label">Alerta "Excluir de reporte":</td>
            <td class="tbform-control">
                <input type="checkbox" id="chkAlertReporte" />
            </td>
        </tr>

    </table>    
</div>



<div class="container" style="display: flex; padding-top: 10px;">
    <div style="margin: 0 auto;">
        <input type="button" value="Guardar" id="btnGrabarNewConfiguracion" />
        <input type="button" value="Cancelar" id="btnCancelarNewConfiguracion" />
    </div>
        
</div>



