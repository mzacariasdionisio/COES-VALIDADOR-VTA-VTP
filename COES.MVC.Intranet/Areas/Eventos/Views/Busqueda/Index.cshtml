@model COES.MVC.Intranet.Areas.Eventos.Models.BusquedaEquipoModel

<script src="~/Areas/Eventos/Content/Scripts/busqueda.js"></script>
<script type="text/javascript">

$(function () {
    $('#cbEmpresa').change(function () {
        mostrarAreas();
        mostrarEquipos("0");
    });
    $('#cbFamilia').change(function () {       
        mostrarEquipos("0");
    });
    $('#btnBuscar').click(function () {
        buscarEquipo();
    });

    $('#txtFiltro').focus();   

    $('#searchContentEquipo').keypress(function (e) {
        if (e.keyCode == '13') {
            $('#btnBuscar').click();
        }
    });
});

</script>

<span class="button b-close"><span>X</span></span>
<div class="popup-title"><span>Búsqueda de equipos</span></div>
<div style="clear:both; height:8px"></div>
<div class="search-content" style="padding:10px; margin-bottom:5px" id="searchContentEquipo">
     <table class="content-tabla-search" style="width:auto">
         <tr>
             <td>Empresa:</td>
             <td>
                 <select id="cbEmpresa" name="cbEmpresa">
                     <option value="">--SELECCIONE--</option>
                     @foreach (var item in Model.ListaEmpresa)
                     {
                         <option value="@item.EMPRCODI">@item.EMPRNOMB</option>
                     }
                 </select>
             </td>
             <td>Tipo de Equipo:</td>
             <td>
                 <select id="cbFamilia" name="cbFamilia">
                     <option value="">--SELECCIONE--</option>
                     @foreach (var item in Model.ListaFamilia)
                     {
                         <option value="@item.FAMCODI">@item.FAMNOMB</option>
                     }
                 </select>
             </td>
             <td>Filtro:</td>
             <td><input type="text" id="txtFiltro" /></td>
             <td><input type="button" value="Buscar" id="btnBuscar" /></td>
        </tr>
     </table>
</div>

<table style="width:900px">
    <tr>
        <td style="width:300px; vertical-align:top"><div id="cntArea"></div></td>
        <td style="width:20px"></td>
        <td style="width:580px; vertical-align:top">
            <div id="cntPaginado"></div>
            <div id="cntEquipo"></div>
        </td>
    </tr>
</table>

<input type="hidden" id="hfIdEmpresa" />
<input type="hidden" id="hfIdFamilia" />
<input type="hidden" id="hfIdArea" />
