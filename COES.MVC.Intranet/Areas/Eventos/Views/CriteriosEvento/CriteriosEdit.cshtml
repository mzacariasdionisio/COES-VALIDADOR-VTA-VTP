@model COES.MVC.Intranet.Areas.Eventos.Models.CriteriosModel

<div class="content-registro">

    <div class="popup-title" style="margin-bottom:10px"><span>Datos del Criterio</span></div>
    <form id="frmRegistroCriterios">
        <div id="mensajeEdicion" class="action-message">Por favor complete los datos</div>
        <table style="width:100%">

            <tr style="display:none">
                <td class="registro-label">Codigo:</td>
                <td class="registro-control">
                    <input type="text" id="txtCodigoCriterios" name="CRCRITERIOCODI" maxlength="60" value="@Model.EntidadCriterios.CRCRITERIOCODI" />
                </td>
            </tr>
            <tr>
                <td class="registro-label">Descripción:</td>
                <td class="registro-control">
                    <input type="text" id="txtDescripcionCriterios" name="CREDESCRIPCION" maxlength="60" style="width:320px" value="@Model.EntidadCriterios.CREDESCRIPCION" />
                </td>
            </tr>

            <tr>
                <td class="registro-label">Estado:</td>
                <td class="registro-control">
                    <select id="cbEstadoCriterios" name="CREESTADO" style="width:75px">
                        <option value="A">Activo</option>
                        <option value="I">Inactivo</option>
                    </select>
                    <input type="hidden" id="hfEstadoCriterios" value="@Model.EntidadCriterios.CREESTADO" />
                </td>
            </tr>
        </table>

        <div style="width:200px; margin:auto; text-align:center; margin-top:20px">
            <input type="button" id="btnGrabarCriterios" value="Grabar" />
        </div>

        <input type="hidden" id="hfCodigo" name="CRCRITERIOCODI" value="@Model.EntidadCriterios.CRCRITERIOCODI" />

    </form>

</div>