@model COES.MVC.Intranet.Areas.Eventos.Models.FormatoCorreoModel
<script src="~/Content/Scripts/tinymce/tinymce.min.js"></script>
<script src="~/Areas/Eventos/Content/Scripts/EnviarCorreosPreliminar.js?v=1.23"></script>
<script src="~/Content/Scripts/plupload.full.min.js" type="text/javascript"></script>
<link href="~/Content/Css/form.css" rel="stylesheet" />

<form id="formFormatoCorreo" name="formFormatoCorreo">
    <span class="button b-close"><span>X</span></span>
    <div></div>
    <div id="contenidoEdicion" class="content-registro">
        <table style="width:100%">
            <tr>
                <td style="width:120px" class="registro-label">From:</td>
                <td class="registro-control"><input type="text" name="From" id="From" value="@Model.From" maxlength="900" style="width:540px" /></td>
            </tr>
            <tr>
                <td class="registro-label">To:</td>
                <td class="registro-control"><input type="text" name="To" id="To" value="@Model.To" maxlength="900" style="width:540px" /></td>
            </tr>
            <tr>
                <td class="registro-label">CC:</td>
                <td class="registro-control"><input name="CC" id="CC" type="text" value="@Model.CC" maxlength="900" style="width:540px" /></td>
            </tr>
            <tr>
                <td class="registro-label"> BCC:</td>
                <td class="registro-control"><input name="BCC" id="BCC" type="text" value="@Model.BCC" maxlength="900" style="width:540px" /></td>
            </tr>
            <tr>
                <td class="registro-label">Asunto:</td>
                <td class="registro-control"><input name="Asunto" id="Asunto" type="text" value="@Model.Asunto" maxlength="250" style="width:540px" /></td>
            </tr>
        </table>

        <div style="clear:both; height:10px"></div>
        <textarea name="Contenido" id="Contenido" maxlength="5000" cols="75" rows="15">@Model.Contenido</textarea>
        <div style="clear:both; height:10px"></div>
        <table class="content-tabla-search" style="width:100%">
            <tr>
                <td class="registro-label" style="width:120px">Adjuntos</td>
                <td class="registro-control">
                    <div class="container">
                        <input type="button" id="btnSelectFile" value="Seleccionar un archivo" />
                        <div id="container" class="file-carga">
                            <div id="loadingcarga" class="estado-carga">
                                <div class="estado-image"><img src="~/Content/Images/loadingtree.gif" /></div>
                                <div class="estado-text">Cargando...</div>
                            </div>
                            <div id="filelist">No soportado por el navegador.</div>
                        </div>
                        <input id="fileList" type="hidden" name="Archivo" />
                    </div>
                </td>
            </tr>
        </table>
        <input type="hidden" id="hfLinkArchivo" name="LinkArchivo" value="@Model.LinkArchivo" />
        @if (!string.IsNullOrEmpty(Model.LinkArchivo))
        {
            <div id="contenedorArchivoAdjunto" class="file-name" style="line-height:30px; margin-top:20px">
                <a href="JavaScript:descargarArchivoFormato('@Model.LinkArchivo');" class="info-itemfile">MODELO INFORME INCLUSIÓN.docx</a>
                <a href="JavaScript:quitarArchivoFormato();" class="remove-item">X</a>
            </div>
        }

        <br />
        <div style="width:100px; margin:auto; margin-top:20px">
            <input type="button" id="btnEnviar" value="Enviar" />
        </div>
        <br />
        <input type="hidden" name="Plantcodi" id="Plantilla" value="@Model.Plantcodi" />
        El punto y coma (;) es el separador de correo
    </div>
</form>
