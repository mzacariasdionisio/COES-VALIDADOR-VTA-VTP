@model COES.MVC.Intranet.Areas.Eventos.Models.BusquedaEveSubcausaFamiliaModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Areas/Eventos/Content/Scripts/subcausafamilia.js"></script>
<link href="~/Areas/Eventos/Content/Css/css.css" rel="stylesheet" />
<script src="~/Content/Scripts/inputmaskmin.js"></script>

<div class="form-title">
    <div class="form-title">
        <div class="content-titulo">Relaci&oacute;n Tipo de operaci&oacute;n y Tipo de equipo</div>
        <div class="content-botonera">
            <input type="button" id="btnNuevo" value="Nuevo" />
        </div>
    </div>
</div>

        <div class="content-hijo" id="mainLayout">
            <div class="search-content" style="margin-bottom:10px">
                <table class="content-tabla-search" style="width:auto">
                    <tr>
                        <td>Tipo de operaci&oacute;n:</td>
                        <td>
                            <select id="cbSubcausaDesc" name="SubcausaDesc" style="width:300px">
                                <option value="0">TODOS</option>
                                @foreach (var item in Model.ListaEveSubcausaevento)
                                {
                                    <option value="@item.Subcausacodi">@item.Subcausadesc</option>
                                }
                            </select>
                        </td>
                        <td>Tipo de equipo:</td>
                        <td>
                            <select id="cbFamAbrev" name="FamAbrev" style="width:300px">
                                <option value="0">TODOS</option>
                                @foreach (var item in Model.ListaEqFamilia)
                                {
                                    <option value="@item.Famcodi">@item.Famnomb</option>
                                }
                            </select>
                        </td>

                        <td>
                            <input type="button" id="btnBuscar" value="Buscar" style="margin-left:0" />
                        </td>

                    </tr>

                </table>
                <table class="content-tabla-search" style="width:auto">
                    <tr>
                        <td>Estado:</td>
                        <td>
                            <input id="rbVigente" name="rbValor" type="radio" value="radiobutton" />Vigente
                            <input id="rbEliminado" name="rbValor" type="radio" value="radiobutton" />Eliminado
                            <input id="rbTodos" name="rbValor" type="radio" value="radiobutton" />Todos
                        </td>
                        <td>
                            <input type="hidden" id="hfEstado" value="@Model.Estado" name="Estado" />
                        </td>
                    </tr>
                </table>
            </div>

            <div class="content-tabla">
                <div class="tabla-header">
                    <div class="table-paginado" id="paginado"></div>
                </div>
                <div class="table-list" id="listado"></div>
            </div>
        </div>

<div id="popupEdicion" class="general-popup">
    <div><span class="button b-close"><span>X</span></span></div>    
    <div class="popup-text" id="contenidoEdicion">
    </div>
</div>
