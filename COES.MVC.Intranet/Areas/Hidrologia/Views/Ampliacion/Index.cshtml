@model COES.MVC.Intranet.Areas.Hidrologia.Models.HidrologiaModel
@{
    ViewBag.Title = "Consulta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Content/Scripts/multiselect.js"></script>
<link href="~/Content/Css/multiselect.css" rel="stylesheet" />
<script src="~/Areas/Hidrologia/Content/Scripts/ampliacion.js"></script>
<link href="~/Areas/Hidrologia/Content/Css/popup.css" rel="stylesheet" />
<div class="form-title">
    <div class="content-titulo">Ampliación de Plazos - Hidrología</div>
    <div class="content-botonera">
          <input type="button" id="btnBuscar" value="Buscar" />
          <input type="button" id="btnAmpliar" value="Ampliar Plazo" />
    </div>
</div>

<div class="content-hijo" id="mainLayout">
    <div class="search-content">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Empresa:</td>
                <td>
                    <select id="cbEmpresa"  name="Idempresa" multiple="multiple">
                     @foreach (var item in Model.ListaEmpresas)
                     {   
                          <option value="@item.Emprcodi">@item.Emprnomb</option>
                     }
                    </select>
                    <input type="hidden" id="hfEmpresa" name="empresa" />
                </td>
                
                <td>Tipo de Lectura:</td>
                <td>
                    <select id="cbLectura" multiple="multiple">                          
                            @foreach (var item in Model.ListaLectura)
                                {
                                    <option value="@item.Lectcodi">@item.Lectnomb</option>
                                }
                    </select>
                    <input type="hidden" id="hfLectura" />
                </td>               
            </tr>
            <tr>
                <td>Formato:</td>
                <td>
                    <div id="listTipoInformacion"></div>
                </td>
                <td>Fecha Ampliación:</td>
                <td><input type="text" id="idFecha" value="@Model.Fecha" /></td>
            </tr>
        </table>
    </div>
<input type="hidden" id="hfFormatCodi" value="@Model.StrFormatCodi"/>
<input type="hidden" id="hfFormatPeriodo" value="@Model.StrFormatPeriodo"/>  
<input type="hidden" id="hfIdModulo" value="@Model.IdModulo" />
<input type="hidden" id="hfAnho"  value="@Model.Anho"  />
<div class="content-tabla">
    <div style="clear:both; height:5px"></div>
    <div class="table-list" id="listado"></div>
</div>

<div style="clear:both; height:30px"></div>

</div>

<div id="validaciones">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Ingresar Ampliación</span></div>
    <div class="table-list" id="detalleAmpliacion"></div>
</div>
