@model COES.MVC.Intranet.Areas.Hidrologia.Models.VerificacionFormatoModel
@{
    ViewBag.Title = "Verificacion de Formato";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Areas/Hidrologia/Content/Scripts/jquery.dataTables.rowReordering.js"></script>
<script src="~/Content/Scripts/jqueryui.js"></script>
<script src="~/Areas/Hidrologia/Content/Scripts/formatoVerificacionFormato.js?v=1.1"></script>
<link href="~/Areas/Hidrologia/Content/Css/popup.css" rel="stylesheet" />

<div class="form-title">
    <div class="content-titulo">Detalle de Verificación de Formatos</div>
    <div class="content-botonera">
        <input type="button" id="btnBuscar" value="Consultar" />
        <input type="button" id="btnNuevo" value="Agregar Verificación" />
        <input type="button" id="btnRegresar" value="Regresar" />
    </div>
</div>

<div class="content-hijo" id="mainLayout">
    <div id="mensaje" style="width: 500px; margin: 0; margin-bottom: 10px"></div>

    <div class="content-tabla">
        <div class="tabla-header">
        </div>
        <div class="table-list" id="listVerificacion"></div>
    </div>

    <input type="hidden" id="hfFormato" value="@Model.Formatcodi" />
    <input type="hidden" id="hdCodigoApp" name="hdCodigoApp" value="@Model.CodigoApp" />
</div>

<div id="popupVerVerificacionFormato" class="general-popup">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Detalle de Verificacion de Formato</span></div>
    <div id="verVerificacionFormato"></div>
</div>
<div id="popupNuevaVerificacionFormato" class="general-popup">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Nueva Verificacion de Formato</span></div>
    <div id="nuevaVerificacionFormato"></div>
</div>
<div id="popupEditarVerificacionFormato" class="general-popup">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Editar Verificacion de Formato</span></div>
    <div id="editarVerificacionFormato"></div>
</div>