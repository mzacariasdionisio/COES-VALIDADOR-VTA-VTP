@model COES.MVC.Intranet.Areas.IEOD.Models.BusquedaIEODModel
@{
    ViewBag.Title = "Ampliación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Content/Scripts/multiselect.js"></script>
<link href="~/Content/Css/multiselect.css" rel="stylesheet" />
<script src="~/Areas/IEOD/Content/Scripts/ampliacion.js?v=1.1"></script>
<link href="~/Areas/IEOD/Content/Css/css.css?v=1.6" rel="stylesheet" />

<div class="form-title">
    <div class="content-titulo">Ampliación de Plazos</div>
    <div class="content-botonera">
        <input type="button" id="btnBuscar" value="Buscar" />
        <input type="button" id="btnAmpliar" value="Ampliar Plazo" />
    </div>
</div>

<div class="content-hijo" id="mainLayout">
    <div class="search-content">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Formato:</td>
                <td>
                    <select id="cbFormato" style="width: 330px;">
                        @foreach (var item in Model.ListaFormato)
                        {
                            <option value="@item.Formatcodi">@item.Formatnombre</option>
                        }
                    </select>
                    <input type="hidden" id="hfFormato" />
                </td>
                <td>Empresa:</td>
                <td style="width:200px;">
                    <div id="empresas"></div>
                </td>
            </tr>
            <tr>
                <td>Fecha Ampliación:</td>
                <td><input type="text" id="idFecha" value="@Model.Fecha" /></td>
            </tr>
        </table>
    </div>

    <input type="hidden" id="hfFormatCodi" value="@Model.StrFormatCodi" />
    <input type="hidden" id="hfFormatPeriodo" value="@Model.StrFormatPeriodo" />
    <input type="hidden" id="hfIdModulo" value="@Model.IdModulo" />
    <input type="hidden" id="hfAnho" value="@Model.Anho" />
    <input type="hidden" id="hdCodigoApp" name="hdCodigoApp" value="@Model.CodigoApp" />

    <div class="content-tabla">
        <div style="clear:both; height:5px"></div>
        <div class="table-list" id="listado"></div>
    </div>

    <div style="clear:both; height:30px"></div>

</div>

<div id="validaciones">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Ingresar Ampliación</span></div>
    <div class="table-list" id="detalleAmpliacion"></div>
</div>
