@model COES.MVC.Intranet.Models.FuenteDatosModel
@{
    ViewBag.Title = "Ampliación de Plazo Fuente de Datos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Content/Scripts/multiselect.js"></script>
<link href="~/Content/Css/multiselect.css" rel="stylesheet" />
<link href="~/Areas/IEOD/Content/Css/css.css?v=1.6" rel="stylesheet" />

<script src="~/Areas/IEOD/Content/Scripts/fuenteDatosAmpliacion.js?v=1.1.6"></script>

<div class="form-title">
    <div class="content-titulo">Ampliación de Plazo - Fuente de Datos</div>
    <div class="content-botonera">
        <input type="button" id="btnConsultar" value="Consultar" />
        <input type="button" id="btnAmpliar" value="Ampliar Plazo" />
    </div>
</div>

<div class="content-hijo" id="mainLayout">
    <div class="search-content">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Fuente de Datos:</td>
                <td>
                    <select id="cbFuenteDatos" style="width: 330px;">
                        @foreach (var item in Model.ListaFuentedatos)
                        {
                            <option value="@item.Fdatcodi">@item.Fdatnombre</option>
                        }
                    </select>
                    <input type="hidden" id="hfFdatcodi" />
                </td>

                <td>Empresa:</td>
                <td style="width:200px;">
                    <div id="empresas"></div>
                </td>
            </tr>

            <tr>
                <td>Fecha desde:</td>
                <td>
                    <input type="text" id="FechaDesde" name="FechaInicio" value="@Model.FechaInicio" />
                </td>
                <td>Fecha hasta:</td>
                <td>
                    <input type="text" id="FechaHasta" name="FechaInicio" value="@Model.FechaFin" />
                </td>
            </tr>
        </table>
    </div>

    <div class="content-tabla">
        <div style="clear:both; height:5px"></div>
        <div class="table-list" id="listado"></div>
    </div>

    <div style="clear:both; height:30px"></div>

</div>

<div id="validaciones">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Ingresar Ampliación</span></div>
    <div class="table-list" id="detalleAmpliacion"></div>
</div>