@model COES.MVC.Intranet.Areas.IEOD.Models.EquiposSEINModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Content/Scripts/multiselect.js"></script>
<link href="~/Content/Css/multiselect.css" rel="stylesheet" />
<script src="~/Areas/IEOD/Content/Scripts/equiposSEIN.js"></script>
<link href="~/Areas/IEOD/Content/Css/popup.css" rel="stylesheet" />
<script src="~/Content/Scripts/jquery.format.js"></script>
<link href="~/Areas/IEOD/Content/Css/css.css?v=1.6" rel="stylesheet" />

<div class="form-title">
    <div class="content-titulo">Equipos incorporados SEIN</div>
    <div class="content-botonera">
        <input type="button" id="btnBuscar" value="Buscar" />
        <input type="button" id="btnAgregar" value="Agregar" />
    </div>
</div>

<div class="content-hijo" id="mainLayout">

    <div class="search-content">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td class="tbform-label">Tipo de empresa:</td>
                <td>
                    <select id="cbTipoEmpresa" name="iTipoEmpresa">
                        <option value="-1">-TODOS-</option>
                        @foreach (var item in Model.ListaTipoEmpresa)
                        {
                            <option value="@item.Tipoemprcodi">@item.Tipoemprdesc</option>
                        }
                    </select>
                </td>

                <td>Empresa:</td>
                <td style="width:200px;">
                    <div id="empresas"></div>
                </td>

                <td>Tipo Equipo:</td>
                <td>
                    <select id="cbFamilia" name="IdFamilia" multiple="multiple">
                        @foreach (var item in Model.ListaFamilia)
                        {
                            <option value="@item.Famcodi">@item.Famnomb</option>
                        }
                    </select>
                    <input type="hidden" id="hfFamilia" />
                </td>

                <td>Fecha:</td>
                <td><input type="text" id="idFecha" value="@Model.Fecha" /></td>
            </tr>
        </table>
    </div>

    <div class="content-tabla">
        <div style="clear:both; height:5px"></div>
        <div class="table-list" id="listadoSEIN"></div>
    </div>

    <div style="clear:both; height:30px"></div>

</div>

<div id="validaciones">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Ingresar Registro</span></div>
    <div class="table-list" id="detalleSEIN"></div>
</div>
