@model COES.MVC.Intranet.Areas.IEOD.Models.EquiposSEINModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Content/Scripts/multiselect.js"></script>
<script src="~/Content/Scripts/datetable.js"></script>

<link href="~/Content/Css/multiselect.css" rel="stylesheet" />
<script src="~/Content/Scripts/messaje-operation.js"></script>
<script src="~/Areas/IEOD/Content/Scripts/ValequiposSEIN.js"></script>
<link href="~/Areas/IEOD/Content/Css/popup.css" rel="stylesheet" />
<script src="~/Content/Scripts/jquery.format.js"></script>
<link href="~/Areas/IEOD/Content/Css/css.css?v=1.6" rel="stylesheet" />

<div class="form-title">
    <div class="content-titulo">Validar Equipos incorporados SEIN</div>
    <div class="content-botonera">
        <input type="button" id="btnBuscar" value="Buscar" />
    </div>
</div>

<div class="content-hijo" id="mainLayout">

    <div class="search-content">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Empresa:</td>
                <td>
                    <select id="cbEmpresa" name="Idempresa" multiple="multiple">
                        @foreach (var item in Model.ListaEmpresas)
                        {
                            <option value="@item.Emprcodi">@item.Emprnomb</option>
                        }
                    </select>
                    <input type="hidden" id="hfEmpresa" name="empresa" />
                </td>

                <td>Tipo Equipo:</td>
                <td>
                    <select id="cbFamilia" name="IdFamilia" multiple="multiple">
                        @foreach (var item in Model.ListaFamilia)
                        {
                            <option value="@item.Famcodi">@item.Famnomb</option>
                        }
                    </select>
                    <input type="hidden" id="hfFamilia" />
                </td>

                <td>Fecha Inicio:</td>
                <td><input type="text" id="idFecha" value="@Model.Fecha" /></td>
                <td>Fecha Fin:</td>
                <td><input type="text" id="idFechaF" value="@Model.FechaFin" /></td>
            </tr>
        </table>
    </div>

    <div class="content-tabla">
        <div style="clear:both; height:5px"></div>
        <div class="table-list" id="listadoSEIN"></div>
    </div>

    <div style="clear:both; height:30px"></div>

</div>

<div id="MessagesClose">
    <div class="popup-title"><span>Mensaje de Operación</span></div>
    <div class="popup-text content-messajes-text">
    </div>
    <div class="formulario-boton">
        <input id="btnAceptarMessages" type="button" value="Aceptar" />
        <input id="btnCancelarMessages" type="button" value="Cancelar" style="display:none;" />
    </div>
</div>
