@model COES.MVC.Intranet.Areas.IEOD.Models.ParametroModel
<script>
    $(function () {
        $('#btnActualizarMagnitudRPF').click(function () {
            actualizarMagnitudRPF();
        });

        $("#cbEstadoMagnitudRPF").val($("#hfEstado").val());
    });
</script>

<div class='panel-container'>
    <div class="form-search">
        <input type="hidden" id="hfParvcodi" value="@Model.MagnitudRPF.SiParvcodi" />
        <input type="hidden" id="hfEstado" value="@Model.MagnitudRPF.Estado" />

        <table style="width:100%;margin-right: auto" class="table-form-show">
            <tr>
                <td class="tbform-label">Fecha Inicio:</td>
                <td class="tbform-control">
                    @Model.MagnitudRPF.FechaFormatoInicio
                </td>
            </tr>
            <tr>
                <td class="tbform-label">Fecha Fin:</td>
                <td class="tbform-control">
                    @Model.MagnitudRPF.FechaFormatoFin
                </td>
            </tr>
            <tr>
                <td class="tbform-label">Magnitud de la reserva rotante para la RPF:</td>
                <td class="tbform-control">
                    <input type="text" id="txtEditarMagnitud" value="@Model.MagnitudRPF.Magnitud" style="width: 83px; text-align: right" /> %
                </td>
            </tr>
            <tr>
                <td class="tbform-label">Estado:</td>
                <td class="tbform-control">
                    <select id="cbEstadoMagnitudRPF">
                        @foreach (var item in Model.ListaEstado)
                        {
                            <option value="@item.EstadoCodigo">@item.EstadoDescripcion</option>
                        }
                    </select>
                </td>
            </tr>
        </table>
    </div>
</div>

<div style="clear:both; width:100px; text-align:center; margin:auto; margin-top:20px">
    <input type="button" value="Actualizar" id="btnActualizarMagnitudRPF">
</div>

<input type="hidden" id="periodo_editar" value="@Model.MagnitudRPF.Periodo">