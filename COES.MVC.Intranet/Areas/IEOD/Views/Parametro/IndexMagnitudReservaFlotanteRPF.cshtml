@model COES.MVC.Intranet.Areas.IEOD.Models.ParametroModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Magnitud de la Reserva Rotante para la RPF";
}

<link href="~/Areas/IEOD/Content/Css/parametro.css" rel="stylesheet" />
<script src="~/Areas/IEOD/Content/Scripts/parametroMagnitudRPF.js?v=1.2"></script>
<script src="~/Content/Scripts/Formato/Hoja/global.js"></script>

<div class="form-title">
    <div class="content-titulo">Magnitud de la Reserva Rotante para la RPF</div>
    <div class="content-botonera">
        <input type="button" id="btnNuevoMagnitudRPFAvenida" value="Nuevo Período de Avenida" />
        <input type="button" id="btnNuevoMagnitudRPFEstiaje" value="Nuevo Período de Estiaje" />
    </div>
</div>

<div>
    <div class="content-tabla">
        <div id="mensaje" style="width:500px; margin:0"></div>

        <div id="magnitudRPF"></div>
    </div>
</div>

<div id="popupVerMagnitudRPF" class="general-popup">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Ver Magnitud de la Reserva Rotante para la RPFa</span></div>
    <div id="verMagnitudRPF"></div>
</div>

<div id="popupNuevoMagnitudRPF" class="general-popup">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Nueva Magnitud de la Reserva Rotante para la RPF</span></div>
    <div id="nuevoMagnitudRPF"></div>
</div>

<div id="popupEditarMagnitudRPF" class="general-popup">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Editar Magnitud de la Reserva Rotante para la RPF</span></div>
    <div id="editarMagnitudRPF"></div>
</div>

<input type="hidden" id="periodo_avenida" value="@Model.IdPeriodoAvenida" />
<input type="hidden" id="periodo_estiaje" value="@Model.IdPeriodoEstiaje" />