@model COES.MVC.Intranet.Areas.IEOD.Models.TopologiaElectModel
@{
    ViewBag.Title = "Topología Eléctrica";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Content/Scripts/multiselect.js"></script>
<script src="~/Content/Scripts/plupload.full.min.js"></script>
<script src="~/Areas/IEOD/Content/Scripts/topologiaelect.js?v=1.3"></script>
<script src="~/Areas/IEOD/Content/Scripts/mensajes.js"></script>
<script src="~/Content/Scripts/moment.js"></script>
<script src="~/Content/Scripts/contextmenu.js"></script>

<link href="~/Areas/IEOD/Content/Css/css.css?v=1.6" rel="stylesheet" />
<link href="~/Content/Css/multiselect.css" rel="stylesheet" />

<style>
    select:disabled {
        background: lightgray;
        color: #4876AA;
    }
</style>

<div class="form-title">
    <div class="content-titulo">Registro de Topología Eléctrica</div>
    <div class="content-botonera">
        <input type="button" id="btnNuevaTopologia" value="Nueva Topología" />
    </div>
</div>
<div class="content-hijo" id="mainLayout">
    <input type="hidden" id="hfIdEnvio" value="@Model.IdEnvio" />

    <div class="search-content">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>
                    <table class="tabla-search" style="width:auto">
                        <tr>
                            <td>Empresa:</td>
                            <td>
                                <select id="cbEmpresa" name="IdEmpresa" multiple="multiple">
                                    @foreach (var item in Model.ListaEmpresas)
                                    {
                                        <option value="@item.Emprcodi">@item.Emprnomb</option>
                                    }
                                </select>
                                <input type="hidden" id="hfEmpresa" />
                            </td>
                            <td>Tipo Equipo Padre:</td>
                            <td>
                                <div id="tipoequipospadres"></div>
                            </td>
                            <td>
                                <input type="button" id="btnConsultar" value="Buscar" />
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </div>

    <div class='action-message' id='mensaje' style='display:none'></div>

    <div class="content-tabla">

        <div style="clear:both; height:5px"></div>
        <div class="table-list" style="margin-top: -20px;" id="listado"></div>
    </div>


    <div style="clear:both; height:30px"></div>

</div>

<div id="popupEquipo">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Agregar Equipo - Topología</span></div>
    <div id="agregarEquipo"></div>
</div>