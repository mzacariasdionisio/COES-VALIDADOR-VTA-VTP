@model COES.MVC.Intranet.Areas.InformesOsinergmin.Models.IndicadoresRPFModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Content/Scripts/inputmaskmin.js"></script>
<script src="~/Areas/InformesOsinergmin/Content/Scripts/indicadoresrpf.js"></script>

<div class="form-title">
    <div class="content-titulo">Indicadores RPF</div>
    <div class="content-botonera">
        <input type="button" id="btnConsultar" value='Consultar' />
        <input type="button" id="btnNuevo" value="Nuevo" />
        <input type="button" id="btnExportar" value="Exportar" />
    </div>
</div>

<div class="content-hijo">

    <div id="mensaje"></div>

    <div class="search-content" style="margin-bottom:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Fecha Inicio:</td>
                <td>
                    <input type="text" id="txtFechaInic" value="@DateTime.Today.AddMonths(-6).ToString("MMM yyyy")" />
                    <input type="hidden" id="txtFechaInicio" value="@Model.FechaInicio" />
                </td>
                <td>Fecha Fin:</td>
                <td>
                    <input type="text" id="txtFechaFi" value="@DateTime.Today.ToString("MMM yyyy")" />
                    <input type="hidden" id="txtFechaFin" value="@Model.FechaFin" />
                </td>
            </tr>
         </table>
    </div>

    <div id="listado">

    </div>

</div>

<div id="popupEdicion" class="general-popup">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Datos de Indicadores</span></div>
    <div class="popup-text" id="contenidoEdicion">

    </div>
</div>
