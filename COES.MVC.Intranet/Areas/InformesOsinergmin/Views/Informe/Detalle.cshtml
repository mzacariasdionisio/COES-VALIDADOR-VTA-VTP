                        <th style="text-align:center">@(Model.Cuadro2.Select(x => x[3]).Sum().ToString(formato))</th>                        
                        <th style="text-align:center">
                            @(
                                (Model.Cuadro2.Select(x => x[0]).Sum() +
                                Model.Cuadro2.Select(x => x[1]).Sum() +
                                Model.Cuadro2.Select(x => x[2]).Sum() +
                                Model.Cuadro2.Select(x => x[3]).Sum()).ToString(formato))
                        </th>

                </tr>
            </tfoot>

            </table>
        </div>
