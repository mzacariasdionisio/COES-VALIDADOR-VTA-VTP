@model COES.MVC.Intranet.Areas.InformesOsinergmin.Models.InformeModel
@{
    string formato = "#,##0.00";
}
<div id="tab-container" class='tab-container'>
    <ul class='etabs'>
        <li class='tab'><a href="#paso1">Cuadro 1</a></li>
        <li class='tab'><a href="#paso2">Cuadro 2</a></li>
        <li class='tab'><a href="#paso3">Cuadro 3</a></li>
        <li class='tab'><a href="#paso4">Cuadro 4</a></li>
    </ul>
    <div class='panel-container'>
        <div id="paso1">
            <table class="pretty tabla-icono" id="tabla1">
                <thead>                   
                    <tr>
                        <th>DÍA</th>
                        <th>HIDRAULICA R.</th>
                        <th>TERMICA R.</th>
                        <th>COGEN R.</th>
                        <th>RER R.</th>
                        <th>IMPORT. R</th>
                        <th>TOTAL</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int contador = 1;
                        foreach (double[] item in Model.Cuadro1)
                        { 
                            <tr>                        
                                <td>@contador</td>
                                <td>@item[0].ToString(formato)</td>
                                <td>@item[1].ToString(formato)</td>
                                <td>@item[2].ToString(formato)</td>
                                <td>@item[3].ToString(formato)</td>
                                <td>@item[4].ToString(formato)</td>
                                <td>@((item[0] + item[1] + item[2] + item[3] + item[4]).ToString(formato))</td>
                            </tr>
                            contador++;
                        }
                    }                   
                </tbody>
                <tfoot>
                    <tr>
                        <th style="text-align:center">TOTAL</th>
                        <th style="text-align:center">@(Model.Cuadro1.Select(x => x[0]).Sum().ToString(formato))</th>
                        <th style="text-align:center">@(Model.Cuadro1.Select(x => x[1]).Sum().ToString(formato))</th>
                        <th style="text-align:center">@(Model.Cuadro1.Select(x => x[2]).Sum().ToString(formato))</th>
                        <th style="text-align:center">@(Model.Cuadro1.Select(x => x[3]).Sum().ToString(formato))</th>
                        <th style="text-align:center">@(Model.Cuadro1.Select(x => x[4]).Sum().ToString(formato))</th>
                        <th style="text-align:center">
                            @((
                                Model.Cuadro1.Select(x => x[0]).Sum() +
                                Model.Cuadro1.Select(x => x[1]).Sum() +
                                Model.Cuadro1.Select(x => x[2]).Sum() +
                                Model.Cuadro1.Select(x => x[3]).Sum() +
                                Model.Cuadro1.Select(x => x[4]).Sum()).ToString(formato))
                    </th>

                    </tr>
                </tfoot>
            </table>
        </div>
