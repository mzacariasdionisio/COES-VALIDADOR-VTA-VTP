@model COES.MVC.Intranet.Areas.Interconexiones.Models.InformeModel
@{
    ViewBag.Title = "Intercambios de electricidad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Css/form.css" rel="stylesheet" />
<script src="~/Areas/Interconexiones/Content/Scripts/informe.js"></script>

<div class="form-title">
    <div class="content-titulo">Informes de Intercambios de Electricidad</div>
    <div class="content-botonera">
        <input type="button" id="btnNuevo" value="Generar versión" />
        <input type="button" id="btnAntecedentes" value="Antecedentes" />
    </div>
</div>

<div class="content-hijo">

    <div id="mensaje"></div>

    <div class="search-content" style="margin-bottom:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Semana operativa:</td>
                <td>
                    <input type="text" id="txtAnio" value="@Model.Anio" />
                </td>
                <td>
                    <select id="cbSemana">
                        <option value="">-SELECCIONE-</option>
                        @foreach (var item in Model.ListaSemana)
                        {
                            <option value="@item.NroSemana">@item.NombreSemana</option>
                        }
                    </select>
                </td>
                <td>
                    <input type="button" id="btnConsultar" value='Consultar' />
                </td>
            </tr>
        </table>
    </div>

    <div id="listado"></div>

</div>

<div id="popupVersion" class="general-popup">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Confirmar operación</span></div>
    <div class="popup-text" id="contenidoVersion">
        Está seguro de realizar esta operación
        <br />
        <br />

        <div style="width:200px; margin:auto; text-align:center">
            <input type="button" id="btnConfirmar" value="Aceptar" />
            <input type="button" id="btnCancelar" value="Cancelar" />
        </div>
    </div>
</div>


<!--Vista previa-->
<div id="idPopupVistaPrevia" class="general-popup" style="width: 1200px; max-width: 1200px; ">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Vista previa</span></div>

    <div style="clear:both; height:5px"></div>

    <div id="div_vista_previa">
        <iframe id="vistaprevia" style="width: 100%; height:500px;" frameborder="0" hidden></iframe>
    </div>

</div>