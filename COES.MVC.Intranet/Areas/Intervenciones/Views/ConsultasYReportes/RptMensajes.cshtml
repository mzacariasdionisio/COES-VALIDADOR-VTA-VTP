@model COES.MVC.Intranet.Areas.Intervenciones.Models.Intervencion
@{
    ViewBag.Title = "Mensajes";
    Layout = "~/Views/Shared/_LayoutAlter.cshtml";
}

<link href="~/Areas/Intervenciones/Content/Css/Intervenciones.css" rel="stylesheet" />
<script src="~/Areas/Intervenciones/Content/Scripts/ConsultasYReportes/ReporteMensajes.js?v=1.4.3"></script>

<script src="~/Content/Scripts/inputmaskmin.js"></script>

<div class="form-title">
    <div class="content-titulo">Consulta de Mensajes</div>
    <div class="content-botonera">
        <input type="button" id="btnBuscar" value="Consultar" />
        <input type="button" id="btnGenerarExcel" value="Generar Excel" />
    </div>
</div>

<div class="content-hijo" style="padding-top:8px" id="mainLayout">

    <div class="row">

        <table border="0" cellpadding="5" cellspacing="2" style="width:100%; overflow:auto; background-color:#e5efff">
            <tr class="THCabecera">
                <td colspan="6"><div class="editor-label" style="color:#FFFFFF;"><b>Filtros de búsqueda</b></div></td>
            </tr>
            <tbody id="Contenido">
                <tr>
                    <td style="width: 70px;vertical-align: middle;">Fecha Inicio:</td>
                    <td style="width: 150px;">
                        <div class="editor-label">

                            @Html.TextBoxFor(model => model.Entidad.Interfechaini, "{0:dd/MM/yyyy}", new { @class = "txtFecha", @style = "width:110px;" })
                        </div>
                    </td>
                    <td style="width: 70px;vertical-align: middle;">Fecha Fin:</td>
                    <td style="width: 150px;">
                        <div class="editor-label">
                            @Html.TextBoxFor(model => model.Entidad.Interfechafin, "{0:dd/MM/yyyy}", new { @class = "txtFecha", @style = "width:110px;" })
                        </div>
                    </td>
                    <td></td>
                </tr>
            </tbody>
        </table>

    </div>

    <div class="content-tabla">
        <div style="clear:both"></div>
        <div class="table-list" id="listado">
        </div>
        <div style="clear:both"></div>
    </div>

</div>

<div id="popupLogMensaje" class="general-popup" style="width:710px; height: 400px;">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Cuerpo del mensaje</span></div>
    <div class="popup-text" id="contenidoLogMensaje" style="width:700px; height: 350px;overflow-y: auto;overflow-x: auto;">

    </div>
</div>