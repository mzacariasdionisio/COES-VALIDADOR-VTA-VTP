@model COES.MVC.Intranet.Areas.Mediciones.Models.ConfiguracionModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Areas/Mediciones/Content/Scripts/configuracion.js"></script>

<div class="form-title">
    <div class="content-titulo">Configuración de Grupos</div>
    <div class="content-botonera">
        <input type="button" id="btnCancelar" value="Cancelar" />
    </div>
</div>

<div class="content-hijo">
    <table class="content-tabla-search" style="width:auto">
        <tr>
            <td>Tipo de Grupo:</td>
            <td>
                <select id="cbTipoGrupo">
                    <option value="0">-TODOS-</option>
                    @foreach (var item in Model.ListaTipoGrupo)
                    {
                        <option value="@item.Tipogrupocodi">@item.Tipogruponomb</option>
                    }
                </select>
            </td>
            <td>
                <input type="button" id="btnConsultar" value="Consultar" />
            </td>
            <td style="width:40px"></td>
            <td>
                <div id="mensaje" style="width:300px; margin:0px"></div>
            </td>
        </tr>
    </table>      
    <div style="clear:both"></div>
    <div id="listado"></div>
</div>

<div id="popupUnidad">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Edición de Grupo</span></div>
    <div id="edicionGrupo"></div>
</div>