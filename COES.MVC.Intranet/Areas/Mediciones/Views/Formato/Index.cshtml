@model COES.MVC.Intranet.Areas.Mediciones.Models.FormatoModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Areas/Mediciones/Content/Scripts/formato.js?v=1.1"></script>

<div class="form-title">
    <div class="content-titulo">Formatos de carga</div>
    <div class="content-botonera">
        <input type="button" id="btnAgregar" value="Agregar" />
        <input type="button" id="btnCancelar" value="Cancelar" />
    </div>
</div>

<div class="content-hijo">
    <div id="mensaje"></div>
    <div id="listado"></div>
</div>

<div id="popupUnidad">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Agregar punto</span></div>
    <div id="edicionGrupo"></div>
</div>

<div id="popupEdicion" class="general-popup" style="width:500px">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Configurar punto</span></div>
    <div class="popup-text" id="contenidoEdicion">

        <div class="content-registro">

            <form id="frmRegistro">
                <div id="mensajeEdicion" class="action-message">Por favor complete los datos</div>
                <table style="width:100%">

                    <tr>
                        <td class="registro-label">Empresa:</td>
                        <td class="registro-control">
                            <span id="lblEmpresa"></span>
                        </td>
                    </tr>
                    <tr>
                        <td class="registro-label">Punto medición:</td>
                        <td class="registro-control">
                            <span id="lblPtomedicion"></span>
                        </td>
                    </tr>
                    <tr>
                        <td class="registro-label">Indicador:</td>
                        <td class="registro-control">
                            <span id="lblIndicador"></span>
                        </td>
                    </tr>
                    <tr>
                        <td class="registro-label">Central:</td>
                        <td class="registro-control">
                            <span id="lblCentral"></span>
                        </td>
                    </tr>
                    <tr>
                        <td class="registro-label">Unidad:</td>
                        <td class="registro-control">
                            <span id="lblUnidad"></span>
                        </td>
                    </tr>
                    <tr style="display:none">
                        <td class="registro-label">Valor mínimo:</td>
                        <td class="registro-control">
                            <input type="text" id="txtValorMinimo" onkeypress="return validarNumero(this,event)" />
                        </td>
                    </tr>
                    <tr>
                        <td class="registro-label">Valor máximo:</td>
                        <td class="registro-control">
                            <input type="text" id="txtValorMaximo" onkeypress="return validarNumero(this,event)" />
                        </td>
                    </tr>
                </table>                
             
                <div style="width:200px; margin:auto; text-align:center; margin-top:20px">
                    <input type="button" id="btnGrabarConfiguracion" value="Grabar" />
                    <input type="button" id="btnCancelarConfiguracion" value="Cancelar" />
                </div>

                <input type="hidden" id="hfCodigoConfiguracion"/>

            </form>
        </div>


    </div>
</div>
