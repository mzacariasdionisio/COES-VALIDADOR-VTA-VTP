@model COES.MVC.Intranet.Areas.Medidores.Models.GestionAdministradorModel
@{
    ViewBag.Title = "Ampliación de Plazos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Css/multiselect.css" rel="stylesheet" />
<link href="~/Areas/Medidores/Content/Css/popup.css" rel="stylesheet" />
<script src="~/Content/Scripts/multiselect.js"></script>
<script src="~/Areas/Medidores/Content/Scripts/administradorAmpliacion.js"></script>

<div class="form-title">
    <div class="content-titulo">Ampliación de Plazos</div>
    <div class="content-botonera">
        <input type="button" id="btnBuscar" value="Buscar" />
        <input type="button" id="btnAmpliar" value="Ampliar Plazo" />
    </div>
</div>

<div class="content-hijo" id="mainLayout">
    <div class="search-content">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Formato:</td>
                <td>
                    <select id="cbFormato" style="width: 330px;">
                        @foreach (var item in Model.ListaFormato)
                        {
                            <option value="@item.Formatcodi">@item.Formatnombre</option>
                        }
                    </select>
                    <input type="hidden" id="hfFormato" />
                </td>

                <td>Empresa:</td>
                <td style="width: 325px;">
                    <div id="empresas"></div>
                </td>
            </tr>
            <tr>
                <td>Período Inicio:</td>
                <td><input type="text" id="mesIni" name="mesIni" value="@Model.MesInicio" /></td>

                <td>Período Fin:</td>
                <td><input type="text" id="mesFin" name="mesFin" value="@Model.MesFin" /></td>
            </tr>
        </table>
    </div>
    <div class="content-tabla">
        <div class="tabla-header">
        </div>
        <div style="clear:both; height:5px"></div>
        <div id="listado"></div>
    </div>

</div>

<div id="validaciones">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Ingresar Ampliación</span></div>
    <div class="table-list" id="detalleAmpliacion"></div>
</div>