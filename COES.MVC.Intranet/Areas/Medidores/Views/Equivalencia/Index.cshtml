@model COES.MVC.Intranet.Areas.Medidores.Models.EquivalenciaModel
@{
    ViewBag.Title = "Equivalencias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Areas/Medidores/Content/Scripts/equivalencia.js?v=1.1"></script>

<style>
    td.class_eliminado {
        background-color: #FFDDDD !important;
    }
</style>

<div class="form-title">
    <div class="content-titulo">Equivalencias Puntos de Medición</div>
    <div class="content-botonera">
        <input type="button" id="btnNuevo" value="Nuevo" />
        <input type="button" id="btnCancelar" value="Cancelar" />
    </div>
</div>

<div class="content-hijo" id="mainLayout">

    <div id="mensaje"></div>

    <div class="search-content" style="margin-bottom:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Empresa:</td>
                <td>
                    <select id="cbEmpresa">
                        <option value="">-SELECCIONE-</option>
                        @foreach (var item in Model.ListaEmpresas)
                        {
                            <option value="@item.Emprcodi">@item.Emprnomb</option>
                        }
                    </select>
                </td>
                <td>
                    <input type="button" id="btnConsultar" value='Consultar' />
                </td>
            </tr>
        </table>
    </div>

    <div id="listado">

    </div>

    <br />
    <br />

</div>

<div id="popupEdicion" class="general-popup" style="min-width:800px; min-height:500px">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Relación de Puntos de Medición</span></div>
    <div id="mensajePopup"></div>
    <div class="search-content" style="margin-top:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Empresa:</td>
                <td>
                    <select id="cbEmpresaEdit">
                        <option value="">-SELECCIONE-</option>
                        @foreach (var item in Model.ListaEmpresas)
                        {
                            <option value="@item.Emprcodi">@item.Emprnomb</option>
                        }
                    </select>
                </td>
                <td>
                    <input type="button" id="btnCargarPuntos" value="Mostrar Puntos" />
                </td>
                <td style="padding-left:100px">
                    <input type="button" id="btnGrabarRelacion" value="Grabar Relación" />
                </td>
            </tr>
        </table>
    </div>
    <div class="popup-text" id="contenidoEdicion">

    </div>
</div>
