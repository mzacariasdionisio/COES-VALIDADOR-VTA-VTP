@model COES.MVC.Intranet.Areas.Medidores.Models.EquivalenciaModel

<table cellpadding="0" cellspacing="0" class="pretty tabla-icono" id="tablaRelaciones">
    <thead>

        <tr>
            <th rowspan="2">Quitar</th>
            <th colspan="4" style="background-color:#ef8808">MEDIDORES</th>
            <th colspan="4" style="background-color:#89a539">DESPACHO</th>
        </tr>
        <tr>
            <th>Empresa</th>
            <th>Central</th>
            <th>Equipo</th>
            <th>Punto Medición</th>
            <th>Empresa</th>
            <th>Central</th>
            <th>Equipo</th>
            <th>Punto Medición</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListaRelaciones)
        {
            var classMedidores = item.Ptomediestadomed == "B" || item.Ptomediestadomed == "X" ? "class_eliminado" : "";
            var classDespacho = item.Ptomediestadodesp == "B" || item.Ptomediestadodesp == "X" ? "class_eliminado" : "";
            <tr>
                <td class="@classMedidores">
                    <a href="JavaScript:quitarRelacion(@item.Medivalcodi);">
                        <img src="~/Content/Images/btn-cancel.png" />
                    </a>
                </td>
                <td class="@classMedidores">@item.Empresamed</td>
                <td class="@classMedidores">@item.Centralmed</td>
                <td class="@classMedidores">@item.Equipomed</td>
                <td class="@classDespacho">@item.Ptomedicodimed</td>
                <td class="@classDespacho">@item.Empresadesp</td>
                <td class="@classDespacho">@item.Centraldesp</td>
                <td class="@classDespacho">@item.Equipodesp</td>
                <td class="@classDespacho">@item.Ptomedicodidesp</td>
            </tr>
        }
    </tbody>
</table>