@model COES.MVC.Intranet.Areas.Medidores.Models.IeodModel
@{
    ViewBag.Title = "CMg Real por Área";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Areas/Medidores/Content/Css/medidores.css" rel="stylesheet" />
<script src="~/Areas/Medidores/Content/Scripts/cmgreal.js"></script>

<div class="form-title">
    <div class="content-titulo">CMG Real Por Área</div>
    <div class="content-botonera">     
        <input type="button" id="btnOpenExportar" value="Exportar" />
       
    </div>
</div>

<div class="div-exportar" id="divExportar">
    <div class="div-exportar-close" onclick="closeExportar();">X</div>
    <div class="div-exportar-content">
        <div class="popup-title"><span>Exportar Datos</span></div>
        <div class="action-exito">
            Seleccionar rango de fechas(máximo un año) y formato:
        </div>
        Desde:
        <input type="text" id="txtExportarDesde" style="width:140px" value="@Model.FechaInicio" />
        Hasta:
        <input type="text" id="txtExportarHasta" style="width:140px" value="@Model.FechaFin" />       
        <ul>
            <li><input type="radio" name="rbFormato" value="0" checked="checked" />Formato Excel Horizontal</li>
            <li><input type="radio" name="rbFormato" value="1" />Formato Excel Vertical</li>            
        </ul>
        <div class="div-exportar-boton" id="container" style=" margin-top:30px">
            <input type="button" id="btnExportar" value="Aceptar" />           
        </div>
    </div>
</div>

<div class="content-hijo" id="mainLayout">  
    <div class="search-content" style="margin-bottom:0px">
        <table class="content-tabla-search" style="width:auto">               
            <tr>
                <td>Desde:</td>
                <td><input type="text" id="txtFechaInicial" value="@Model.FechaInicio" style="width:120px" /></td>
                <td>Hasta:</td>
                <td><input type="text" id="txtFechaFinal"  value="@Model.FechaFin" style="width:120px" /></td>                   
                <td>
                    <input type="button" id="btnBuscar" value="Buscar" style="margin-left:0" />
                </td>                    
            </tr>
        </table>
    </div>
    <input type="hidden" id="hfNroPagina" name="NroPagina" value="1" />
    
    <div style="clear:both; height:30px"></div>
    <div id="listado"></div>
    <div style="clear:both; height:30px"></div>
</div>

