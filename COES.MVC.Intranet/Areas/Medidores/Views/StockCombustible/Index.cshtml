@model COES.MVC.Intranet.Areas.Medidores.Models.StockCombustibleModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Areas/Medidores/Content/Scripts/stockcombustible.js"></script>

<div class="form-title">
    <div class="content-titulo">Consulta Stock Combustible</div>
    <div class="content-botonera">
        <input type="button" id="btnExportar" value="Exportar" />
        <input type="button" id="btnCancelar" value="Cancelar" />
    </div>
</div>

<div class="content-hijo" id="mainLayout">    
    <table class="content-tabla-search" style="width:auto">
        <tr>
            <td>Fecha desde:</td>
            <td><input type="text" id="txtFechaDesde" value="@Model.FechaInicio" style="width:120px" /></td>
            <td>Hasta:</td>
            <td><input type="text" id="txtFechaHasta" value="@Model.FechaFin" style="width:120px" /></td>
            <td>Empresa:</td>
            <td>
                <select id="cbEmpresa" style="width:160px">   
                    <option value="">-SELECCIONE-</option>                                 
                    @foreach(var item in Model.ListaEmpresas)
                    {
                        <option value="@item.Emprcodi">@item.Emprnomb</option>                       
                    }
                </select>
            </td>
            <td>Grupo:</td>
            <td>
                <select id="cbGrupo" style="width:160px">
                    <option value="">-SELECCIONE-</option>
                </select>
            </td>
            <td>Tipo Combustible:</td>
            <td>
                <select id="cbCombustible" style="width:150px">
                    <option value="">-SELECCIONE-</option>
                    @foreach (var item in Model.ListaCombustible)
                    {
                        <option value="@item.Tipoinfocodi">@item.Tipoinfodesc</option>
                    }
                </select>
            </td>
            <td>
                <input type="button" id="btnConsultar" value="Consultar" />
            </td>
        </tr>
    </table>
    <div style="clear:both; height:20px"></div>
    <div id="listado">
    </div>
</div>