@model COES.MVC.Intranet.Areas.IEOD.Models.BusquedaIEODModel
@{
    ViewBag.Title = "Anexo A";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Css/multiselect.css" rel="stylesheet" />
<script src="~/Content/Scripts/multiselect.js"></script>
<script src="~/Areas/Migraciones/Content/Scripts/anexoa/validacionesFiltros.js?id=1"></script>
<script src="~/Areas/Migraciones/Content/Scripts/anexoa/produccionenergiadiaria.js?id=1"></script>
<link href="~/Areas/IEOD/Content/Css/css.css?v=1.6" rel="stylesheet" />

<script src="~/Content/Scripts/highcharts.js"></script>
<script src="~/Areas/Migraciones/Content/Scripts/anexoa/cargarmenupr5.js?id=1.1"></script>

@Html.Partial("CargarMenu")

<div class="form-title">
    <div style="width:auto" class="content-titulo">Reporte de Evolución de la Producción de Energía Diaria (@Model.FechaInicio)</div>
    @Html.Partial("CargarMenuFilter")
</div>

<div class="content-hijo" id="mainLayout">

    <div class="search-content">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Empresas:</td>
                <td>
                    <select id="cbEmpresa" name="cbEmpresa" style="width:250px;" multiple="multiple">

                        @foreach (var item in Model.ListaEmpresas)
                        {
                            <option value="@item.Emprcodi">@item.Emprnomb</option>
                        }
                    </select>
                    <input type="hidden" id="hfEmpresa" name="hfEmpresa" />
                </td>
                <td> Centrales:</td>
                <td>
                    <div id="centrales"></div>
                </td>
                <td>Tipo de Generacion:</td>
                <td>
                    <div id="TipoGeneracion"></div>
                </td>
            </tr>
            <tr style="display: none">
                <td>Fecha Inicio:</td>
                <td>
                    <input type="text" id="txtFechaInicio" name="txtFechaInicio" value="@Model.FechaInicio" />
                </td>
                <td>Fecha Fin:</td>
                <td>
                    <input type="text" id="txtFechaFin" name="txtFechaFin" value="@Model.FechaFin" />
                </td>

            </tr>
        </table>
    </div>

    <div class="content-tabla">
        <div style="clear:both; height:5px"></div>
        <div class="table-list" id="listado"></div>
    </div>

    <div style="clear:both; height:30px"></div>

    <div id="idGraficoContainer" style="min-width: 310px; height: 400px; max-width: 800px; margin: 0 auto; display: none;"></div>

    <div id="idGrafico2">

        <span class="button b-close"><span>X</span></span>

        <div class="popup-title"><span>Vista Gráfica</span></div>
        <div style="clear:both; height:10px"></div>

        <div id="idVistaGrafica" style="height:450px; width:1250px;">
        </div>
    </div>
</div>


