@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "ActividadesPersonal";
}
<script src="~/Content/Scripts/jquery.easytabs.min.js"></script>
<script src="~/Content/Scripts/plupload.full.min.js"></script>
<script src="~/Content/Scripts/handsontable.full.min.js"></script>
<link href="~/Content/Css/handsontable.full.min.css" rel="stylesheet" />
<link href="~/Content/Css/multiselect.css" rel="stylesheet" />
<script src="~/Content/Scripts/multiselect.js"></script>
<link href="~/Content/Css/tabs.css" rel="stylesheet" />
<script src="~/Content/Scripts/jquery.easytabs.min.js"></script>
<script src="~/Areas/Migraciones/Content/Scripts/configuracion/actividadespersonal.js?v=1.1"></script>
<link href="~/Areas/Migraciones/Content/Css/css.css" rel="stylesheet" />

<div class="form-title">
    <div class="content-titulo"> Actividades del Personal </div>
</div>

<div class="content-hijo" id="mainLayout">
    <div class="search-content">
        <table class="tabla-search" style="width:auto">
            <tr>
                <td>Area:</td>
                <td>
                    <select id="cbArea" name="cbArea" multiple="multiple">
                        @foreach (var item in Model.ListaAreas)
                        {
                            <option value="@item.Areacodi">@item.Areanomb</option>
                        }
                    </select>
                    <input type="hidden" id="hdcbArea" name="hdcbArea" />
                </td>
                <td class="content-action">
                    <input type="button" id="btnCrear" value="Crear" />
                </td>
            </tr>
        </table>
    </div>
    <div class="content-tabla">
        <div style="clear:both; height:5px"></div>
        <div class="table-list" id="listado"></div>
    </div>
</div>
<div id="popupTablaNuevo" style="display:none">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Nuevo Registro</span></div>
    <div class="search-content">
        <table class="tabla-search" style="width:auto">
            <tr>
                <td>Area:</td>
                <td>
                    <select id="cbArea_" name="cbArea_" style="width:300px;" @Model.Disabled>
                        @foreach (var item in Model.ListaAreas)
                        {
                            <option value="@item.Areacodi">@item.Areanomb</option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td>Actividad Abrev.:</td>
                <td><input type="text" id="txtActabrev" readonly="@Model.Readonly" style="text-transform:uppercase" maxlength="5" /></td>
            </tr>
            <tr>
                <td>Descripcion Actividad:</td>
                <td><input type="text" id="txtActnomb" style="width:250px" readonly="@Model.Readonly" /></td>
            </tr>
            <tr>
                <td colspan="2" align="right">
                    <input type="button" id="btnGrabar" value="Grabar" />
                </td>
            </tr>
        </table>
    </div>
</div>
<input type="hidden" id="event" value="1" /><input type="hidden" id="actcodi" value="0" />