@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Comunicados";
}
<script src="~/Areas/Migraciones/Content/Scripts/jquery.dataTables.rowReordering.js"></script>
<script src="~/Content/Scripts/jqueryui.js"></script>
<script src="~/Areas/Migraciones/Content/Scripts/comunicados.js?v=1.4"></script>
<link href="~/Areas/Migraciones/Content/Css/css.css" rel="stylesheet" />

<div class="form-title">
    <div class="content-titulo"> Publicacion de Comunicados </div>
</div>

<div class="content-hijo" id="mainLayout">
    <div class="search-content">
        <table class="tabla-search" style="width:auto">
            <tr>
                <td class="content-action">
                    <input type="button" id="btnCrear" value="Crear" />
                </td>
            </tr>
        </table>
    </div>
    <div class="content-tabla">
        <div style="clear:both; height:5px"></div>
        <div class="table-list" id="listado1" ></div>
        <div style="clear:both; height:15px"></div>
        <div class="table-list" id="listado2"></div>
    </div>
</div>
<div id="popupTablaNuevo" style="display:none">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Nuevo Registro</span></div>
    <div class="search-content">
        <table class="tabla-search" style="width:auto">
            <tr>
                <td>Fecha:</td>
                <td><input type="text" id="txtFecha" style="width:140px;" value="@Model.Fecha" /></td>
            </tr>
            <tr>
                <td>Titulo:</td>
                <td><textarea id="txtTitulo" style="width: 250px;height: 30px;resize: none;"></textarea></td>
            </tr>
            <tr>
                <td>Descripcion:</td>
                <td><textarea id="txtDescripcion" style="width: 350px;height: 100px;resize: none;"></textarea></td>
            </tr>
            <tr>
                <td>Link:</td>
                <td><textarea id="txtLink" style="width: 250px;height: 30px;resize: none;"></textarea></td>
            </tr>
            <tr>
                <td>Fecha Inicio:</td>
                <td><input type="text" id="txtFechaini" value="@Model.Fecha" /></td>
            </tr>
            <tr>
                <td>Fecha Termino:</td>
                <td><input type="text" id="txtFechafin" value="@Model.Fecha" /></td>
            </tr>
            <tr>
                <td>Estado:</td>
                <td>
                    <input type="radio" id="rd1" name="rd" checked="checked" />Publicar
                    <input type="radio" id="rd2" name="rd" />Pre-Publicar
                </td>
            </tr>
            <tr>
                <td colspan="2" align="right">
                    <input type="button" id="btnGrabar" value="Grabar" />
                </td>
            </tr>
        </table>
    </div>
</div>
<input type="hidden" id="event" value="1" /><input type="hidden" id="comcodi" value="0" /><input type="hidden" id="ff" value="@Model.Fecha" /><input type="hidden" id="ff2" value="@Model.FechaIni" />