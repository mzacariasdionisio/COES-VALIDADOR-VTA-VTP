@model COES.MVC.Intranet.Areas.Migraciones.Models.ParametroModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Configuración de Parámetros Grupos/Mop";
}
<script src="~/Areas/Migraciones/Content/Scripts/parametrogrupomop/parametroagrupacion.js?v=1.1"></script>
<link href="~/Areas/Migraciones/Content/Css/css.css" rel="stylesheet" />
<link href="~/Areas/Migraciones/Content/Css/parametro.css" rel="stylesheet" />

<div class="form-title">
    <div class="content-titulo">Configuración de Parámetros Grupos/Mop</div>
    <div class="content-botonera">
        <input type="button" id="btnCrearAgrup" value="Crear Agrupación" />
        <input type="button" id="btnConsultar" value="Consultar" />
    </div>
</div>

<div class="content-hijo" id="mainLayout">
    <div id="textoMensaje" style=" margin: 0; margin-bottom: 10px;"></div>

    <div class="search-content">

        <div class="table-list" id="listadoAgrupacion"></div>
        <div style="clear:both; height:30px"></div>
    </div>    
</div>

<!-- Agrupacion -->
<div id="popupAgrupacion" class="general-popup" style="width: 600px">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Agrupación</span></div>
    <div style="clear:both; height:20px"></div>

    <div class="panel-container">
        <div class="active" style="display: block;">

            <div class="content-botonera">
                <input type="button" id="btnAgregarConcepto" value="Agregar Concepto" style="display: none" />
            </div>

            <table>
                <tbody>
                    <tr>
                        <td class="tbform-label">Nombre:</td>
                        <td class="tbform-control">
                            <input type="text" id="frmAgrpNomb" value="" style="width: 250px;" autocomplete=off />
                        </td>
                    </tr>
                </tbody>
            </table>

            <table id='tabla_concepcodi' class='pretty tabla-icono' style="display: none; margin-top: 15px;"></table>

            <input type="hidden" id="hfCodigoAgrupacion" value="0" />
        </div>
    </div>

    <div style="clear:both; height:20px"></div>
    <table style="width:200px;">
        <tr>
            <td id="tdAgrpGuardar">
                <input id="btnAgrpGuardar" type="button" value="Guardar">
            </td>
            <td id="tdAgrpCancelar">
                <input id="btnAgrpCancelar" type="button" value="Cancelar">
            </td>
        </tr>
    </table>
</div>

<!-- Concepto -->
<div id="popupConcepto" class="general-popup" style="width: 850px">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Conceptos de Grupo</span></div>
    <div style="clear:both; height:20px"></div>

    <div class="panel-container">
        <div class="active" style="display: block;">
            <table>
                <tbody>
                    <tr>
                        <td class="tbform-label" style="text-align: right">Categoría de grupo:</td>
                        <td>
                            <select id="cbAgrpCategoria" style=" width: 251px; display: block">
                                <option value="-1">--TODOS--</option>
                                @foreach (var item in Model.ListaCategoria)
                                {
                                    <option value="@item.Catecodi">@item.Catenomb</option>
                                }
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td class="tbform-label" style="text-align: right">Concepto seleccionado:</td>
                        <td style="padding-left: 0px;">
                            <input type="hidden" id="hfCodigoPropiedad" />
                            <input type="hidden" id="hfDescPropiedad" />
                            <input type="hidden" id="hfAbrevPropiedad" />
                            <input type="hidden" id="hfItemUnidad" />
                            <input type="hidden" id="hfItemTipo" />
                            <input type="text" id="descripcionPropiedad" readonly style="width: 250px" disabled />
                        </td>
                    </tr>
                </tbody>
            </table>

            <div id="div_tabla_pr_concepto" style="display: none">
                <div id="div_tabla_ft_propiedad" style="display: none">
                </div>

            </div>
        </div>

        <div style="clear:both; height:20px"></div>
        <table style="width:200px;">
            <tr>
                <td id="tdPropGuardar">
                    <input id="btnCnpGuardar" type="button" value="Agregar">
                </td>
                <td id="tdAgrpCancelar">
                    <input id="btnCnpCancelar" type="button" value="Cancelar">
                </td>
            </tr>
        </table>
    </div>
</div>