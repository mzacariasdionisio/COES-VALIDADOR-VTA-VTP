@model COES.MVC.Intranet.Areas.Migraciones.Models.ParametroModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualización de Concepto por Área y Usuarios";
}
<script src="~/Areas/Migraciones/Content/Scripts/parametrogrupomop/parametrovisualizacion.js?v=1.3"></script>
<link href="~/Areas/Migraciones/Content/Css/css.css" rel="stylesheet" />
<link href="~/Areas/Migraciones/Content/Css/parametro.css" rel="stylesheet" />
<script src="~/Content/Scripts/fixedcolumn.js"></script>

<div class="form-title">
    <div class="content-titulo">Visualización de Concepto por Área y Usuarios</div>
    <div class="content-botonera">
        <input type="button" id="btnConsultar" value="Consultar" />
    </div>
</div>

<div class="content-hijo" id="mainLayout">
    <div id="textoMensaje" style=" margin: 0; margin-bottom: 10px;"></div>

    <div class="search-content">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Categoría de Grupo:</td>
                <td>
                    <select id="cbCategoria" style="width: 250px;">
                        <option value="-2">--TODOS--</option>
                        @foreach (var item in Model.ListaCategoria)
                        {
                            <option value="@item.Catecodi">@item.Catenomb</option>
                        }
                    </select>
                </td>
            </tr>
        </table>
    </div>

    <div class="content-tabla">

        <div class="table-list" id="listado"></div>
        <div style="clear:both; height:30px"></div>
    </div>
</div>

<!-- Usuario -->
<div id="popupUsuario" class="general-popup" style="width: 800px">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Relación de concepto con Áreas y Usuarios</span></div>
    <div style="clear:both; height:20px"></div>

    <div class="panel-container">

        <table class="content-tabla-search">
            <tbody>
                <tr>
                    <td class="tbform-label" style="text-align: right">Concepto:</td>
                    <td id="formconcepto"></td>
                </tr>
            </tbody>
        </table>

        <div class="active" style="display: block;">
            <table>
                <tbody>
                    <tr>
                        <td class="" style="vertical-align: top;">
                            <div id="listaArea">
                                <table id='tabla_area' style="display: none; margin-top: 15px; width: 70px"></table>
                            </div>
                        </td>
                        <td class="tbform-label" style="padding-left: 50px;">
                            <div id="div_tabla_usuario" style="width: 600px; overflow: auto; height: 400px">
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>


            <input type="hidden" id="hfCodigoConcepto" value="0" />
        </div>
    </div>

    <div style="clear:both; height:20px"></div>
    <table style="width:200px;">
        <tr>
            <td id="tdUsuarioGuardar">
                <input id="btnUsuarioGuardar" type="button" value="Guardar">
            </td>
            <td id="tdAgrpCancelar">
                <input id="btnUsuarioCancelar" type="button" value="Cancelar">
            </td>
        </tr>
    </table>
</div>

<input type="hidden" id="hfListaUsuario" value="@Model.ListaUsuarioJson" />
<input type="hidden" id="hfListaArea" value="@Model.ListaAreaJson" />