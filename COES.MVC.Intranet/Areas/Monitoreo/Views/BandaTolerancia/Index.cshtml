@model  COES.MVC.Intranet.Areas.Monitoreo.Models.BandaToleranciaModel

@{
    ViewBag.Title = "Actualización de las Bandas de Tolerancia del Osinergmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Areas/Monitoreo/Content/Scripts/bandatoleranciaRegistro.js?v=1.4.1"></script>
<link href="~/Areas/Monitoreo/Content/Css/css.css?v=1.4" rel="stylesheet" />

<style>
    .tbform-label {
        text-align: right;
    }
</style>

<div class="form-title">
    <div class="content-titulo">Actualización de las Bandas de Tolerancia del Osinergmin</div>
    <div class="content-botonera">
        <input type="button" id="btnNuevo" value="Nuevo" />
    </div>
</div>

<div class="content-hijo" id="mainLayout">
    <div class="content-tabla">
        <div style="clear:both; height:5px"></div>

        <div id="listadoBanda">
        </div>
    </div>
</div>

<div id="popupNuevoBandaTolerancia" style="display:none" class="general-popup">
    <span class=" button b-close">        <span>X</span>    </span>
    <div class="popup-title"><span>Nueva Banda de Tolerancia</span></div>
    <div id="nuevoBandaTolerancia"></div>
</div>

<div id="popupEditarBandaTolerancia" style="display:none" class="general-popup">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Editar Banda de Tolerancia</span></div>
    <div id="editarBandaTolerancia"></div>
</div>

<div id="popupVerBandaTolerancia" style="display:none" class="general-popup">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Ver Banda de Tolerancia</span></div>
    <div id="verBandaTolerancia"></div>
</div>