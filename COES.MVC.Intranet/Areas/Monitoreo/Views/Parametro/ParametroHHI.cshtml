@model  COES.MVC.Intranet.Areas.Monitoreo.Models.ParametroModel

@{
    ViewBag.Title = "Parámetros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Areas/Monitoreo/Content/Scripts/parametro.js?v=1.4"></script>
<link href="~/Areas/Monitoreo/Content/Css/css.css?v=1.4" rel="stylesheet" />

<div class="form-title">
    <div class="content-titulo">Parámetro Indice de Herfindahl y Hirschman</div>
    <div class="content-botonera">
        <input type="button" id="btnNuevo" value="Nuevo" />
    </div>
</div>


<div class="content-hijo" id="mainLayout">
    <div class="content-tabla">
        <div style="clear:both; height:5px"></div>

        <div id="parametroHHI">
        </div>
    </div>
</div>

<div id="idPopupNew" style="display:none" class="popup-class-1">
    <span class="button b-close"><span>X</span></span>

    <div class="popup-title"><span>Nuevo Aproximación de Tendencia</span></div>

    <table class="table-search" style="width:auto">
        <tr>
            <td class="tbform-label"><b>Fecha de periodo</b></td>
        </tr>

        <tr>

            <td>  <input type="text" id="txtFecha" name="txtFecha" value="@Model.FechaInicio" /></td>
        </tr>

        <tr>
            <td class="tbform-label"><b>A cero </b></td>
        </tr>
        <tr>
            <td><input type="text" id="txtCero" style="background-color: #3CBC8D; box-sizing: border-box; color: white;" onkeypress="return valida(event)" maxlength="6" /></td>
        </tr>

        <tr>
            <td class="tbform-label"><b>A uno </b></td>
        </tr>
        <tr>

            <td><input type="text" id="txtUno" style="background-color: #FF022C; box-sizing: border-box; color: white;" onkeypress="return valida(event)" maxlength="6" /></td>
        </tr>

        <tr></tr>
        <tr>
            <td colspan="2" style="text-align:right">
                <input type="button" id="btnSave" value="Guardar" />
            </td>
        </tr>
    </table>
</div>

<div id="popupEditarParametroHHI" class="general-popup">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Editar Aproximación de Tendencia</span></div>
    <div id="editarParametroHHI"></div>
</div>

<div id="popupVerParametroHHI" class="general-popup">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Aproximación de Tendencia</span></div>
    <div id="verParametroHHI"></div>
</div>