@model  COES.MVC.Intranet.Areas.Monitoreo.Models.ParametrosModel


@{
    ViewBag.Title = "Reporte indicadores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Areas/Monitoreo/Content/Scripts/ParametroIndicador3.js"></script>
<link href="~/Areas/Monitoreo/Content/Css/css.css?v=1.2" rel="stylesheet" />


<div class="form-title">
    <div class="content-titulo">Parametros Indice de Pivotal</div>
</div>


<div class="content-hijo" id="mainLayout">
    <div class="search-content">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>
                    <input type="button" id="btnNuevo" value="Nuevo" />
                </td>

            </tr>
        </table>
    </div>

    <div class="content-tabla">
        <div style="clear:both; height:5px"></div>
        <div class="table-list" id="listado"></div>
    </div>

</div>


<div id="idPopupNew" style="display:none" class="popup-class-1">
    <span class="button b-close"><span>X</span></span>

    <div class="popup-title"><span>Indice Pivotal</span></div>

    <table class="table-search" style="width:auto">
        <tr>
            <td class="tbform-label"><b>Fecha de periodo</b></td>
        </tr>

        <tr>
            <td>  <input type="text" id="txtFecha" name="txtFecha" value="@Model.FechaInicio" /></td>
        </tr>

        <tr>
            <td class="tbform-label"><b>Indice Pivotal</b></td>
        </tr>

        <tr>
            <td><input type="text" id="txtPivotal" onkeypress="return valida(event)" maxlength="5" /></td>
        </tr>

        <tr></tr>
        <tr>
            <td colspan="2" style="text-align:right">
                <input type="button" id="btnSave" value="Procesar" />
            </td>
        </tr>
    </table>
</div>




