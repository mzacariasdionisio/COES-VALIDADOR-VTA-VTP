@model  COES.MVC.Intranet.Areas.Monitoreo.Models.RelacionModel

@{
    ViewBag.Title = "Relación de Grupos de Despacho y Barras de Programación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Css/multiselect.css" rel="stylesheet" />
<script src="~/Content/Scripts/multiselect.js"></script>
<script src="~/Areas/Monitoreo/Content/Scripts/relacion.js?v=1.9"></script>
<link href="~/Areas/Monitoreo/Content/Css/css.css?v=1.4" rel="stylesheet" />

<script src="~/Content/Scripts/fixedcolumn.js?v=1.2"></script>

<div class="form-title">
    <div class="content-titulo">Relación de Grupos de Despacho y Barras de Programación</div>
</div>

<div class="content-hijo" id="mainLayout">
    <div class="search-content">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Empresas:</td>

                <td>
                    <select id="cbEmpresa" style="width:250px;" multiple="multiple">

                        @foreach (var item in Model.ListaEmpresas)
                        {
                            <option value="@item.Emprcodi">@item.Emprnomb</option>
                        }
                    </select>
                </td>


                <td>Tipo Central:</td>

                <td>
                    <select id="cbCentral" style="width:250px;">
                        <option value="-2">--TODOS--</option>
                        @foreach (var item in Model.ListaCategoria)
                        {
                            <option value="@item.Catecodi">@item.Catenomb</option>
                        }
                    </select>
                </td>

                <td>
                    <input type="button" id="btnConsultar" value="Consultar" />
                </td>

            </tr>
        </table>
    </div>

    <div class="content-tabla">
        <div style="clear:both; height:5px"></div>
        <div class="table-list" id="listado"></div>
    </div>
</div>

<div id="idPopupNew" style="display:none" class="popup-class-1">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Relacion de Grupo de despacho con Barra de Programación</span></div>
    <div style="clear:both; height:5px"></div>

    <fieldset style="MARGIN-TOP: 10px; padding-bottom: 12px;">
        <legend>Grupo de despacho</legend>

        <table class="table-search" style="width:auto">
            <tr>
                <td>
                    <label class="tbform-label">Código</label>
                    <br />
                    <input type="text" id="idCodigo" value="" style="width: 50px;" autocomplete=off readonly />

                </td>

                <td>
                    <label class="tbform-label">Empresa</label>
                    <br />
                    <input type="text" id="txtEmpresa" value="" style="width: 250px;" autocomplete=off readonly />

                </td>

                <td>
                    <label class="tbform-label">Central de Generación</label>
                    <br />
                    <input type="text" id="txtCentro" value="" style="width: 250px;" autocomplete=off readonly />
                </td>
            </tr>
        </table>
    </fieldset>

    <fieldset style="MARGIN-TOP: 10px; padding-bottom: 12px;">
        <legend>Barra de Programación</legend>

        <table class="table-search" style="width:auto">
            <tr>

                <td>
                    <label class="tbform-label">Código</label>
                    <br />
                    <input type="text" id="txtCodigoBarra" value="" style="width: 50px;" autocomplete=off readonly />

                </td>

                <td>
                    <label class="tbform-label">Nombre NCP</label>
                    <br />
                    <input type="text" id="txtNombre1" value="" style="width: 250px;" autocomplete=off readonly />
                </td>

                <td>
                    <label class="tbform-label">Nombre</label>
                    <br />
                    <input type="text" id="txtNombre2" value="" style="width: 250px;" autocomplete=off readonly />
                </td>
            </tr>
        </table>
    </fieldset>

    <table class="table-search" style=" width: 550px; margin: 0 auto;">
        <tr>
            <td colspan="2">
                <div id="div_tabla_barra_prog" style="display: none">
                </div>

                <div style="clear:both; height:5px"></div>
            </td>
        </tr>
    </table>

    <table class="table-search" style="width:auto">
        <tr>
            <td>
                <input type="button" id="btnSave" value="Guardar" />
            </td>
        </tr>
    </table>

</div>
