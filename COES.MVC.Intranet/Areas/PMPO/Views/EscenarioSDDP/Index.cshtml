@model COES.MVC.Intranet.Areas.PMPO.Models.EscenarioSDDPModel
@{
    ViewBag.Title = "Escenario SDDP";
}
@if (Model.UsarLayoutModulo)
{
    Layout = "~/Views/Shared/_LayoutAlter.cshtml";
}
else
{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<script src="~/Content/Scripts/jquery.format.js"></script>
<script src="~/Content/Scripts/jquery.easytabs.min.js?v=1.1"></script>
<script src="~/Content/Scripts/inputmaskmin.js"></script>
<script src="~/Content/Scripts/moment.js"></script>
<script src="~/Areas/PMPO/Content/Scripts/pmpo-escenario-sddp.js?v=1.0.1"></script>

<link href="~/Content/Css/tabs.css" rel="stylesheet" />


<div class="form-title">
    <div class="content-titulo">Escenario SDDP</div>

    <div class="content-botonera" id="container">
        @if (Model.TienePermisoNuevo)
        {
        <input type="button" id="btnAgregarEscenario" value="Agregar Escenario" />
        }
        
    </div>
</div>

<div class="content-hijo" id="mainLayout">
    
    <div class="content-tabla" id="excelwebPF" style="padding-top: 10px;">
        <div class='action-message' id='mensaje' style="margin-bottom:5px; margin-top:0; display:none"></div>
        <div id="tab-container" class='tab-container'>
            <ul class='etabs'>
                <li class='tab'><a href="#vistaListado">Listado</a></li>
                <li class='tab'><a href="#vistaDetalle">Detalle</a></li>
            </ul>

            <div class='panel-container'>
                <div id="vistaListado">
                    <div class="content-tabla">
                        <!--Listado de escenarios-->
                        <div class="table-list" id="listado">
                            <div id="cuadroEscenarios" style=" display: inline-block; float: left; width: 1400px;"> </div>
                        </div>
                    </div>

                </div>

                <div id="vistaDetalle">

                </div>
            </div>


        </div>
    </div>
</div>


<div id="historialES" class="general-popup" style="z-index:9999999998;">
    <div> <span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Escenarios por Periodo y Resolución</span></div>
    <div class="popup-text" style="margin-top:5px">
        <div id="vistaVersion">
            <div class="content-tabla">
                <div style="clear:both; height:5px"></div>

                <div class="content-tabla">
                    <div class="table-list" id="listadoHES"></div>
                </div>
            </div>
        </div>
    </div>
</div>


<div id="crearEscenario" class="general-popup" style="z-index:9999999998;">
    <div> <span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Crear Escenario SDDP</span></div>
    <div class="popup-text" style="margin-top:5px">
        <div id="vistaArchivos">
            <div class='action-message' id='mensajeCrearEscenario' style="margin-bottom:5px; margin-top:0; display:none; max-width: 350px;"></div>
            <div class="content-tabla">

                <div style="width:250px; padding-left: 50px;">
                    <div style="width:250px; padding-top:30px;">
                        <div style="width:60px; float:left;">
                            Tipo:
                        </div>
                        <div style="width:190px; float:left;">
                            <select id="cmbResolucion" name="" style="width:180px">
                                <option value="0" selected> -- Seleccione Resolución --</option>
                                <option value="S">Semanal</option>
                                <option value="M">Mensual</option>
                            </select>
                        </div>
                    </div>
                    <div id="anioCrear" style="width:250px; padding-top:30px; display: none;">
                        <div style="width:60px; float:left;">
                            Año:
                        </div>
                        <div style="width:190px; float:left;">
                            <input style="width: 75px;" type="text" id="txtMesAnio" value="@Model.MesAnioMensual" />
                            <input style="display: none;" type="text" id="hfNuevoMesAnioMensual" value="@Model.MesAnioMensual" />
                            <input style=" display: none;" type="text" id="hfNuevoMesAnioSemanal" value="@Model.MesAnioSemanal" />
                        </div>
                    </div>                    
                </div>

                <div style="width:250px; text-align:center; padding:30px; padding-top:50px;">

                    <div style="width:250px;">
                        <input type="button" id="btnCrearEscenario" value="Crear" />
                        <input type="button" id="btnCancelarEscenario" value="Cancelar" />
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>








