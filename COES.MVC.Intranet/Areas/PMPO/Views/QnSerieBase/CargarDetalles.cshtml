@model COES.MVC.Intranet.Areas.PMPO.Models.QnSerieBaseModel

<div style="clear:both; height:10px"></div>
<style>
    
    .ht_clone_top_left_corner tr:first-child th, .ht_clone_top tr:first-child th,
    .ht_clone_top_left_corner tr:nth-of-type(2) th, .ht_clone_top tr:nth-of-type(2) th,
    .ht_clone_top_left_corner tr:nth-of-type(3) th, .ht_clone_top tr:nth-of-type(3) th,
    .ht_clone_top_left_corner tr:nth-of-type(4) th, .ht_clone_top tr:nth-of-type(4) th {
        background-color: #002060;
        color: white;
        font-weight: bold;
        font-size: 12px;
    }

    .ht_clone_top_left_corner tr:nth-of-type(4) th:nth-of-type(1), .ht_clone_top tr:nth-of-type(4) th:nth-of-type(1) {
        background-color: #3d8ab8;
        color: white;
    }
</style>

<input type="hidden" id="hfAccionDetalle" value="@Model.Accion" />
<div class="content-hijos" id="mainLayou">

    <div class="search-content">
        <table class="table-search" style="width:100%; margin-bottom: 20px;" role="presentation">
            <tbody>
                <tr>
                    <td style="width: 72%; padding-left: 20px;">
                        <div style="width:150px; float:left; padding-top: 20px;">
                            <div style="width:45px; float:left;">
                                Desde:
                            </div>
                            <div style="width:105px; float:left;">
                                <input style="width: 60px;" type="text" id="txtRangoDesde" value="@Model.AnioMensual" />
                                <input style="display: none;" type="text" id="hfAnioMensual" value="@Model.AnioMensual" />
                            </div>
                        </div>
                        <div style="width:150px; float:left; padding-top: 20px;">
                            <div style="width:45px; float:left;">
                                Hasta:
                            </div>
                            <div style="width:105px; float:left;">
                                <input style="width: 60px;" type="text" id="txtRangoHasta" value="@Model.AnioMensual" />
                                <input style="display: none;" type="text" id="hfAnioMensual" value="@Model.AnioMensual" />
                            </div>
                        </div>
                        <div style="width:150px; float:left; padding-top: 20px;">
                            <div style="width:45px; float:left;">
                                <input type="button" id="btnConsultar" value="Consultar" />
                            </div>

                        </div>
                    </td>
                    @if (Model.TienePermisoNuevo)
                    {
                        <td class="content-action" style="width: 60px;">
                            <a href="#" id="btnDescargarF">
                                <div class="content-item-action" style="width:55px;">
                                    <img src="~/Content/Images/bajar.png" alt="logo"><br>
                                    <span>Descargar Formato</span>
                                </div>
                            </a>
                        </td>
                        <td class="content-action" style="width: 60px;">
                            <a href="#" id="btnImportarF">
                                <div class="content-item-action" style="width:55px;">
                                    <img src="~/Content/Images/subir.png" alt="logo"><br>
                                    <span>Importar Formato</span>
                                </div>
                            </a>
                        </td>
                        <td class="content-action" style="width: 60px;">
                            <a href="#" id="btnGuardar">
                                <div class="content-item-action" style="width:55px;">
                                    <img src="~/Content/Images/prnsave.png" alt="logo"><br>
                                    <span>Guardar</span>
                                </div>
                            </a>
                        </td>
                        <td class="content-action" style="width: 60px;">
                            <a href="#" id="btnMostrarErrores">
                                <div class="content-item-action" style="width:55px;">
                                    <img src="~/Content/Images/errores.png" alt="logo"><br>
                                    <span>Mostrar Errores</span>
                                </div>
                            </a>
                        </td>
                    }
                    else
                    {
                        <td class="content-action" style="width: 60px;"> </td>
                        <td class="content-action" style="width: 60px;"> </td>
                        <td class="content-action" style="width: 60px;"> </td>
                        <td class="content-action" style="width: 60px;"> </td>
                    }

                    <td class="content-action" style="width: 60px;">
                        <a href="#" id="btnVerHistorial">
                            <div class="content-item-action" style="width:55px;">
                                <img src="~/Content/Images/historial.png" alt="logo"><br>
                                <span>Ver envíos</span>
                            </div>
                        </a>
                    </td>
                    <td class="content-action" style="width: 60px;">
                        <a href="#" id="btnExportar">
                            <div class="content-item-action" style="width:55px;">
                                <img src="~/Content/Images/exportarExcel.png" alt="logo"><br>
                                <span>Exportar Información</span>
                            </div>
                        </a>
                    </td>

                </tr>
            </tbody>
        </table>
    </div>


    <div class="content-tabla">
        <p class="leyenda"  style="padding-right: 155px;"> <b> <div id="nota" style="font-weight:bold; font-size:15px;"></div></b> </p>
        <div id="htTablaWeb" class="hot handsontable htRowHeaders htColumnHeaders" style="height: 440px; overflow: hidden;">

        </div>

    </div>      

</div>

