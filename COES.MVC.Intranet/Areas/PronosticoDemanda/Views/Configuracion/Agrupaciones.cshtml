@model COES.MVC.Intranet.Areas.PronosticoDemanda.Models.AgrupacionesModel

<link href="~/Content/Css/calendar.css" rel="stylesheet" />
<link href="~/Content/Css/multiselect.css" rel="stylesheet" />
<link href="~/Areas/PronosticoDemanda/Content/Css/css.css" rel="stylesheet" />
<link href="~/Areas/PronosticoDemanda/Content/Css/fixer.css" rel="stylesheet" />

<script src="~/Content/Scripts/multiselect.js"></script>
<script src="~/Content/Scripts/jqueryui.js"></script>
<script src="~/Areas/PronosticoDemanda/Content/Scripts/agrupacion.js?v=3.2"></script>
<script src="~/Content/Scripts/datepicker.js"></script>
<script src="~/Content/Scripts/datatable.js"></script>

<div class="h-panel">
    <div class="h-panel-tool">
        <div class="tool-item">
            <label id="btn-nuevo" title="Crear nueva agrupación">
                <img src="~/Areas/PronosticoDemanda/Content/Images/prn-ico-nuevo.png" />
            </label>
        </div>
        <div class="tool-item">
            <label id="btn-manual" title="Manual de funciones">
                <a href="~/Areas/PronosticoDemanda/Content/Docs/Manual_Usuario_PronosticoDemandaE3_Intranet.docx"><img src="~/Areas/PronosticoDemanda/Content/Images/prn-ico-manual.png" /></a>
            </label>
        </div>
    </div>
    <div id="main" class="h-panel-main" data-msg="@Model.Mensaje" data-tpo="@Model.TipoMensaje">
        <div class="h-panel" style="margin-bottom: 5px;">
            <div class="filters">
                <div>Área operativa</div>
                <select id="id-area" class="f-select" multiple>
                    @foreach (var item in Model.ListArea)
                    {
                        <option value="@item.Item2">@item.Item3</option>
                    }
                </select>
            </div>
            <div class="filters">
                <div>Empresa</div>
                <select id="id-empresa" class="f-select" multiple>
                    @foreach (var item in Model.ListEmpresa)
                    {
                        <option value="@item.Emprcodi">@item.Emprnomb</option>
                    }
                </select>
            </div>
            <div class="filters">
                <div>Pronóstico por áreas</div>
                <select id="id-pronostico">
                    <option value="1" selected>Si</option>
                    <option value="0">No</option>
                </select>
            </div>
            <div class="filters">
                <div>Agrupación</div>
                <select id="id-agrupacion" class="f-select" multiple>
                    @foreach (var item in Model.ListAgrupacion)
                    {
                        <option value="@item.Ptomedicodi">@item.Ptomedidesc</option>
                    }
                </select>
            </div>
        </div>
        <div>
            <table id="dt" class="pretty tabla-icono"></table>
        </div>
    </div>
</div>

<div id="popup" class="general-popup" style="display: none">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title">
        <span id="pop-title"></span>
        <div style="float: right;">
            <input id="btn-pop-guardar" type="button" value="Aceptar" />
        </div>
    </div>
    <div class="popup-text" style="padding: 0px 10px 0px 0px; height: 500px;">
        <div id="pop-mensaje" style="display: none"></div>
        <div style="margin-bottom: 10px;">
            <div class="h-panel" style="margin-bottom: 5px;">
                <div style="margin-right: 10px;">
                    <div style="font-size: 12px; font-weight: bold; color: #3D90CB;">
                        Pertenece al área operativa
                    </div>
                    <div>
                        <select id="pop-area">
                            @foreach (var item in Model.ListArea)
                            {
                                <option value="@item.Item2">@item.Item3</option>
                            }
                        </select>
                    </div>
                </div>
                <div>
                    <div style="font-size: 12px; font-weight: bold; color: #3D90CB;">
                        Participa en el "Pronóstico por áreas"</div>
                    <div>
                        <select id="pop-pronostico">
                            <option value="1">Si</option>
                            <option value="0">No</option>
                        </select>
                    </div>
                </div>
            </div>
            <div style="margin-bottom: 10px;">
                <div style="font-size: 12px; font-weight: bold; color: #3D90CB;">
                    Nombre de la agrupación
                </div>
                <div>
                    <input id="pop-nombre" style="width:500px;" />
                </div>
            </div>
            <div style="margin-bottom: 10px;">
                <div style="font-size: 12px; font-weight: bold; color: #3D90CB;">
                    Puntos de medición seleccionados
                </div>
                <div>
                    <table id="tb-seleccionados" class="pretty tabla-icono" style="width:100%;"></table>
                </div>
            </div>
            <div style="margin-bottom: 10px;">
                <div style="font-size: 12px; font-weight: bold; color: #3D90CB;">
                    Puntos de medición disponibles
                </div>
                <div>
                    <div>
                        <table id="tb-disponibles" class="pretty tabla-icono"></table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
