@model COES.MVC.Intranet.Areas.PronosticoDemanda.Models.ParametrosModel
<script src="~/Areas/PronosticoDemanda/Content/Scripts/parametros_agrupaciones.js?v=3.2"></script>

<div class="h-panel" style="min-height:432px;">
    <div class="h-panel-tool">
        <div class="tool-item">
            <label id="btn-guardar" title="Guardar cambios">
                <img src="~/Areas/PronosticoDemanda/Content/Images/prn-ico-guardar.png" />
            </label>
        </div>
        <div class="tool-item">
            <label id="btn-defecto" title="Actualizar los parámetros por defecto">
                <img src="~/Areas/PronosticoDemanda/Content/Images/prn-ico-defecto.png" />
            </label>
        </div>
        <div class="tool-item">
            <label id="btn-limpiar" title="Limpiar campos de texto de los parámetros">
                <img src="~/Areas/PronosticoDemanda/Content/Images/prn-ico-limpiar.png" />
            </label>
        </div>
        <div class="tool-item">
            <label id="btn-manual" title="Manual de funciones">
                <img src="~/Areas/PronosticoDemanda/Content/Images/prn-ico-manual.png" />
            </label>
        </div>
    </div>
    <div id="main" class="h-panel-main" data-msg="@Model.Mensaje" data-tpo="@Model.TipoMensaje" data-mdl="@Model.IdModulo">
        <div class="v-panel" style="padding: 10px 5px 5px 5px;">
            <div style="margin-bottom: 10px; border-bottom: 1px solid #d9e8f3;">
                <div class="parametros-group h-panel" style="margin-bottom: 0px;">
                    <div style="margin-right: 15px;">
                        <div class="chk-single">
                            <label>
                                <input id="Prncfgtipopatron" type="checkbox" style="vertical-align: middle;" />Patrón
                            </label>
                        </div>
                        <div>
                            <label>
                                <input type="radio" name="patron" value="P" disabled />Promedio
                            </label>
                            <label>
                                <input type="radio" name="patron" value="M" disabled />Mediana
                            </label>
                        </div>
                    </div>
                    <div style="margin-right: 15px;">
                        <div class="chk-single">
                            <label>
                                <input id="Prncfgnumdiapatron" type="checkbox" style="vertical-align: middle;" />Días Patrón(#)
                            </label>
                        </div>
                        <div>
                            <input type="number" disabled />
                        </div>
                    </div>
                    <div>
                        <div class="chk-single">
                            <label>
                                <input id="Prncfgporcdsvptrn" type="checkbox" style="vertical-align: middle;" />Desviación(%)
                            </label>
                        </div>
                        <div>
                            <input type="number" disabled />
                        </div>
                    </div>
                </div>
            </div>
            <div class="h-panel" style="margin-bottom: 5px;">
                <div class="filters">
                    <div>Desde</div>
                    <input id="id-desde" type="text" class="f-fecha" value="@Model.FechaIni" />
                </div>
                <div class="filters">
                    <div>Hasta</div>
                    <input id="id-hasta" type="text" class="f-fecha" value="@Model.FechaFin" />
                </div>
                <div class="filters">
                    <div>Buscar por ID</div>
                    <input id="id-byid" type="number" />
                </div>
                @*<div class="filters">
                    <div>Area Operativa</div>
                    <select id="id-area" class="f-select" multiple>
                        @foreach (var item in Model.ListArea)
                        {
                            <option value="@item.Ptomedicodi">@item.Ptomedidesc</option>
                        }
                    </select>
                </div>*@
                <div class="filters">
                    <div>Empresa</div>
                    <select id="id-empresa" class="f-select" multiple>
                        @foreach (var item in Model.ListEmpresa)
                        {
                            <option value="@item.Emprcodi">@item.Emprnomb</option>
                        }
                    </select>
                </div>
                <div class="filters">
                    <div>Agrupación</div>
                    <select id="id-agrupacion" class="f-select" multiple>
                        @foreach (var item in Model.ListAgrupacion)
                        {
                            <option value="@item.Ptomedicodi">@item.Ptomedidesc</option>
                        }
                    </select>
                </div>
            </div>
            <div>
                <table id="dtgrid" class="pretty tabla-icono"></table>
            </div>
        </div>
    </div>
</div>

<div id="popup" class="general-popup" style="min-height: 70px;">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title">
        <span>Actualizar defecto</span>
        <div style="float: right;">
            <input id="btn-pop-guardar" type="button" value="Actualizar" />
        </div>
    </div>
    <div class="popup-text">
        <div id="message-popup" style="display: none"></div>
        <div class="h-panel">
            <div>
                <div class="parametros-group-title chk-group-popup" style="display: none;">
                    <label>
                        <input type="checkbox" />
                    </label>
                </div>
                <div class="parametros-group h-panel by-popup" style="margin-bottom: 0px;">
                    <div style="margin-right: 15px;">
                        <div class="chk-single-popup">
                            <label>
                                <input id="pop-Prncfgtipopatron" type="checkbox" style="vertical-align: middle;" />Patrón
                            </label>
                        </div>
                        <div>
                            <label>
                                <input type="radio" name="patron" value="P" disabled />Promedio
                            </label>
                            <label>
                                <input type="radio" name="patron" value="M" disabled />Mediana
                            </label>
                        </div>
                    </div>
                    <div style="margin-right: 15px;">
                        <div class="chk-single-popup">
                            <label>
                                <input id="pop-Prncfgnumdiapatron" type="checkbox" style="vertical-align: middle;" />Días Patrón(#)
                            </label>
                        </div>
                        <div>
                            <input type="number" disabled />
                        </div>
                    </div>
                    <div>
                        <div class="chk-single-popup">
                            <label>
                                <input id="pop-Prncfgporcdsvptrn" type="checkbox" style="vertical-align: middle;" />Desviación(%)
                            </label>
                        </div>
                        <div>
                            <input type="number" disabled />
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

