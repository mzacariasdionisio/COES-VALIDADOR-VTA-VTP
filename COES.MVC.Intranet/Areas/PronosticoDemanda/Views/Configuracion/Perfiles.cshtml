@model COES.MVC.Intranet.Areas.PronosticoDemanda.Models.PerfilesModel

<script src="~/Areas/PronosticoDemanda/Content/Scripts/perfiles.js?v=4.3"></script>

<div class="h-panel">
    <div class="h-panel-tool">
        <div class="tool-item">
            <label id="btn-guardar" title="Actualizar el perfíl por defecto">
                <img src="~/Areas/PronosticoDemanda/Content/Images/prn-ico-guardar.png" />
            </label>
        </div>
        <div class="tool-item">
            <label id="btn-reemplazar" title="Reemplaza el valor de la columna 'Defecto' con la columna 'Patrón' ">
                <img src="~/Areas/PronosticoDemanda/Content/Images/prn-ico-reemplazar.png" />
            </label>
        </div>
        <div class="tool-item">
            <label id="btn-export" title="Exportar Perfiles">
                <img src="~/Areas/PronosticoDemanda/Content/Images/prn-ico-excel.png" />
            </label>
        </div>
        <div class="tool-item">
            <label id="btn-export-por-fecha" title="Exportar Perfiles">
                <img src="data:image/png;base64," />
            </label>
        </div>
        <div class="tool-item">
            <label id="btn-manual" title="Manual de funciones">
                <a href="~/Areas/PronosticoDemanda/Content/Docs/Manual_Usuario_PronosticoDemandaE3_Intranet.docx"><img src="~/Areas/PronosticoDemanda/Content/Images/prn-ico-manual.png" /></a>
            </label>
        </div>
    </div>
    <div id="main" class="h-panel-main" data-msg="@Model.Mensaje" data-tpo="@Model.TipoMensaje">
        <div class="h-panel" style="margin-bottom: 5px;">
            <div class="filters">
                <div>Fecha</div>
                <input id="id-fecha" type="text" class="f-fecha" value="@Model.Fecha" />
            </div>
            <div class="filters">
                <div>Buscar por ID</div>
                <input id="id-byid" type="number" />
            </div>
            <div class="filters">
                <div>Ubicación</div>
                <select id="id-ubicacion" class="f-select-m" multiple>
                    @foreach (var item in Model.ListUbicacion)
                    {
                        <option value="@item.Areacodi">@item.Areanomb</option>
                    }
                </select>
            </div>
            <div class="filters">
                <div>Tipo Empresa</div>
                <select id="id-tipoempresa" class="f-select-m" multiple>
                    @foreach (var item in Model.ListTipoEmpresa)
                    {
                        <option value="@item.Item1">@item.Item2</option>
                    }
                </select>
            </div>
            <div class="filters">
                <div>Empresa</div>
                <select id="id-empresa" class="f-select-m" multiple>
                    @foreach (var item in Model.ListEmpresa)
                    {
                        <option value="@item.Emprcodi">@item.Emprnomb</option>
                    }
                </select>
            </div>
            <div class="filters">
                <div>Punto de Medición</div>
                <select id="id-punto" class="f-select-s">
                    @foreach (var item in Model.ListPtomedicion)
                    {
                        <option value="@item.Ptomedicodi">@item.Ptomedidesc</option>
                    }
                </select>
            </div>
        </div>
        <div id="workspace" class="h-panel" style="height: 400px; display: none;">
            <div id="ht" style="margin-right: 5px; min-width: 500px; overflow: auto;"></div>
            <div id="hc" style="width: 100%;"></div>
            <div class="box">
                <div class="box-title">Opciones</div>
                <div class="box-body" style="overflow-y: scroll; height: 375px;">
                    <div id="bq" style="min-width: 140px; padding: 5px;">
                        <div class="simple-box" style="margin-bottom: 10px; padding: 5px 0px 5px 9px; border-radius: 4px;">
                            <label>Bloque Base :</label>
                            <input id="base" class="cls-bloque" type="number" style="width: 100px;" title="Ajusta directamente el bloque base" />
                        </div>
                        <div class="simple-box" style="margin-bottom: 10px; padding: 5px 0px 5px 9px; border-radius: 4px;">
                            <label>Bloque Media :</label>
                            <input id="media" class="cls-bloque" type="number" style="width: 100px;" title="Ajusta directamente el bloque media" />
                        </div>
                        <div class="simple-box" style="padding: 5px 0px 5px 9px; border-radius: 4px;">
                            <label>Bloque Punta :</label>
                            <input id="punta" class="cls-bloque" type="number" style="width: 100px;" title="Ajusta directamente el bloque punta" />
                        </div>
                    </div>
                    <div id="zd" style="min-width: 140px; padding: 5px;"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="popup" class="general-popup" style="min-width: 220px;">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title">
        <span>Perfiles por defecto</span>
        <div style="float: right;">
            <input id="btn-pop-guardar" type="button" value="Actualizar" />
        </div>
    </div>
    <div class="popup-text">
        <div id="message-popup" style="display: none"></div>
        <div class="v-panel" style="margin-bottom: 10px;">
            <div style="margin-bottom: 10px;">
                <div>Día</div>
                <select id="pop-id-dia" class="pop-select">
                    <option value="1">Dia</option>
                </select>
            </div>
            <div>
                <div>Tipo de información</div>
                <select id="pop-id-tipoinfo" class="pop-select">
                    <option value="1">Info</option>
                </select>
            </div>
        </div>
        <div class="h-panel" style="padding: 10px; ">
            <div id="pop-ht" style="width: 200px; height: 350px; overflow-y: auto;"></div>
        </div>
    </div>
</div>

<div id="popupExport" class="general-popup" style="min-width: 350px; min-height: 200px;">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title">
        <span>Configuraciones para exportar los perfiles</span>
        <div style="float: right;">
            <input id="btn-pop-exportar" type="button" value="Exportar" />
        </div>
    </div>
    <div class="popup-text">
        <div id="pop-mensaje-export" style="display: none"></div>
        <div id="pop-alert-export" style="display: none"></div>
        <div class="v-panel">
            <div class="h-panel" style="margin-bottom: 10px">
                <div class="filters">
                    <div>Fecha de inicio</div>
                    <input id="id-fecha-inicio" type="text" style="width: 150px;" value="@Model.Fecha" />
                </div>
                <div class="filters">
                    <div>Fecha de fin</div>
                    <input id="id-fecha-fin" type="text" style="width: 150px;" value="@Model.FechaFin" />
                </div>
            </div>
        </div>
    </div>
</div>

<div id="popupExportPorFecha" class="general-popup" style="min-width: 350px; min-height: 200px;">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title">
        <span>Configuraciones para exportar los perfiles</span>
        <div style="float: right;">
            <input id="btn-pop-exportar-por-fecha" type="button" value="Exportar" />
        </div>
    </div>
    <div class="popup-text">
        <div id="pop-mensaje-export-por-fecha" style="display: none"></div>
        <div id="pop-alert-export-por-fecha" style="display: none"></div>
        <div class="v-panel">
            <div class="h-panel" style="margin-bottom: 10px">
                <div class="filters">
                    <div>Fecha de inicio</div>
                    <input id="id-fecha-inicio-por-fecha" type="text" style="width: 150px;" value="@Model.Fecha" />
                </div>
                <div class="filters">
                    <div>Fecha de fin</div>
                    <input id="id-fecha-fin-por-fecha" type="text" style="width: 150px;" value="@Model.FechaFin" />
                </div>
            </div>
        </div>
    </div>
</div>