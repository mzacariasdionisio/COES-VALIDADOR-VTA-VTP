<script src="~/Areas/PronosticoDemanda/Content/Scripts/DemandaGeneracion/pronostico_perdidas.js"></script>
<div class="h-panel" style="min-height:600px;">
    <div class="h-panel-tool">
        <div class="tool-item">
            <label id="btn-ejecutar" title="Ejecutar">
                <img src="~/Areas/PronosticoDemanda/Content/Images/prn-ico-procesar.png" />
            </label>
        </div>
        <div class="tool-item">
            <label id="btn-importar" title="Importar archivo">
                <img src="~/Areas/PronosticoDemanda/Content/Images/prn-ico-excel.png" />
            </label>
        </div>
    </div>
    <div id="main" class="h-panel-main" data-msg="@Model.Mensaje" data-tpo="@Model.TipoMensaje" data-sein="@Model.idSein">
        <div class="h-panel" style="margin-bottom: 5px;">
            <div class="filters">
                <div>Fecha</div>
                <input id="id-fecha" type="text" class="f-fecha" value="@Model.Fecha" />
            </div>
        </div>
        <div id="workspace" class="h-panel" style="height: 530px;">
            <div id="ht" style="margin-right: 5px; width: 100%; overflow: auto;"></div>
        </div>
    </div>
</div>

<div id="popup" class="general-popup" style="min-width: 350px; min-height: 150px;">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title">
        <span>Importar archivo</span>     
        <div style="float: right;">
            <input id="btn-pop-importar" type="button" value="Importar" />
        </div>
    </div>
    <div class="popup-text">
        <div id="pop-mensaje" style="display: none"></div>
        <div class="h-panel">
            <div class="filters">
                <input id="id-archivo" type="file" />
            </div>            
        </div>
    </div>
</div>
<div id="popupEjecutar" class="general-popup" style="min-width: 350px; min-height: 100px;">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title">
        <span>Ejecutar</span>
        <div style="float: right;">
            <input id="btn-pop-ejecutar" type="button" value="Ejecutar" />
        </div>
    </div>
    <div class="popup-text">
        <div id="pop-ejecutar-mensaje" style="display: none"></div>
    </div>
</div>