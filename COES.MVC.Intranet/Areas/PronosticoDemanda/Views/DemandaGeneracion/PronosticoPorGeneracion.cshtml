<script src="~/Areas/PronosticoDemanda/Content/Scripts/DemandaGeneracion/pronostico_generacion.js"></script>
<div class="h-panel" style="min-height:600px;">
    <div class="ws-options is-left">
        <div class="tool-item">
            <label id="btn-guardar" title="Guardar los cambios ">
                <img src="~/Areas/PronosticoDemanda/Content/Images/prn-ico-guardar.png" />
            </label>
        </div>
        <div class="tool-item">
            <label id="btn-pronostico" title="Ejecutar pronóstico a nivel de generación para todas las áreas">
                <img src="~/Areas/PronosticoDemanda/Content/Images/prn-ico-pronostico.png" />
            </label>
        </div>
    </div>
    <div class="ws-content is-middle">
        <div class="ws-content-header">
            <div class="filters">
                <div>Fecha</div>
                <input id="id-fecha" type="text" class="f-fecha" value="@Model.Fecha" />
            </div>
            <div class="filters">
                <div>Area Operativa</div>
                <select id="id-area" class="f-select">
                    @foreach (var item in Model.ListArea)
                    {
                        if (item.Item4)
                        {
                            <option value="@item.Item1" selected>@item.Item3</option>
                        }
                        else
                        {
                            <option value="@item.Item1">@item.Item3</option>
                        }
                    }
                </select>
            </div>
        </div>
        <div class="ws-content-body">
            <div class="ws-wrapper" style="height: 500px;">
                <div id="ht"
                     style="min-width: 500px; overflow: auto;"></div>
                <div id="hc"
                     style="width: 100%;"></div>
            </div>
        </div>
    </div>
    <div class="ws-tools as-box-container is-right">
        <div class="box">
            <div class="box-title">
                Herramientas
            </div>
            <div class="box-body">
                <div id="bq" style="min-width: 140px; margin-bottom: 10px;">
                    <div class="simple-box" style="margin-bottom: 10px; padding: 5px 0px 5px 9px; border-radius: 4px;">
                        <label>Bloque Base :</label>
                        <input id="base" class="cls-bloque" type="number" style="width: 140px;" title="Ajusta directamente el bloque base" />
                    </div>
                    <div class="simple-box" style="margin-bottom: 10px; padding: 5px 0px 5px 9px; border-radius: 4px;">
                        <label>Bloque Media :</label>
                        <input id="media" class="cls-bloque" type="number" style="width: 140px; " title="Ajusta directamente el bloque media" />
                    </div>
                    <div class="simple-box" style="padding: 5px 0px 5px 9px; border-radius: 4px;">
                        <label>Bloque Punta :</label>
                        <input id="punta" class="cls-bloque" type="number" style="width: 140px; " title="Ajusta directamente el bloque punta" />
                    </div>
                </div>
                <input id="med1" type="text" class="toolHistorico ws-tool-calendar" />
                <input id="med2" type="text" class="toolHistorico ws-tool-calendar" />
                <input id="med3" type="text" class="toolHistorico ws-tool-calendar" />
                <input id="med4" type="text" class="toolHistorico ws-tool-calendar" />
                <input id="med5" type="text" class="toolHistorico ws-tool-calendar" />
            </div>
        </div>
    </div>
</div>

<div id="popup" class="general-popup" style="min-width: 350px; min-height: 160px;">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title">
        <span>Ejecutar Pronóstico</span>        
    </div>
    <div class="popup-text">
        <div id="pop-mensaje" style="display: none"></div>
        <div id="pop-alert" style="display: none"></div>
        <div class="v-panel">
            <input id="btn-pop-ejecutar"
                   style="float: right;"
                   type="button"
                   value="Ejecutar" />
        </div>
    </div>
</div>