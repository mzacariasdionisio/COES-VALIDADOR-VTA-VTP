@model COES.MVC.Intranet.Areas.PronosticoDemanda.Models.PronosticoModel

<script src="~/Areas/PronosticoDemanda/Content/Scripts/demanda.js?v=3.2"></script>

<div class="h-panel" style="min-height:600px;">
    <div class="h-panel-tool">
        <div class="tool-item">
            <label id="btn-guardar" title="Guarda los cambios">
                <img src="~/Areas/PronosticoDemanda/Content/Images/prn-ico-guardar.png" />
            </label>
        </div>
        <div class="tool-item">
            <label id="btn-flujos" title="Permite relacionar flujos a las áreas operativas">
                <img src="~/Areas/PronosticoDemanda/Content/Images/prn-ico-formula.png" />
            </label>
        </div>
        <div class="tool-item">
            <label id="btn-manual" title="Manual de funciones">
                <img src="~/Areas/PronosticoDemanda/Content/Images/prn-ico-manual.png" />
            </label>
        </div>
    </div>
    <div id="main" class="h-panel-main" data-msg="@Model.Mensaje" data-tpo="@Model.TipoMensaje" data-ctr="@Model.idCentro" data-sein="@Model.idSein">
        <div class="h-panel" style="margin-bottom: 5px;">
            <div class="filters">
                <div>Fecha</div>
                <input id="id-fecha" type="text" class="f-fecha" value="@Model.Fecha" />
            </div>
            <div class="filters">
                <div>Área Operativa</div>
                <select id="id-area" class="f-select">
                    @foreach (var item in Model.ListArea)
                    {
                        if (item.Item4)
                        {
                            <option value="@item.Item1" selected>@item.Item3</option>
                        }
                        else
                        {
                            <option value="@item.Item1">@item.Item3</option>
                        }                      
                    }
                </select>
            </div>
        </div>
        <div id="workspace" class="h-panel" style="height: 530px;">
            <div id="ht" style="margin-right: 5px; min-width: 500px; overflow: auto;"></div>
            <div id="hc" style="width: 100%;"></div>
            <div class="box">
                <div class="box-title">Opciones</div>
                <div class="box-body" style="overflow-y: scroll; height: 505px;">
                    <div id="bq" style="min-width: 140px; padding: 5px;">
                        <div class="simple-box" style="margin-bottom: 10px; padding: 5px 0px 5px 9px; border-radius: 4px;">
                            <label>Bloque Base :</label>
                            <input id="base" class="cls-bloque" type="number" style="width: 100px;" title="Ajusta directamente el bloque base" />
                        </div>
                        <div class="simple-box" style="margin-bottom: 10px; padding: 5px 0px 5px 9px; border-radius: 4px;">
                            <label>Bloque Media :</label>
                            <input id="media" class="cls-bloque" type="number" style="width: 100px;" title="Ajusta directamente el bloque media" />
                        </div>
                        <div class="simple-box" style="padding: 5px 0px 5px 9px; border-radius: 4px;">
                            <label>Bloque Punta :</label>
                            <input id="punta" class="cls-bloque" type="number" style="width: 100px;" title="Ajusta directamente el bloque punta" />
                        </div>
                    </div>
                    <div id="zd" style="min-width: 140px; padding: 5px;"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="popup" class="general-popup" style="min-width: 350px; min-height: 500px;">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title">
        <span id="pop-title">[ Área x ] Relacionar flujo</span>
        <div style="float: right;">
            <input id="btn-pop-guardar" type="button" value="Aceptar" />
        </div>
    </div>
    <div class="popup-text" style="overflow-y: scroll; padding: 0px 10px 0px 0px; height: 500px;">
        <div id="pop-mensaje" style="display: none"></div>
        <div style="margin-bottom: 10px;">
            <div style="font-size: 15px; font-weight: bold; color: #3D90CB;">
                Seleccionados
            </div>
            <div>
                <table id="tb-seleccionados" class="pretty tabla-icono" style="width: 350px;"></table>
            </div>
        </div>
        <div style="margin-bottom: 10px;">
            <div style="font-size: 15px; font-weight: bold; color: #3D90CB;">
                Disponibles
            </div>
            <div>
                @*<div class="h-panel" style="margin-bottom: 5px;">
                    <div class="filters">
                        <select id="id-flujo" class="f-pop-select" data-plc="Flujo">
                            <option>Prueba</option>
                            <option>Prueba</option>
                        </select>
                    </div>
                </div>*@
                <div>
                    <table id="tb-flujos" class="pretty tabla-icono"></table>
                </div>
            </div>
        </div>
    </div>
</div>