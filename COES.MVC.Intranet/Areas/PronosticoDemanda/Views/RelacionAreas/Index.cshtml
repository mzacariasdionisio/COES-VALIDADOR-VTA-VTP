@model COES.MVC.Intranet.Areas.PronosticoDemanda.Models.RelacionAreasModel

@Html.AntiForgeryToken()
@{
    ViewBag.Title = "PRODEM - Estructura - Áreas";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var sMensajeExito = TempData["sMensajeExito"];
    string sSelected = "";
}

<link href="~/Content/Css/multiselect.css" rel="stylesheet" />
<link href="~/Areas/PronosticoDemanda/Content/Css/css.css" rel="stylesheet" />
<script src="~/Content/Scripts/multiselect.js"></script>
<script src="~/Content/Scripts/datepicker.js"></script>
<script src="~/Content/Scripts/datatable.js"></script>
<script src="~/Content/Scripts/jqueryui.js"></script>
<script src="~/Areas/PronosticoDemanda/Content/Scripts/relacionareas.js?v=3.2"></script>
<link href="~/Areas/PronosticoDemanda/Content/Css/fixer.css" rel="stylesheet" />

<div class="ast">
    <div class="form-title">
        <div class="content-titulo">Estructura - Áreas</div>
        <div class="content-botonera"></div>
    </div>
    <div class="content-hijo">
        <div id="main" class="h-panel-main" data-msg="@Model.Mensaje" data-tpo="@Model.TipoMensaje">
            <div class="search-content">
                <table class="content-tabla-search">
                    <tr>
                        <td>Niveles</td>
                    </tr>
                    <tr>
                        <td style="width: 50px;">
                            <select id="cboNivel">
                                @foreach (var item in Model.ListaNiveles)
                                {
                                    <option value="@item.ANivelCodi">@item.ANivelNomb</option>
                                }
                            </select>
                        </td>
                    </tr>
                </table>
            </div>
            <div>
                <table id="dtDetalle" class="pretty tabla-icono"></table>
            </div>
        </div>
        @*<div style="width: 500px; border:1px solid #878787; border-top: 0px; border-radius: 0px 0px 4px 4px; padding: 10px; font-weight: bold;">
                <table id="dt-table" class="pretty tabla-icono"></table>
            </div>*@
    </div>
</div>

<div id="popupMantenimiento" class="general-popup" style="display: none">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title" style="margin-bottom: 10px;"><span><label id="titleMantenimiento"></label></span></div>
    <div>
        <div id="gridMantenimiento">

        </div>
    </div>
</div>


<div id="popupBarra" class="general-popup" style="display: none">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title" style="margin-bottom: 10px;"><span><label id="titleBarra"></label></span></div>
    <div>
        <div id="gridBarra">

        </div>
    </div>
</div>


<div id="popupSubestacion" class="general-popup" style="display: none">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title">
        <span>SSEE - AO</span>
        <div style="float: right;">
            <input id="btn-pop-guardar" type="button" value="Actualizar" />
        </div>
    </div>

    <div>
        <table>
            <thead>
                <tr>
                    <td>
                        <div>
                            <div>Sub - Estacion</div>
                            <input id="nombreSubestacion" style="width: 200px;" disabled/>
                        </div>
                    </td>
                    <td>
                        <div style="margin-left: 10px;">
                            <div>Area Operativa</div>
                            <select id="cboAreaOperativa" class="cboMant">
                                <option value="0" selected>-- SELECCIONE --</option>
                                @foreach (var item in Model.ListaAreas)
                                {
                                    <option value="@item.Areacodi">@item.Areanomb</option>
                                }
                            </select>
                        </div>
                    </td>
                    <td>
                        <div hidden>
                            <div>Sub - Estacion</div>
                            <input id="idSubestacion" />
                        </div>
                    </td>
                </tr>
            </thead>
        </table>
    </div>
</div>
