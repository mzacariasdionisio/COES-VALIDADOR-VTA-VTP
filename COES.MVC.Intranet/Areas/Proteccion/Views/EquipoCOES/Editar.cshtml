@model COES.MVC.Intranet.Areas.Proteccion.Models.EquipoCOESEditarModel

<script>
    $(function () {
        if ($("#nombreProteccion").val() != null && $("#nombreProteccion").val() != "") {
            $("#nombreProteccion").prop("disabled", false);
            $('#chkEquipo').prop('checked', true);
            $("#tdNombreProteccion").html("Nombre para protecciones(*):");
        } else {
            $("#nombreProteccion").prop("disabled", true);
            $('#chkEquipo').prop('checked', false);
            $("#tdNombreProteccion").html("Nombre para protecciones:");
        }

        $('#btnGrabar').click(function () {
            guardarEquipo();
        });

        $("#chkEquipo").click(function () {
            if ($(this).is(':checked')) {
                $("#nombreProteccion").prop("disabled", false);
                $("#tdNombreProteccion").html("Nombre para protecciones(*):");
            } else {
                $("#nombreProteccion").val("")
                $("#nombreProteccion").prop("disabled", true);
                $("#tdNombreProteccion").html("Nombre para protecciones:");
            }
        });
    });
</script>
<div class="panel-container">
    @using (Html.BeginForm("Editar", "Equipo", FormMethod.Post, new { @name = "frmEditarEquipo", id = "frmEditarEquipo" }))
    {
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.IdEpe)

        <div class="search-content" style="margin-bottom:0px; padding:15px">
            <table style="width:100%;margin-right: auto" class="table-form-show">
                <tr>
                    <th></th>
                    <th></th>
                </tr>
                <tr>
                    <td class="tbform-label"></td>
                    <td class="tbform-control">
                        <input type="checkbox" id="chkEquipo" />
                        ¿Desea cambiar el nombre del equipo?
                    </td>
                </tr>

                <tr>
                    <td class="tbform-label" id="tdNombreProteccion">Nombre para protecciones:</td>
                    <td class="tbform-control">
                        <input type="text" id="nombreProteccion" name="nombreProteccion" style="width: 99%;" value="@Model.Nombre" maxlength="200" />
                    </td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
            </table>
        </div>
        <br />
        <input id="btnGrabar" value="Grabar" type="button">
    }
</div>

