@model COES.MVC.Intranet.Areas.RegionesDeSeguridad.Models.RegionSeguridadModel
@{
    ViewBag.Title = "Regiones de Seguridad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Content/Scripts/plupload.full.min.js"></script>
<script src="~/Areas/RegionesDeSeguridad/Content/Scripts/regionSeguridad.js?v=1.0"></script>
<link href="~/Content/Css/form.css" rel="stylesheet" />

<div class="form-title">
    <div class="content-titulo">Regiones de Seguridad</div>
    <div class="content-botonera">
        <input type="button" id="btnNuevo" value='Nuevo' />
    </div>
    <div>
        <div class="content-botonera">
            <input type="button" id="btnSelectExcel" value='Cargar' />
        </div>
    </div>
</div>


<div class="content-hijo">
    <div id="mensaje"></div>

    <div class="search-content" style="margin-bottom:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td class="registro-label">Estado</td>
                <td class="registro-label">
                    <select id="cboEstado" name="regestado" >
                        <option value="A">Activo</option>
                        <option value="B">Inactivo</option>
                        <option value="-1">Todos</option>
                    </select>
                </td>
            </tr>
        </table>
    </div>

    <div id="listadoRegion">
    </div>

</div>

<div id="popupRegion" class="general-popup" style="width:550px">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Regiones de Seguridad</span></div>

    <div id="mensajeEdicion" class="action-message">Por favor complete los datos</div>
    <div class="panel-container">
        <div class="active" style="display: block;">

            <table>
                <tbody>
                    <tr>
                        <td class="tbform-label">Nombre:</td>
                        <td class="tbform-control">
                            <input type="text" id="nombRegion" value="" style="width: 400px;" autocomplete=off />
                        </td>
                    </tr>
                </tbody>
            </table>

            <input type="hidden" id="hfCodigoRegion" value="0" />

        </div>
    </div>

    <div style="clear:both; height:20px"></div>
    <div style="width:200px; margin:auto; text-align:center; margin-top:20px">
        <input type="button" id="btnGrabar" value="Grabar" />
        <input type="button" id="btnCancelar" value="Cancelar" />
    </div>
</div>

<div id="popupRegionSeguridad" class="general-popup" style="width:500px">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Configuración conjuntos líneas y generadores</span></div>
    <div class="popup-text" id="contenidoRegionSeguridad">

    </div>
</div>