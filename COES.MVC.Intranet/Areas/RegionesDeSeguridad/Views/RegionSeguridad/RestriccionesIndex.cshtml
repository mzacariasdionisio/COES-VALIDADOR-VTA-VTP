@model COES.MVC.Intranet.Areas.RegionesDeSeguridad.Models.RegionSeguridadModel
@{
    ViewBag.Title = "Restricciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Areas/RegionesDeSeguridad/Content/Scripts/Restriccion.js?v=1.1"></script>
<link href="~/Content/Css/form.css" rel="stylesheet" />
<div class="form-title">
    <div class="content-titulo">RESTRICCIONES - <span>@Model.SegRegion.Regnombre - @Model.TipoNombre</span></div>
    <div class="content-botonera">
        <input type="button" id="btnRegresar" value="Regresar" />
    </div>
</div>

<div class="content-hijo">
    <div id="mensaje"></div>

    <div class="search-content" style="margin-bottom:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td class="registro-label">Estado</td>
                <td class="registro-label">
                    <select id="cboEstadoCoord" name="regestado">
                        <option value="A">Activo</option>
                        <option value="B">Inactivo</option>
                        <option value="-1">Todos</option>
                    </select>
                </td>
                <td>
                    <input type="button" id="btnNuevaRestriccion" value="Nueva Restricción" />
                </td>
            </tr>
        </table>
    </div>

    <div id="listado">
    </div>
</div>

<div id="popupEdicion" class="general-popup" style="width:450px">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Recta en Región de Seguridad</span></div>
    <div class="popup-text" id="contenidoEdicion" style="margin-top:0">

    </div>
</div>

<input type="hidden" id="hfRegion" value="@Model.SegRegion.Regcodi" />
<input type="hidden" id="hfTipo" value="@Model.Tipo" />