@model COES.MVC.Intranet.Areas.RegistroIntegrante.Models.AdminModel
@{
    ViewBag.Title = "Histórico de Registro de Integrantes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Content/Scripts/jquery.validate.min.js"></script>
<script src="~/Areas/RegistroIntegrante/Content/Scripts/admin.js"></script>
<link href="~/Content/Css/cmxform.css" rel="stylesheet" />
<link href="~/Content/Css/form.css" rel="stylesheet" />

<div class="form-title">
    <div class="content-titulo">Histórico de Registro de Integrantes</div>
    <div class="content-botonera">
        <input type="button" id="btnNuevo" value="Nuevo" />        
    </div>
</div>

<div class="content-hijo">
    <div id="mensaje"></div>
    <div class="search-content" style="margin-bottom:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Año:</td>
                <td>
                    <select id="cbAnioBusqueda">
                        <option value="0">TODOS</option>
                        @foreach (var item in Model.Listado)
                        {
                            <option value="@item.Hisrianio">@item.Hisrianio</option>
                        }
                    </select>
                </td>
                <td>Tipo de operación:</td>
                <td>
                    <select id="cbTipoBusqueda" style="width:300px">
                        <option value="0">TODOS</option>
                        <option value="C">CAMBIO DE DENOMINACIÓN SOCIAL</option>
                        <option value="F">FUSIÓN</option>
                        <option value="B">RETIRO DE EMPRESA</option>
                    </select>
                </td>
                <td>
                    <input type="button" id="btnConsultar" value='Consultar' />
                </td>
            </tr>
        </table>
    </div>
    <div id="listado">
    </div>
    <br />
    <br />
</div>

<div id="popupEdicion" class="general-popup" style="width:500px">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Datos del registro</span></div>
    <div class="popup-text" id="contenidoEdicion">

    </div>
</div>
