@model COES.MVC.Intranet.Areas.RegistroIntegrante.Models.ReporteModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Areas/RegistroIntegrante/Content/Scripts/HistoricoSolicitudes.js?v=1.11"></script>
<div class="form-title" style="color: #278CCC; margin-bottom:0px;">Histórico de Solicitudes</div>
<div class="content-hijo" id="mainLayout">
    <div id="mensaje"></div>
    <div style="clear:both; height:5px;"></div>
    <div class="search-content" style="margin-bottom:0px; padding:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Fecha Desde:</td>
                <td>
                    <input type="text" id="FechaDesde" name="FechaInicio" value="@Model.FechaInicio" />
                </td>
                <td>Fecha Hasta:</td>
                <td>
                    <input type="text" id="FechaHasta" name="FechaFin" value="@Model.FechaFin" />
                </td>
                @*<td>Tipo de Empresa:</td>
                <td>
                    <select id="cbTipoEmpresa" style="width:140px">
                        @foreach (var item in Model.ListaTipoEmpresa)
                        {
                            <option value="@item.Tipoemprcodi">@item.Tipoemprdesc</option>
                        }
                    </select>
                </td>*@


                <td>Tipo de Empresa</td>
                <td>
                    <select id="cbTipoEmpresa" name="IdTipoEmpresa" style="width:120px">
                        <option value="0">-TODOS-</option>
                        @foreach (var item in Model.ListaTipoEmpresas)
                        {
                            <option value="@item.Tipoemprcodi">@item.Tipoemprdesc</option>
                        }
                    </select>
                    <input type="hidden" id="hfTipoEmpresa" value="@Model.IdTipoEmpresa" />
                </td>
                <td>Empresa:</td>
                <td>
                    <select id="cbEmpresa" name="IdEmpresa" style="width:300px">
                        @foreach (var item in Model.ListaEmpresas)
                        {
                            <option value="@item.EMPRCODI">@item.EMPRNOMB</option>
                        }
                    </select>
                    <input type="hidden" id="hfEmpresa" value="@Model.IdEmpresa" />
                </td>



                <td>Solicitud:</td>
                <td>
                    <select id="cbTipoSolicitudes" style="width:240px">
                        @foreach (var item in Model.ListaTipoSolicitudes)
                        {
                            <option value="@item.Tisocodi">@item.Tisonombre</option>
                        }
                    </select>
                </td>
                <td>
                    <input type="button" id="btnConsultar" value="Consultar" />
                </td>
                <td>
                    <a href="JavaScript:ExportarExcel();" title="Exportar a Excel">
                        <img src="~/Content/Images/ExportExcel.png" width="30" height="30" />
                    </a>
                </td>
            </tr>
        </table>
    </div>
    <div style="clear:both"></div>
    <div class="content-tabla">
        <div class="tabla-header">
            <div class="table-paginado" id="paginado"></div>
        </div>
        <div class="table-list" id="listado"></div>
        <div style="clear:both; margin-bottom:40px"></div>
    </div>

</div>