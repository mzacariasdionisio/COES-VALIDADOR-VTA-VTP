@model COES.MVC.Intranet.Areas.RegistroIntegrante.Models.ReporteModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Areas/RegistroIntegrante/Content/Scripts/ReporteEmpresas.js?v=1.11"></script>
<div class="form-title" style="color: #278CCC; margin-bottom:0px;">Listado de Empresas</div>
<div class="content-hijo" id="mainLayout">
    <div id="mensaje"></div>
    <div style="clear:both; height:5px;"></div>
    <div class="search-content" style="margin-bottom:0px; padding:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Desde:</td>
                <td>
                    <input type="text" id="FechaDesde" name="FechaInicio" value="@Model.FechaInicio" />
                </td>
                <td>Hasta:</td>
                <td>
                    <input type="text" id="FechaHasta" name="FechaFin" value="@Model.FechaFin" />
                </td>
                <td>Razón Social:</td>
                <td>
                    <input type="text" id="txtNombreFiltro" />
                </td>
                <td>Tipo:</td>
                <td>
                    <select id="cbTipoEmpresa" style="width:140px">
                        @foreach (var item in Model.ListaTipoEmpresa)
                        {
                            <option value="@item.Tipoemprcodi">@item.Tipoemprdesc</option>
                        }
                    </select>
                </td>
                <td>Condición:</td>
                <td>
                    <select id="cbTipoModalidad" style="width:140px">
                        @foreach (var item in Model.ListaModalidadVoluntarioObligatorio)
                        {
                            <option value="@item.ModalidadVoluntarioObligatorioCodigo">@item.ModalidadVoluntarioObligatorioDescripcion</option>
                        }
                    </select>
                </td>
                <td>
                    <input type="button" id="btnConsultar" value="Consultar" />
                </td>
                <td>
                    <a href="JavaScript:ExportarExcelEmpresa();" title="Exportar a Excel">
                        <img src="~/Content/Images/ExportExcel.png" width="30" height="30" />
                    </a>
                </td>
            </tr>
            
        </table>
    </div>
    <div style="clear:both"></div>
    <div class="content-tabla">
        <div class="tabla-header">
            <div class="table-paginado" id="paginado"></div>
        </div>
        <div class="table-list" id="listado"></div>
        <div style="clear:both; margin-bottom:40px"></div>
    </div>

</div>