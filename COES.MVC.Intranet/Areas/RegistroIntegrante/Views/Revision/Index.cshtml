@model COES.MVC.Intranet.Areas.RegistroIntegrante.Models.RevisionModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    SelectList slEstado = new SelectList(Model.Estado, "Codigo", "Nombre");
    SelectList slTipo = new SelectList(Model.ListaTipoEmpresa, "Tipoemprcodi", "Tipoemprdesc");
}
<script src="~/Content/Scripts/messaje-operation.js"></script>
<script src="~/Areas/RegistroIntegrante/Content/Scripts/Revision.js?v=1.11"></script>
<link href="~/Areas/RegistroIntegrante/Content/Css/css.css" rel="stylesheet" />

<div class="form-title">
    <div class="content-titulo">Gestión de Revisiones</div>
    <div class="content-botonera" style="display:none">
        <input type="button" id="btnExportar" value="Exportar" />
    </div>
</div>
<div class="content-hijo" id="mainLayout">
    <div class="search-content" style="margin-bottom:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td><label>Estado: </label></td>
                <td>
                    @Html.DropDownList("cbEstado", slEstado, "TODOS", new { @class = "Tipo", @style = "width:280px" })
                </td>
                <td><label>Tipo: </label></td>
                <td>
                    @Html.DropDownList("cbTipo", slTipo, "TODOS", new { @class = "Tipo", @style = "width:280px" })
                </td>    
                <td>Razón Social:</td>
                <td>
                    <input type="text" id="txtNombreFiltro" />
                </td>
                <td >
                    <input type="button" id="btnConsultar" value='Consultar' />
                </td>
            </tr>
        </table>
        </div>
        <div style="clear:both"></div>
        <div class="content-tabla">
            <div class="tabla-header">
                <div class="table-paginado" id="paginado"></div>
            </div>
            <div class="table-list" id="listado"></div>
            <div style="clear:both; margin-bottom:40px"></div>
        </div>
    </div>

<div id="MessagesClose">
    <div class="popup-title"><span>Confirmar acción</span></div>
    <div class="popup-text content-messajes-text">

    </div>
    <div class="formulario-boton">
        <input id="btnAceptarMessages" type="button" value="Aceptar" />
        <input id="btnCancelarMessages" type="button" value="Cancelar" style="display:none;" />
    </div>
</div>


<div id="popupFlujo" class="general-popup" style="min-width:700px">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-text" id="contenidoFlujo">
    </div>
</div>