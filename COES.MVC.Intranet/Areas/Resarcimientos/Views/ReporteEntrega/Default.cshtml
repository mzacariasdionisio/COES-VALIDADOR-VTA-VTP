@model COES.MVC.Intranet.Areas.Resarcimientos.Models.RegistrosModel
@{
    ViewBag.Title = ".::Intranet COES::.";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="~/Areas/Resarcimientos/Content/Scripts/ntcse-puntoentrega-paginado.js"></script>
<script src="~/Areas/Resarcimientos/Content/Scripts/ntcse-reporte-entrega.js?v=1"></script>

<script src="~/Areas/Resarcimientos/Content/Scripts/messaje-operation.js"></script>
<link href="~/Areas/Resarcimientos/Content/Css/css.css" rel="stylesheet" />

<div class="form-title">
    <div class="content-titulo">Reporte: Punto de Entrega</div>
    <div class="content-botonera" style="margin-left:auto">
        <input type="button" id="btnExportarReporte" value="Exportar" data-registro="@Model.Key" />
        <input type="button" id="btnConsultar" value="Consultar" />
    </div>
</div>

<div class="content-hijo">
    <div class="tools-content" style="margin-bottom:15px">
        <div class="button-content">
            <span class="field-label" style="width:130px;">Empresa Generadora</span>
            <div class="field-control">
                @Html.DropDownList("RCboEmpresasGeneradoras", ViewData["RCboEmpresasGeneradoras"] as List<SelectListItem>, new { @style = "width:200px;" })
            </div>
            <span class="field-label" style="width:50px;margin-left:10px">Per&iacute;odo</span>
            <div class="field-control">
                @Html.DropDownList("CboPeriodo", ViewData["CboPeriodo"] as List<SelectListItem>, new { @style = "width:100px;margin-right:15px" })
            </div>

            <span class="field-label" style="width:50px">Cliente</span>
            <div class="field-control">
                @Html.DropDownList("CboCliente", ViewData["CboCliente"] as List<SelectListItem>, new { @style = "width:200px;" })
            </div>

            <span class="field-label" style="width:120px; margin-left:10px">Punto de Entrega</span>
            <div class="field-control">
                @Html.DropDownList("CboPuntoEntrega", ViewData["CboPuntoEntrega"] as List<SelectListItem>, new { @style = "width:180px;" })
            </div>
            <div style="clear:both;"></div>
        </div>
        <div style="clear:both"></div>
        <div id="resultado"></div>
    </div>
    <div class="content-tabla">
        <div class="tabla-header">
            <div class="table-paginado" id="paginado"></div>
        </div>
        <div style="clear:both; height:5px"></div>
        <div class="table-list" id="listado"></div>
    </div>
    <div id="divBandeja" class="search-result">
        @* @Html.Partial("DefaultEntrega", Model.ListaPuntosEntrega)*@
    </div>
    <div class="clear"></div>
</div>


<div id="MessagesClose">
    <div class="popup-title"><span>Mensaje de Operación</span></div>
    <div class="popup-text content-messajes-text">
        ¿Está seguro de cerrar sesión?
    </div>
    <div class="formulario-boton">
        <input id="btnAceptarMessages" type="button" value="Aceptar" />
    </div>
</div>
<div id="ele-popup" style="min-width:400px">
    <span class="button b-close"><span>X</span></span>
    <div id="ele-popup-content">
        <h1>Alertas</h1>
        <table border="0" class="pretty">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Origen</th>
                    <th>Destino</th>
                    <th>Mensaje</th>
                    <th>Estado</th>
                    <th>Archivo</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
