@model COES.MVC.Intranet.Areas.ReservaFriaNodoEnergetico.Models.BusquedaSiParametroValorModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Areas/ReservaFriaNodoEnergetico/Content/Scripts/parametrovalor.js"></script>
<script src="~/Content/Scripts/inputmaskmin.js"></script>

<div class="form-title">
    <div class="form-title">
        <div class="content-titulo">Valor de Par&aacute;metro </div>
        <div class="content-botonera">
            @{
                if (Model.AccionNuevo)
                {
                    <input type="button" id="btnNuevo" value="Nuevo"/>
                }
            }
        </div>
    </div>
</div>

        <div class="content-hijo" id="mainLayout">
            <div class="search-content" style="margin-bottom:10px">
                <table class="content-tabla-search" style="width:auto">
                    <tr>
                        <td>
                            <table>
                                <tr>
                                    <td>Par&aacute;metro:</td>
                                    <td>
                                        <select id="cbSiparAbrev" name="SiparAbrev" style="width:300px">
                                            <option value="0">TODOS</option>
                                            @foreach (var item in Model.ListaSiParametro)
                                            {
                                                <option value="@item.Siparcodi">@item.Siparabrev</option>
                                            }
                                        </select>

                                    </td>
                                </tr>
                            </table>

                        </td>
                        <td rowspan="2">

                            <table >
                                <tr>
                                    <td>
                                        <fieldset>
                                            <legend>Estado</legend>
                                            <input id="rbValorVigente" name="rbValor" type="radio" value="radiobutton" />Vigente
                                            <input id="rbValorEliminado" name="rbValor" type="radio" value="radiobutton" />Eliminado
                                            <input id="rbValorTodos" name="rbValor" type="radio" value="radiobutton" />Todos
                                        </fieldset>
                                    </td>
                                </tr>
                            </table>
                        </td>
                        <td rowspan="2">
                            <br>
                            <table >
                                <tr>
                                    <td>
                                        <input type="button" id="btnBuscar" value="Buscar" style="margin-left:0" />
                                    </td>
                                </tr>
                            </table>

                        </td>
                    </tr>
                    <tr>
                        <td>
                            <table >
                                <tr>
                                    <td>Desde:</td>
                                    <td>
                                        <input type="text" id="txtFechaDesde" name="FechaInicio" value="@Model.FechaIni" style="width:120px" />
                                    </td>
                                    <td>Hasta:</td>
                                    <td>
                                        <input type="text" id="txtFechaHasta" name="FechaFin" value="@Model.FechaFin" style="width:120px" />
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </div>

            <div class="content-tabla">
                <div class="tabla-header">
                    <div class="table-paginado" id="paginado"></div>
                </div>
                <div class="table-list" id="listado"></div>
            </div>
        </div>

<div id="popupEdicion" class="general-popup">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Valor de Par&aacute;metro </span></div>
    <div class="popup-text" id="contenidoEdicion">
    </div>
</div>


