@model COES.MVC.Intranet.Areas.ReservaFriaNodoEnergetico.Models.BusquedaNrPeriodoModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="~/Areas/ReservaFriaNodoEnergetico/Content/Scripts/periodo.js"></script>
<script src="~/Content/Scripts/inputmaskmin.js"></script>

<div class="form-title">
    <div class="form-title">
        <div class="content-titulo">Periodo</div>
        <div class="content-botonera">
            @{
                if (Model.AccionNuevo)
                {
                    <input type="button" id="btnNuevo" value="Nuevo"/>
                }
            }
        </div>
    </div>
</div>

        <div class="content-hijo" id="mainLayout">
            <div class="search-content" style="margin-bottom:10px">
                <table class="content-tabla-search" style="width:auto">
                    <tr>
                        <td>
                            <fieldset>
                                <legend>Periodo</legend>
                                Desde:
                                <input type="text" id="txtFechaDesde" name="FechaInicio" value="@Model.FechaIni" style="width:120px" />
                                Hasta:
                                <input type="text" id="txtFechaHasta" name="FechaFin" value="@Model.FechaFin" style="width:120px" />
                            </fieldset>
                        </td>
                        <td>
                            <fieldset>
                                <legend>Estado</legend>
                                <input id="rbPeriodoVigente" name="rbPeriodo" type="radio" value="radiobutton" />Vigente
                                <input id="rbPeriodoEliminado" name="rbPeriodo" type="radio" value="radiobutton" />Eliminado
                                <input id="rbPeriodoTodos" name="rbPeriodo" type="radio" value="radiobutton" />Todos
                            </fieldset>
                        </td>
                        <td>
                            <br><input type="button" id="btnBuscar" value="Buscar" style="margin-left:0" />
                        </td>
                    </tr>

                </table>
            </div>

            <div class="content-tabla">
                <div class="tabla-header">
                    <div class="table-paginado" id="paginado"></div>
                </div>
                <div class="table-list" id="listado"></div>
            </div>
        </div>

<div id="popupEdicion" class="general-popup">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Periodo</span></div>
    <div class="popup-text" id="contenidoEdicion">
    </div>
</div>
