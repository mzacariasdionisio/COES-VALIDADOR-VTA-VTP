@model COES.MVC.Intranet.Areas.RolTurnos.Models.RolTurnoModel
@{
    ViewBag.Title = "Rol de Turnos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Content/Scripts/jquery.chosen.js"></script>
<script src="~/Content/Scripts/handsontable.full.min.js"></script>
<link href="~/Content/Css/handsontable.full.min.css" rel="stylesheet" />
<script src="~/Content/Scripts/plupload.full.min.js"></script>
<script src="~/Areas/RolTurnos/Content/Scripts/selectoractividad.js"></script>
<link href="~/Areas/RolTurnos/Content/Css/css.css?v=1" rel="stylesheet" />
<script src="~/Areas/RolTurnos/Content/Scripts/rolturno.js?v=1"></script>
<script src="~/Areas/RolTurnos/Content/Scripts/grillarolturno.js?v=1"></script>


<div class="form-title">
    <div class="content-titulo"> Rol de Turnos - SPR</div>
    <div class="content-botonera">
        <input type="button" id="btnConfigurar" value='Configuración' />
        <input type="button" id="btnReporte" value='Reportes' />
    </div>
</div>

<div class="content-hijo" id="mainLayout">
    <div id="mensaje"></div>
    <div class="action-header">
        <div class="action-content">
            <table id="tablaBusqueda">
                <tr>
                    <td>Mes - Año:</td>
                    <td>
                        <input type="text" id="txtMesAnio" value="@Model.Fecha" />
                    </td>
                    <td>
                        <input type="button" id="btnConsultar" value="Consultar" />
                    </td>
                </tr>
            </table>
        </div>
        <div id="divAcciones" class="action-content">
            <a href="#" id="btnGrabar">
                <div>
                    <img src="~/Content/Images/Save.png" />
                </div>
                <span>Grabar</span>
            </a>
            <a href="#" id="btnImportar">
                <div>
                    <img src="~/Content/Images/subir.png" />
                </div>
                <span>Importar</span>
            </a>
            <a href="#" id="btnDescargar">
                <div>
                    <img src="~/Content/Images/ExportExcel.png" />
                </div>
                <span>Exportar</span>
            </a>
        </div>
        <div class="action-content" id="divLeyenda">
            <div class="leyenda">Leyenda:</div>
            <div class="leyenda-item">
                <div class='rojo'></div>
                <div>Trabajo remoto</div>
            </div>
            <div class="leyenda-item">
                <div class='negro'></div>
                <div>Trabajo presencial</div>
            </div>
        </div>

        <div class="action-content" id="divLeyenda">
            <div class="leyenda">Datos de auditoría:</div>
            <div class="auditoria-item">

                <span>Usuario:</span> <strong id="strUsuario"></strong>
                <span> - Fecha: </span><strong id="strFecha"></strong>
            </div>
            <div class="auditoria-item">
                <span id="txtConfiguracion"></span>

            </div>
        </div>
    </div>

    <div id="listado">

    </div>

    <div class="leyenda-actividad">
        <div class="leyenda-actividad-titulo">
            Leyenda de actividades
        </div>
        <div class="leyenda-actividad-list">
            <table class="pretty tabla-icono" id="tablaActividad">
                <thead>
                    <tr>
                        <th>Abreviatura</th>
                        <th>Descripción</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>

</div>

<div id="validaciones" class="general-popup" style="z-index:9999999999;">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Errores</span></div>
    <div class="action-alert">Existen errores en los datos del archivo que desea importar</div>
    <div>
        <table class="pretty tabla-adicional" id="tableError">
            <thead>
                <tr>
                    <th>Responsable</th>
                    <th>Día</th>
                    <th>Valor</th>
                    <th>Tipo de error</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<div id="reporte" class="general-popup" style="z-index:9999999999;">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Reporte de Rol de Turnos</span></div>
    <div class="popup-contenido" id="contenidoReporte">

    </div>
</div>