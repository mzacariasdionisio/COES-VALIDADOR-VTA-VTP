@model COES.MVC.Intranet.Areas.SeguimientoRecomendacion.Models.BusquedaSrmComentarioModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Areas/SeguimientoRecomendacion/Content/Scripts/comentario.js"></script>
<link href="~/Areas/SeguimientoRecomendacion/Content/Css/css.css" rel="stylesheet" />
<script src="~/Content/Scripts/inputmaskmin.js"></script>

<div class="form-title">
    <div class="form-title">
        <div class="content-titulo">Comentario</div>
        <div class="content-botonera">
            @if (Model.AccionNuevo)
            {
                <input type="button" id="btnNuevo" value="Nuevo" />
            }
            
        </div>
    </div>
</div>

        <div class="content-hijo" id="mainLayout">
            <div class="search-content" style="margin-bottom:10px">
                <table class="content-tabla-search" style="width:auto">
                    <tr>
                        <td>Cod. recomendaci√≥n:</td>
                        <td>
                            <select id="cbSrmrecfecharecomend" name="Srmrecfecharecomend" style="width:300px">
                                <option value="0">TODOS</option>
                                @foreach (var item in Model.ListaSrmRecomendacion)
                                {
                                    <option value="@item.Srmreccodi">@item.Srmrecfecharecomend</option>
                                }
                            </select>
                        </td>
                        <td>Usuario:</td>
                        <td>
                            <select id="cbUsername" name="Username" style="width:300px">
                                <option value="0">TODOS</option>
                                @foreach (var item in Model.ListaFwUser)
                                {
                                    <option value="@item.USERCODE">@item.USERNAME</option>
                                }
                            </select>
                        </td>
                        <td>Empresa:</td>
                        <td>
                            <select id="cbEmprNomb" name="EmprNomb" style="width:300px">
                                <option value="0">TODOS</option>
                                @foreach (var item in Model.ListaSiEmpresa)
                                {
                                    <option value="@item.Emprcodi">@item.Emprnomb</option>
                                }
                            </select>
                        </td>
                        <td>Desde:</td>
                        <td><input type="text" id="txtFechaDesde" name="FechaInicio" value="@Model.FechaIni" style="width:120px" /></td>
                        <td>Hasta:</td>
                        <td><input type="text" id="txtFechaHasta" name="FechaFin" value="@Model.FechaFin" style="width:120px" /></td>
                        <td>
                            <input type="button" id="btnBuscar" value="Buscar" style="margin-left:0" />
                        </td>
                    </tr>
                </table>
            </div>
            <div class="content-tabla">
                <div class="tabla-header">
                    <div class="table-paginado" id="paginado"></div>
                </div>
                <div class="table-list" id="listado"></div>
            </div>
        </div>

<div id="popupEdicion" class="general-popup">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Comentario</span></div>
    <div class="popup-text" id="contenidoEdicion">
    </div>
</div>
