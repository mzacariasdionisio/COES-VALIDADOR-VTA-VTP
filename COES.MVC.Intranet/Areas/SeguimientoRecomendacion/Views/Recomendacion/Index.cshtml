@model COES.MVC.Intranet.Areas.SeguimientoRecomendacion.Models.BusquedaSrmRecomendacionModel
<script src="~/Content/Scripts/plupload.full.min.js" type="text/javascript"></script>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <script src="~/Content/Scripts/jquery.easytabs.min.js"></script>

    <link href="~/Content/Css/tabs.css" rel="stylesheet" />
    <link href="~/Content/Css/form.css" rel="stylesheet" />
}

<script src="~/Areas/SeguimientoRecomendacion/Content/Scripts/recomendacion.js?v=3"></script>
<script src="~/Content/Scripts/inputmaskmin.js"></script>

<div class="form-title">
    <div class="form-title">
        <div class="content-titulo">Recomendación y Comentario</div>
        <div class="content-botonera">
            <input type="button" id="btnCancelarPag" value="Regresar" />
        </div>
    </div>
    <input type="hidden" id="hfEvencodi" name="@Model.Evencodi" />
</div>

<div class="content-hijo" id="mainLayout" style="line-height:16px;">
    <div class="content-registro" style="margin-bottom:20px">
        <table style="width:100%">
            <tr>
                <td class="registro-label" style="width:200px">Tipo:</td>
                <td class="registro-control">
                    @Model.Tipo
                </td>
            </tr>
            <tr>
                <td class="registro-label">Empresa:</td>
                <td class="registro-control">
                    @Model.Emprnomb
                </td>
            </tr>
            <tr>
                <td class="registro-label">Inicio:</td>
                <td class="registro-control">
                    @Model.FechaIni
                </td>
            </tr>
            <tr>
                <td class="registro-label">Fin:</td>
                <td class="registro-control">
                    @Model.FechaFin
                </td>
            </tr>
            <tr>
                <td class="registro-label">Equipo involucrado:</td>
                <td class="registro-control">
                    @Model.Equiabrev
                </td>
            </tr>
            <tr>
                <td class="registro-label">Descripci&oacute;n (Resumen):</td>
                <td class="registro-control">
                    @Model.Evenasunto
                </td>
            </tr>
        </table>
    </div>

    <div class="content-tabla">
    </div>

    <div id="tab-container" class='tab-container'>
        <ul class='etabs'>
            <li class='tab' id="tab1"><a href="#Recomendacion">Recomendaci&oacute;n</a></li>
            <li class='tab' id="tab2"><a href="#Comentario">Comentario</a></li>

        </ul>
        <div class='panel-container'>
            <div id="Recomendacion">
                <table>
                    <tr>
                        <td>
                            Estado:
                            <input id="rbRecActivo" name="rbRecomendacion" type="radio" value="radiobutton" onchange="buscar();" />Activo
                            <input id="rbRecInactivo" name="rbRecomendacion" type="radio" value="radiobutton" onchange="buscar();" />Eliminado
                            &nbsp;
                            &nbsp;
                            &nbsp;
                            &nbsp;
                            &nbsp;
                            &nbsp;
                            @if (Model.AccionNuevo)
                            {
                                <input id="btnRecNuevo" type="button" value="Agregar Recomendaci&oacute;n" />
                            }
                        </td>
                    </tr>
                </table>
                <div class="tabla-header">
                    <div class="table-paginado" id="RecPaginado"></div>
                </div>
                <div id="RecomendDetalle">
                </div>
            </div>

            <div id="Comentario">
                <div class="content-registro">
                    <table style="width:auto">

                        <tr>
                            <td id="lblEmpresa" style="width:130px" class="registro-label">Empresa</td>
                            <td class="registro-control">
                                <input id="txtEmpresaEquipo" type="text" value="" readonly="readonly" />
                            </td>
                        </tr>
                        <tr>
                            <td id="lblSubestacion " class="registro-label">Subestaci&oacute;n</td>
                            <td class="registro-control">
                                <input id="txtSubestacionEquipo" type="text" value="" readonly="readonly" />
                            </td>
                        </tr>
                        <tr>
                            <td id="lblEquipo " class="registro-label">Equipo</td>
                            <td class="registro-control">
                                <input id="txtEquipo" type="text" value="" readonly="readonly" />
                                <input type="hidden" id="hfSrmreccodiEquipo" value="" />
                            </td>
                        </tr>
                        <tr>
                            <td class="registro-label">Estado:</td>
                            <td class="registro-control"> 
                                <input id="rbComActivo" name="rbComentario" type="radio" value="radiobutton" onchange="buscarCom();" />Activo
                                <input id="rbComInactivo" name="rbComentario" type="radio" value="radiobutton" onchange="buscarCom();" />Eliminado

                                @if (Model.AccionNuevo)
                                {
                                    <input id="btnComNuevo" type="button" value="Agregar Comentario" />
                                }
                            </td>

                        </tr>
                    </table>
                </div>
                <div class="tabla-header">
                    <div class="table-paginado" id="ComPaginado"></div>
                </div>
                <div id="ComentDetalle">
                </div>
            </div>
        </div>
    </div>
</div>

<div id="popupEdicion" class="general-popup">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Recomendaci&oacute;n</span></div>
    <div class="popup-text" id="contenidoEdicion">
    </div>
</div>

<div id="popupEdicionCom" class="general-popup">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Comentario</span></div>
    <div class="popup-text" id="contenidoEdicionCom">
    </div>
</div>