@model COES.MVC.Intranet.Areas.ServicioRPF.Models.EquivalenciaModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Areas/ServicioRPF/Content/Scripts/equivalencia.js"></script>
<link href="~/Content/Css/form.css" rel="stylesheet" />

<div class="form-title">
    <div class="content-titulo">Equivalencia de puntos de medición</div>
    <div class="content-botonera">
        <input type="button" id="btnRegresar" value="Regresar" />
    </div>
</div>

<div class="content-hijo">
    <div id="mensaje"></div>
    <div class="search-content" style="margin-bottom:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Empresa:</td>
                <td>
                    <select id="cbEmpresa" style="width:220px">
                        <option value="">-TODOS-</option>
                        @foreach (var item in Model.ListaEmpresas)
                        {
                        <option value="@item.Emprcodi">@item.Emprnomb</option>
                        }
                    </select>
                </td>
                <td>Central:</td>
                <td>
                    <select id="cbCentral" style="width:220px">
                        <option value="">-TODOS-</option>
                        @foreach (var item in Model.ListCentrales)
                        {
                        <option value="@item.Equicodi">@item.Equinomb</option>
                        }
                    </select>
                </td>
                <td>
                    <input type="button" id="btnNuevo" value="Nueva Relación" />
                </td>
            </tr>
        </table>
    </div>

    <div id="listado">
    </div>
    <br />
    <br />
</div>

<div id="popupEdicion" class="general-popup" style="width:800px">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Equivalencia de códigos</span></div>
    <div class="popup-text" id="contenidoEdicion" style="margin-top:0">
    </div>
</div>