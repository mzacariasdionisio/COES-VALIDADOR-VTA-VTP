@model COES.MVC.Intranet.Areas.ServicioRPF.Models.EnvioAGCModel

<script type="text/javascript">

    $(function () {
        $('#cbSelectAll').click(function (e) {
            var table = $(e.target).closest('table');
            $('td input:checkbox', table).prop('checked', this.checked);
        });
    });
</script>

<table border="0" class="pretty tabla-adicional" cellspacing="0" width="100%" id="tabla">
    <thead>
        <tr>
            <th><input type="checkbox" id="cbSelectAll" /></th>
            <th>Empresa</th>
            <th>Central</th>
            <th>URS</th>           
            <th>Estado</th>
            <th>Usuario</th>
            <th>Fecha</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListaReporte)
        {
        <tr>
            <td>
            @if (item.Estadoenvio != "No envió")
            {
            <input type="checkbox" id="cbSelect" name="cbSelect" value="@item.Codigo" />
            }
            </td>
            <td>@item.Emprnomb</td>
            <td>@item.Centralnomb</td>
            <td>@item.Equinomb</td>
            <td>@item.Estadoenvio</td>
            <td>@item.Usuarioenvio</td>
            <td>@item.Fechaenvio</td>
        </tr>
        }
    </tbody>
</table>

