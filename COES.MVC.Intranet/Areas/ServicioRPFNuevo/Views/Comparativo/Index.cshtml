@model COES.MVC.Intranet.Areas.ServicioRPFNuevo.Models.ComparativoModel
@{
    ViewBag.Title = "Comparativo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Areas/ServicioRPFNuevo/Content/Scripts/comparativo.js?v=1.1"></script>
<script src="~/Content/Scripts/highcharts.js"></script>
<script src="~/Content/Scripts/jquery.format.js"></script>

<div class="form-title">
    <div class="content-titulo">Comparativo Servicio RPF - Despacho ejecutado</div>
    <div class="content-botonera">
        <input type="button" id="btnExportar" value='Exportar' />
        <input type="button" id="btnExportarRPF" value='Exportar RPF Medio Horario' />
        <input type="button" id="btnConfiguracion" value='Configuración' />
    </div>
</div>

<div class="content-hijo">

    <div id="mensaje"></div>

    <div class="search-content" style="margin-bottom:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Fecha:</td>
                <td>
                    <input type="text" id="txtFecha" value="@Model.Fecha" />
                </td>
                <td>Empresa:</td>
                <td>
                    <select id="cbEmpresa" style="width:220px">
                        <option value="">-TODOS-</option>
                        @foreach (var item in Model.ListaEmpresas)
                        {
                            <option value="@item.Emprcodi">@item.Emprnomb</option>
                        }
                    </select>
                </td>
                <td>Central:</td>
                <td>
                    <select id="cbCentral" style="width:220px">
                        <option value="">-TODOS-</option>
                        @foreach (var item in Model.ListaCentrales)
                        {
                            <option value="@item.Equicodi">@item.Equinomb</option>
                        }
                    </select>
                </td>
                <td>
                    <input type="button" id="btnConsultar" value="Consultar" />
                </td>
            </tr>
        </table>
    </div>

    <div id="listado">

        <table>
            <tr>
                <td valign="top">
                    <div id="contentTabla"></div>
                </td>
                <td style="width:30px"></td>
                <td valign="top">
                    <div id="contentGrafico" style="width: 750px; height: 500px; background-color: #F2F5F7; border: 1px solid #DDDDDD; padding:15px; border-radius:5px"></div>
                </td>
            </tr>
        </table>

    </div>

    <br />
    <br />
</div>

<div id="popupEdicion" class="general-popup" style="width:600px">
    <div><span class="button b-close"><span>X</span></span></div>

    <div class="popup-text" id="contenidoEdicion" style="margin-top:0">

    </div>
</div>

<input type="hidden" id="hfIndicadorPublico" value="N" />
