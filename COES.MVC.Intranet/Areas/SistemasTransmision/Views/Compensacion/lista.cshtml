@model COES.MVC.Intranet.Areas.SistemasTransmision.Models.CompensacionModel

<table border="0" class="pretty tabla-icono" id="tabla">
    <thead>
        <tr>
            <th style="text-align:left; width:30px;">Codigo Elemento</th>
            <th style="text-align:left; width:400px;">Nombre Elemento</th>
            <th style="text-align:left; width:80px;">Importe S/</th>
            <th style="text-align:left">Barra 1</th>
            <th style="text-align:left">Barra 2</th>
            <th style="width:30px;">&nbsp;</th>
            <th style="width:30px;">&nbsp;</th>
            <th style="width:30px;">&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListaCompensacion)
        {
            <tr id="fila_@item.Stcompcodi">
                <td style="text-align:left">@item.Stcompcodelemento</td>
                <td style="text-align:left">@item.Stcompnomelemento</td>
                <td style="text-align:right">@item.Stcompimpcompensacion</td>
                <td style="text-align:left">@item.Barrnombre1</td>
                <td style="text-align:left">@item.Barrnombre2</td>
                <td style="width:30px;"><a href="#" id="view_@item.Stcompcodi" class="view"><img src="@Url.Content("~/Content/Images/btn-open.png")" title="Ver informacion del registro" alt="Ver informacion del registro" /></a></td>
                <td style="width:30px;">
                    @if (Model.bEditar)
                    {
                        <a href="@Url.Action("Edit", new { id = item.Stcompcodi })"><img src="@Url.Content("~/Content/Images/btn-edit.png")" title="Editar el registro" alt="Editar el registro" /></a>
                    }
                </td>
                <td style="width:30px;">
                    @if (Model.bEliminar)
                    {
                        <a href="#" id="eliminar_@item.Stcompcodi" class="delete"><img src="~/Content/Images/btn-cancel.png" title="Eliminar el registro" alt="Eliminar el registro" /></a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<div id="popup">    </div>