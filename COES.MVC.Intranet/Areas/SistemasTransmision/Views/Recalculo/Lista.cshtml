@model COES.MVC.Intranet.Areas.SistemasTransmision.Models.RecalculoModel

<table border="0" class="pretty tabla-icono" id="tabla">
    <thead>
        <tr>
            <th hidden>Id</th>
            <th>Nombre de Revisión</th>
            <th>Informe</th>
            <th>Factor de Ajuste</th>
            <th>Comentarios</th>
            <th style="width:30px;">&nbsp;</th>
            <th style="width:30px;">&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @{
           int i = 0; 
        }
        @foreach (var item in Model.ListaRecalculo)
        {
            i++;    
            <tr id="fila_@item.Strecacodi">
                <td hidden>@item.Strecacodi</td>
                <td class="text_left" style="text-align:left">@item.Strecanombre</td>
                <td class="text_left" style="text-align:left">@item.Strecainforme</td>
                <td class="text_left" style="text-align:right">@item.Strecafacajuste</td>
                <td class="text_left" style="text-align:left">@item.Strecacomentario</td>
                <td style="width:30px;">
                    @if (Model.bEditar)
                    {
                        <a href="@Url.Action("Edit", new { id = item.Strecacodi })"><img src="@Url.Content("~/Content/Images/btn-edit.png")" title="Editar el registro" alt="Editar el registro" /></a>
                    }
                </td>
                <td style="width:30px;">
                    @if (Model.bEliminar && item.Strecacodi > 1 && Model.ListaRecalculo.Count == i)
                    {
                        <a href="#" id="eliminar_@item.Strecacodi" class="delete"><img src="~/Content/Images/btn-cancel.png" title="Eliminar el registro" alt="Eliminar el registro" /></a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<div id="popup">    </div>