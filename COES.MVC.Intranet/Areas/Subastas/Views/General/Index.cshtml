@model COES.MVC.Intranet.Areas.Subastas.Models.ProcesoModel
@{
    ViewBag.Title = "Subastas";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string opcionStyle = Model.TienePermiso ? "" : "display: none";
}

<link href="~/Areas/Subastas/Content/Css/general.css?v=1.3" rel="stylesheet" />
<script src="~/Areas/Subastas/Content/Scripts/general.js?v=1.5.3"></script>

<div class="form-title">
    <div class="content-titulo">Subastas RSF</div>
    <div class="content-botonera" style="display: flex; align-items: center; height: auto; gap: 10px;">
        <a href="#" id="btnManualUsuario" style="text-decoration: none;">
            <div style="text-align: center; line-height: 15px; font-size: 12px;">
                <img src="~/Content/Images/prn-ico-manual.png" style="height: 25px;"><br>
                <span style="color: #278CCC;">Manual de Usuario</span>
            </div>
        </a>
    </div>
</div>

<div class="content-hijo" id="mainLayout">

    <div class="menu_reporte" style="float: left; padding-right: 15px;">

        <table border="0" cellpadding="5" cellspacing="2" style="width:100%; overflow:auto;">

            <tbody>
                <tr class="THCabecera">
                    <td colspan="25">
                        <div class="editor-label"><b>Reportes</b></div>
                    </td>
                </tr>

                <tr>
                    <td style="height: 90px;">
                        <div id="opcionReporteSubDiaria" class="menu-item suboptions" data-url="/Subastas/Oferta/Diaria/" data-alto="900" title="" style="width: 70px;">
                            <img src="~/Areas/PronosticoDemanda/Content/Images/prn-ico-excel.png" />
                            <br />
                            <label>
                                Oferta Diaria
                            </label>
                        </div>
                    </td>
                    <td>
                        <div class="menu-item suboptions" data-url="/Subastas/Oferta/Defecto/" data-alto="900" title="" style="width: 70px;">
                            <img src="~/Areas/PronosticoDemanda/Content/Images/prn-ico-excel.png" />
                            <br />
                            <label>
                                Oferta Defecto
                            </label>
                        </div>
                    </td>
                    <td>
                        <div class="menu-item suboptions" data-url="/Subastas/Oferta/OfertasDefectoActivadas" data-alto="750" title="" style="width: 70px;">
                            <img src="~/Areas/PronosticoDemanda/Content/Images/prn-ico-excel.png" />
