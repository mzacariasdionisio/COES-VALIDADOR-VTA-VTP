@model COES.MVC.Intranet.Areas.TiempoReal.Models.BusquedaAgcControlModel
@using System.Globalization

<div style="clear:both; height:15px"></div>
<div id="reporte" style="text-align: center" class="content-registro">
    <table id="tabla" border="0" class="pretty tabla-adicional" cellspacing="0">
        <thead>
            <tr>                
                <th>Elegir</th>
                <th>Fecha</th>                
                <th>Tipo</th>
                <th>Nombre</th>
                <th>Detalle</th>
                <th>Usuario</th>
                <th>Modificaci&oacute;n</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ListaCostoVariable)
            {  
                
                <tr>
                    <td><input type="checkbox" id="rbRepCodi" name="rbRepTipo" value="@item.Repcodi" /></td>
                    
                    <td>@item.Repfecha.ToString(COES.MVC.Intranet.Helper.Constantes.FormatoFecha)</td>                        
                    
                    <td>
                        @{
                            var reptipo = "";
                            if (item.Reptipo == "D")
                            {
                                reptipo = "Diario";

                            }
                            else
                            {
                                reptipo = "Semanal";
                            }
                        }
                        @reptipo
                    </td>

                    <td>@item.Repnomb</td>    
                    <td>@item.Repdetalle</td>  
                    <td>@item.Lastuser</td>  
                    

                    <td>
                        @{
                var lastdate = "";
                if (item.Lastdate != null)
                            {
                                lastdate = ((DateTime)item.Lastdate).ToString(COES.MVC.Intranet.Helper.Constantes.FormatoFechaFull);
                            }
                        }
                        @lastdate
                    </td>


                </tr>
            }
        </tbody>
    </table>
</div>
