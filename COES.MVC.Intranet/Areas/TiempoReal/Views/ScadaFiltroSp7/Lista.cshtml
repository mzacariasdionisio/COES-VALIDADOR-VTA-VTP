@model COES.MVC.Intranet.Areas.TiempoReal.Models.BusquedaMeScadaFiltroSp7Model
@using System.Globalization

<div style="clear:both; height:15px"></div>
<div id="reporte" style="text-align: center" class="content-registro">
    <table id="tabla" border="0" class="pretty tabla-adicional" cellspacing="0">
        <thead>
            <tr>
                <th style="width:40px; min-width:40px">Acciones</th>
                <th>&nbsp;</th>
                <th>Filtro</th>
                <th>Creador</th>
                <th>Fecha de creaci&oacute;n</th>
                <th>Modificador</th>
                <th>Fecha de modificaci&oacute;n</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ListaMeScadaFiltroSp7)
            {
                <tr>
                    <td style="width:60px; min-width:60px">
                        <a href="JavaScript:editar(@item.Filtrocodi,0)" title="Ver...">
                            <img src="~/Content/Images/btn-open.png" />
                        </a>

                        <a href="JavaScript:editar(@item.Filtrocodi,1)" title="Editar...">
                            <img src="~/Content/Images/btn-edit.png" />
                        </a>

                        <a href="JavaScript:eliminar(@item.Filtrocodi)" title="Eliminar...">
                            <img src="~/Content/Images/btn-cancel.png" />
                        </a>

                    </td>
                    <td>&nbsp;</td>
                    <td>@item.Filtronomb</td>
                    <td>@item.Filtrouser</td>
                    <td>
                        @{
                var fechaScdFiFecCreacion = "";
                if (item.Scdfifeccreacion != null)
                {
                    fechaScdFiFecCreacion = ((DateTime)item.Scdfifeccreacion).ToString(COES.MVC.Intranet.Helper.Constantes.FormatoFechaFull);
                }
                        }
                        @fechaScdFiFecCreacion
                    </td>
                    <td>@item.Scdfiusumodificacion</td>
                    <td>
                        @{
                var fechaScdFiFecModificacion = "";
                if (item.Scdfifecmodificacion != null)
                {
                    fechaScdFiFecModificacion = ((DateTime)item.Scdfifecmodificacion).ToString(COES.MVC.Intranet.Helper.Constantes.FormatoFechaFull);
                }
                        }
                        @fechaScdFiFecModificacion
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
