<table border="0" class="pretty tabla-icono" id="tabla">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Tipo</th>
            <th>Titular</th>
            <th>Pago</th>
            <th>Transmisión</th>
            <th>Reparto de recaudación de peaje</th>
            <th>Código</th>
            <th style="width:5px;">ID</th>
            <th style="width:30px;">&nbsp;</th>
            <th style="width:30px;">&nbsp;</th>
            <th style="width:30px;">&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListaPeajeIngreso)
        {
            <tr id="fila_@item.Pingcodi">
                <td class="text_left">@item.Pingnombre</td>
                <td class="text_left">@item.Pingtipo</td>
                <td class="text_left">@item.Emprnomb</td>
                <td class="text_left">@item.Pingpago</td>
                <td class="text_left">@item.Pingtransmision</td>
                <td class="text_left">@item.Rrpenombre</td>
                <td class="text_left">@item.Pingcodigo</td>
                <td class="text_left" style="width:5px;">@item.Pingcodi</td>
                <td style="width:30px;"><a href="#" id="view_@item.Pingcodi" class="view"><img src="@Url.Content("~/Content/Images/btn-open.png")" title="Ver informacion del registro" alt="Ver informacion del registro" /></a></td>
                <td style="width:30px;">
                    @if (Model.bEditar)
                    {
                        <a href="@Url.Action("Edit", new { pericodi = item.Pericodi, recpotcodi = item.Recpotcodi, pingcodi = item.Pingcodi })"><img src="@Url.Content("~/Content/Images/btn-edit.png")" title="Editar el registro" alt="Editar el registro" /></a>
                    }
                </td>
                <td style="width:30px;">
                    @if (Model.bEliminar)
                    {
                        <a href="#" id="eliminar_@item.Pingcodi" class="delete"><img src="~/Content/Images/btn-cancel.png" title="Eliminar el registro" alt="Eliminar el registro" /></a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<div id="popup"></div>
