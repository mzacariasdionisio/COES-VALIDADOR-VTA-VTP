@model COES.MVC.Intranet.Areas.TransfPotencia.Models.RecalculoPotenciaModel
@Html.AntiForgeryToken()
@{
    ViewBag.Title = "Valorización de Transferencia de Potencia y Compensación - Lista de Recálculos";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var sMensajeExito = TempData["sMensajeExito"];
}
<script src="~/Areas/TransfPotencia/Content/Scripts/load.js"></script>
<script src="~/Areas/TransfPotencia/Content/Scripts/recalculopotencia.js"></script>
<link href="~/Areas/TransfPotencia/Content/Css/Transferencia.css" rel="stylesheet" />
<div class="ast">
    <div class="form-title">
        <div class="content-titulo" style="width:60%;">Lista de Recalculos de Valorización de Transferencias de Potencia y Compensación</div>
        <div class="content-botonera">
            @if (Model.bNuevo)
            {
                <input type="button" id="btnNuevo" value="Nuevo" onclick="location.href='@Url.Action("New","recalculopotencia")'" alt="Insertar un nuevo registro" title="Insertar un nuevo registro" />
            }
            <input type="button" value="Refrescar" onclick="location.href='@Url.Action("Index", "recalculopotencia")'" alt="Refrescar" title="Refrescar" />
        </div>
    </div>
    <div class="content-hijo" style="padding-top:8px">
        @if (@sMensajeExito != null)
        {<div class='action-message' id='mensaje' style="margin-bottom:5px; margin-top:0; ">@sMensajeExito</div>}
        <div class="listado" id="listado">       </div>
    </div>
</div>