<table border="0" class="pretty tabla-icono" id="tabla">
    <thead>
        <tr>
            <th>Reparto</th>                       
            <th style="width:30px;">&nbsp;</th>
            <th style="width:30px;">&nbsp;</th>          
            <th style="width:30px;">&nbsp;</th>   
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListaRepaRecaPeaje)
        {
            string sPK = item.Rrpecodi.ToString();
            <tr id="fila_@sPK">
                <td class="text_left">@item.Rrpenombre</td> 
                <td style="width:30px;"><a href="#" id="view_@sPK" class="view"><img src="@Url.Content("~/Content/Images/btn-open.png")" title="Ver informacion del registro" alt="Ver informacion del registro" /></a></td>
                <td style="width:30px;">
                    @if (Model.bEditar)
                    {
                        <a href="@Url.Action("Edit", new { pericodi = item.Pericodi, recpotcodi = item.Recpotcodi, rrpecodi = item.Rrpecodi})"><img src="@Url.Content("~/Content/Images/btn-edit.png")" title="Editar el registro" alt="Editar el registro" /></a>
                    }
                </td>
                <td style="width:30px;">
                    @if (Model.bEliminar)
                    {
                        <a href="#" id="eliminar_@sPK" class="delete"><img src="~/Content/Images/btn-cancel.png" title="Eliminar el registro" alt="Eliminar el registro" /></a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<div id="popup"></div>
