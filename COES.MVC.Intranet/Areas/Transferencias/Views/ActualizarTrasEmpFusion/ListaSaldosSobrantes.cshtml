
@model  COES.MVC.Intranet.Areas.Transferencias.Models.ActualizarTrasEmpFusionModel
    <form name="frmBrowse">
        <table border="0" class="pretty tabla-icono" id="tabla">
            <thead>
                <tr>
                    <th>ID Migración</th>
                    <th>Empresa Origen</th>
                    <th>Periodo Origen</th>
                    <th>Saldo Origen</th>
                    <th>Tipo Operacion</th>
                    <th>Fecha Migración</th>
                    <th style="background: #ff770d; border: 1px solid #ff770d;">Empresa Destino</th>
                    <th style="background: #ff770d; border: 1px solid #ff770d;">Saldo Actual</th>
                    <th>Seleccionar.</th>
                    <th>Estado</th>
                    <th>Saldo Final</th>
                    <th>Fecha Proceso</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int iCount = 0;
                }
                @foreach (var item in Model.ListaSaldosSobrantes)
                {
                    
                    var id = "cb" + item.SalsoCodi;
                <tr id="fila_@item.SalsoCodi">
                    <td>@item.SalsoCodi</td>
                    <td style="text-align:left;">@item.DescEmpresaOrigen</td>
                    <td>@item.DescPeriodoOrigen / @item.DescVersionOrigen</td>
                    <td>@item.SalsoSaldoOri.ToString("#,##0.00")</td>
                    <td>@item.DescTipoOpe</td>
                    <td>@(item.SalsoFecMigracion == null ? "" : item.SalsoFecMigracion.Value.ToString("dd/MM/yyyy"))</td>
                    <td style="text-align:left;">@item.DescEmpresaDestino</td>
                    <td>@item.SalsoSaldoDes.ToString("#,##0.00")</td>
                    <td style="width:30px;">
                        @if (item.SalsoEstado == "P")
                        {
                            iCount++;
                            <input name="chkItem" type="checkbox" value="@item.SalsoCodi">
                        }
                    </td>
                    <td>@item.DescEstado</td>
                    <td>@item.SalsoSaldoFinal.ToString("#,##0.00") </td>
                    <td>@(item.SalsoFecProceso == null ? "" : item.SalsoFecProceso.Value.ToString("dd/MM/yyyy"))</td>
                </tr>
                }
            </tbody>
        </table>
        <input type="hidden" id="Count" name="Count" value="@iCount">
    </form>
        <div id="popup2"></div>
