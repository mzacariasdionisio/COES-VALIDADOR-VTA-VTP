@model COES.MVC.Intranet.Areas.Transferencias.Models.ModeloModel
@{
    ViewBag.Title = "Modelo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Areas/Transferencias/Content/Css/Transferencia.css" rel="stylesheet" />
<!-- Referencia al archivo js de modelo.js -->
<script src="~/Areas/Transferencias/Content/Scripts/modelo.js"></script>
<!-- Formulario Principal -->
<div class="ast">
    <div class="form-title">
        <div class="content-titulo">Configuracion de formato de MODELO</div>
    </div>
    <div class="content-hijo">
        <table border="0">
            <tr>
                <td style="border-bottom: 6px solid #EDF5FC;">
                    <div style="width:auto; float:left; font-size:15px; color:#3D90CB; font-weight: bold;">Modelos de Reparto </div>
                </td>

                <td style="width:15px"></td>

                <td style="border-bottom: 6px solid #EDF5FC;">
                    <div style="width:auto; float:left; font-size:15px; color:#3D90CB; font-weight: bold;">Agregar códigos de retiro del Modelo </div>
                </td>
            </tr>
            <tr>
                <td colspan="3" style="height:15px;"></td>
            </tr>
            <tr>
                <td>
                    <div class="search-content">
                        <table border="0">
                            <tr>
                                <td>
                                    <div class="editor-label" style="text-align:left;">
                                        <input type="button" id="btnAgregarModelo" value="Agregar Modelos" />
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                </td>
                <td style="width:15px"></td>
                <td>
                    <div class="search-content">
                        <table border="0">
                            <tr>
                                <td style="width:150px">
                                    <div style="width:auto; float:left; font-size:15px; color:#3D90CB; font-weight: bold;">Modelo de Reparto </div>
                                </td>
                                <td style="width:150px">
                                    <div class="editor-field" style="text-align:left;">
                                        <select id="cboModelo" name="cboModelo" style="width:200px; background-color:white">
                                            <option value="0">-- Seleccionar --</option>
                                        </select>
                                    </div>
                                </td>
                                <td>
                                    <div class="editor-label" style="text-align:left;">
                                        <input type="button" id="btnConsultarCodigosRetiro" value="Consultar" />
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                </td>
            </tr>
            <tr>
                <td style="text-align:center;">
                    <div id="listaModelo"></div>
                </td>
                <td style="width:15px"></td>
                <td style="text-align:center;">
                    <div class="listado" id="listado"></div>
                </td>
            </tr>
            <tr>
                <td colspan="3" style="height:15px"></td>
            </tr>
            <tr>
                <td></td>
                <td style="width:15px"></td>
                <td>
                    <div class="editor-label" style="text-align:center;">
                        <input type="button" id="btnAgregarCodigoRetiro" value="Agregar Codigos de Retiro" />
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>

<!-- Formulario Popup de Modelos -->
<div id="popupModelo" class="general-popup" style="display: none;">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Agregar Modelo</span></div>
    <div class="popup-text">
        <div class="td_inline">
            <div>Modelo :</div>
            <div class="editor-label">
                <input type="text" id="txtNomModeloPopup" style="background-color:white" />
            </div>
            <div id="msjErrNomModeloPopup"></div>
        </div>
        <br />
        <div class="td_inline">
            <div>Coordinador :</div>
            <div class="editor-label">
                <select id="cboEmpresasPopup" style="background-color:white;width:220px">
                    <option value="0">-- Seleccionar --</option>
                    @foreach (var item in Model.ListaEmpresas)
                    {
                        <option value="@item.EmprCodi">@item.EmprNombre</option>
                    }
                </select>
            </div>
            <div id="msjErrEmpresasPopup"></div>
        </div>
        <br /><br /><br />
        <input id="btnGrabarPopupModelo" type="button" value="Aceptar" style="width: 100px; float: right;" />
    </div>
</div>

<!-- Formulario Popup de Códigos de Retiro -->
<div id="popupCodigoModeloRetiro" class="general-popup" style="display: none;">
    <span class="button b-close"><span>X</span></span>
    <div class="popup-title"><span>Agregar Codigos del Modelo de Retiro</span></div>
    <div class="popup-text">
        <div class="td_inline">
            <div>Modelos :</div>
            <div class="editor-label">
                <select id="cboModeloPopup" style="background-color:white;width:220px">
                    <option value="0">-- Seleccionar --</option>
                </select>
            </div>
            <div id="msjErrModeloPopup"></div>
        </div>
        <br />
        <div class="td_inline">
            <div>Barras :</div>
            <div class="editor-label">
                <select id="cboBarraPopup" style="background-color:white;width:220px">
                    <option value="0">-- Seleccionar --</option>
                </select>
            </div>
            <div id="msjErrBarraPopup"></div>
        </div>
        <br />
        <div class="td_inline">
            <div>Codigo de Retiro :</div>
            <div class="editor-label">
                <select id="cboCodigosRetiroPopup" style="background-color:white;width:220px">
                    <option value="0">-- Seleccionar --</option>
                </select>
            </div>
            <div id="msjErrCodigosRetiroPopup"></div>
        </div>
        <br /><br /><br />
        <input id="btnGrabarPopupCodigoRetiro" type="button" value="Aceptar" style="width: 100px; float: right;" />
    </div>
</div>
