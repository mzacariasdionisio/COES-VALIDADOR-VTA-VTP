@model COES.MVC.Intranet.Areas.Transferencias.Models.PeriodoDeclaracionModel
@Html.AntiForgeryToken()
@{
    ViewBag.Title = "Transferencias - Mes de Valorización";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var sMensajeExito = TempData["sMensajeExito"];
}

<script src="~/Areas/Transferencias/Content/Scripts/periodoDeclaracion.js"></script>
<div class="ast">
    @if (@sMensajeExito != null)
    {
        <div class="exito mensajes">@sMensajeExito</div>
    }
    <div class="form-title">
        <div class="content-titulo">Registro de periodo declaración Gestión de Códigos</div>
        <div class="content-botonera">
            @if (Model.bNuevo)
            {
                <input type="button" value="Nuevo" onclick="location.href='@Url.Action("New","periodoDeclaracion")'" alt="Insertar un nuevo registro" title="Insertar un nuevo registro" />
            }
            <input type="button" value="Refrescar" onclick="location.href='@Url.Action("Index","periodoDeclaracion")'" alt="Refrescar" title="Refrescar" />
        </div>
    </div>
    <div class="content-hijo" style="padding-top:8px">
        <div class="listado" id="listado">
            @Html.Action("Lista")
        </div>
    </div>

</div>
