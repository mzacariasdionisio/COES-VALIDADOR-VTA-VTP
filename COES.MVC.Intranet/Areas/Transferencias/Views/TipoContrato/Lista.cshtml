@model COES.MVC.Intranet.Areas.Transferencias.Models.TipoContratoModel
<table border="0" class="pretty tabla-icono" id="tabla">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Estado</th>
            <th style="width:30px;">&nbsp;</th>
            <th style="width:30px;">&nbsp;</th>
            <th style="width:30px;">&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListaTipoContrato)
        {
            <tr id="fila_@item.TipoContCodi">
                <td class="text_left">@item.TipoContNombre</td>
                <td class="text_left">
                    @if (item.TipoContEstado == "ACT")
                    { <span>Activo</span> }
                    else
                    { <span>Inactivo</span> }
            </td>
            <td style="width:30px;"><a href="#" id="view_@item.TipoContCodi" class="view"><img src="@Url.Content("~/Content/Images/btn-open.png")" title="Ver informacion del registro" alt="Ver informacion del registro" /></a></td>
            <td style="width:30px;">
                @if (Model.bEditar)
                {
                    <a href="@Url.Action("Edit", new { id = item.TipoContCodi })"><img src="@Url.Content("~/Content/Images/btn-edit.png")" title="Editar el registro" alt="Editar el registro" /></a>
                }
            </td>
            <td style="width:30px;">
                @if (Model.bEliminar)
                {
                    <a href="#" id="eliminar_@item.TipoContCodi" class="delete"><img src="~/Content/Images/btn-cancel.png" title="Eliminar el registro" alt="Eliminar el registro" /></a>
                }
            </td>
        </tr>
        }
    </tbody>
</table>
<div id="popup"></div>