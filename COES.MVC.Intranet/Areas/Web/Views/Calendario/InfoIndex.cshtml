@model COES.MVC.Intranet.Areas.Web.Models.MesCalendarioModel
@{
    ViewBag.Title = "Calendario COES";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Css/form.css" rel="stylesheet" />
<link href="~/Areas/Web/Content/Css/css.css" rel="stylesheet" />
<script src="~/Areas/Web/Content/Scripts/mescalendario.js"></script>
<script src="~/Content/Scripts/plupload.full.min.js"></script>

<script src="~/Content/Scripts/jqueryui.js"></script>
<link href="~/Areas/Web/Content/Scripts/Calendar/evol-colorpicker.min.css" rel="stylesheet" />
<script src="~/Areas/Web/Content/Scripts/Calendar/evol-colorpicker.min.js"></script>


<div class="form-title">
    <div class="content-titulo">Infografías por Mes</div>
    <div class="content-botonera">
        <input type="button" id="btnNuevo" value="Nuevo" />                
        <input type="button" id="btnCancelar" value="Cancelar" />
    </div>
</div>

<div class="content-hijo">

    <div id="mensaje"></div>

    <div class="search-content" style="margin-bottom:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Año:</td>
                <td>
                    <select id="cbAnioSearch">
                        <option value="">-Seleccione-</option>
                        @foreach (var item in Model.ListaAnios)
                        { 
                            <option value="@item">@item</option>
                        }
                    </select>
                    <input type="hidden" id="hfAnioSerach" value="@Model.AnioActual" />
                </td>
                <td>Mes:</td>
                <td>                    
                    <select id="cbMesSearch">
                        <option value="">-Seleccione-</option>
                        @foreach (var item in Model.ListMeses)
                        { 
                            <option value="@item.Valor">@item.Texto</option>
                        }
                    </select>
                </td>                
                <td colspan="2" style="text-align:center">
                    <input id="btnConsultar" type="button" value="Consultar" />
                </td>
            </tr>
        </table>
    </div>

    <div id="listado">

    </div>

</div>

<div id="popupEdicion" class="general-popup" style="width:980px">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Datos del Registro</span></div>
    <div class="popup-text" id="contenidoEdicion">

    </div>
</div>