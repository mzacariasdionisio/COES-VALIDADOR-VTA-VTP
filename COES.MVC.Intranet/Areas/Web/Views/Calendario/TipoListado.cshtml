@model COES.MVC.Intranet.Areas.Web.Models.TipoEventoModel

<table border="0" class="pretty tabla-icono" id="tabla">
    <thead>
        <tr>
            <th></th>
            <th>Descripción</th>
            <th>Color</th>
            <th>Ícono</th>                       
            <th>Usuario Modificación</th>
            <th>Fecha Modificación</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Listado.Count > 0)
        {
            foreach (var item in Model.Listado)
            {
                <tr>
                    <td>
                        <a href="JavaScript:editar(@item.Tipcalcodi);"><img src="~/Content/Images/btn-edit.png" /></a>
                        <a href="JavaScript:eliminar(@item.Tipcalcodi);"><img src="~/Content/Images/btn-cancel.png" /></a>
                    </td>
                    <td>@item.Tipcaldesc</td>                                        
                    <td>
                        <div style="background-color:#3c90c8; width:15px; height:15px; padding:3px;  margin:auto">
                            @if (item.Tipcalicono != "")
                            {
                                <img src="~/Content/Images/@item.Tipcalicono" />
                            }
                        </div>
                    </td>                   
                    <td>
                        <div class="color-calendario" style="margin:auto; background-color:@item.Tipcalcolor">&nbsp;</div>
                    </td>                   
                    <td>@item.Lastuser</td>
                    <td>@item.Lastdate</td>
                </tr>
            }
        }
    </tbody>
</table>