@{
    ViewBag.Title = "Proveedores del COES";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Areas/Web/Content/Scripts/proveedor.js"></script>

<div class="form-title">
    <div class="content-titulo">Proveedores</div>
    <div class="content-botonera">
        <input type="button" id="btnConsultar" value='Consultar' />
        <input type="button" id="btnNuevo" value="Nuevo" />        
    </div>
</div>

<div class="content-hijo">

    <div id="mensaje"></div>

    <div class="search-content" style="margin-bottom:10px">
       <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Nombre:</td>
                <td>
                    <input id="txtNombre" type="text" />
                </td>
            </tr>
            <tr>
                <td>Tipo:</td>
                <td>
                    <select id="cbTipoProveedor" >
                        <option value="-1">-TODOS-</option>
                        @foreach (var tipo in Model.ListaTipoProveedor)
                        {
                            <option value="@tipo">@tipo</option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td>Fecha Desde:</td>
                <td>
                    <input id="txtFechaDesde" type="text" />
                </td>
            </tr>
            <tr>
                <td>Fecha Hasta:</td>
                <td>
                    <input id="txtFechaHasta" type="text" />
                </td>
            </tr>
            <tr>
                <td colspan="2" style="text-align:center">
                    <input id="btnConsultar" type="button" value="Consultar" />
                </td>
            </tr>
        </table>
    </div>

    <div id="listado">

    </div>

</div>

<div id="popupEdicion" class="general-popup">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Datos de Proveedor</span></div>
    <div class="popup-text" id="contenidoEdicion">

    </div>
</div>