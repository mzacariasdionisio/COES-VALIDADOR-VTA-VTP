@model COES.MVC.Intranet.Areas.Web.Models.SubscripcionModel
@{
    ViewBag.Title = "Administrar suscripciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Areas/Web/Content/Scripts/suscripcion.js"></script>
<link href="~/Content/Css/form.css" rel="stylesheet" />

<div class="form-title">
    <div class="content-titulo">Administración de Subscripciones</div>
    <div class="content-botonera">        
        <input type="button" id="btnPublicacion" value="Publicaciones" />
        <input type="button" id="btnExportar" value="Exportar" />
    </div>
</div>

<div class="content-hijo">
    <div id="mensaje"></div>
    <div class="search-content" style="margin-bottom:10px">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Desde:</td>
                <td>
                    <input type="text" id="txtFechaInicio" value="@Model.FechaInicio" />
                </td>
                <td>Hasta:</td>
                <td>
                    <input type="text" id="txtFechaFin" value="@Model.FechaFin" />
                </td>
                <td>
                    <select id="cbPublicacionFiltro">
                        <option value="">-TODOS-</option>
                        @foreach (var item in Model.ListaPublicacion)
                        { 
                            <option value="@item.Publiccodi">@item.Publicnombre</option>
                        }
                    </select>
                </td>
                <td>
                    <input type="button" id="btnConsultar" value='Consultar' />
                </td>
            </tr>
        </table>
    </div>
    <div id="listado">
    </div>
    <br />
    <br />
</div>

<div id="popupEdicion" class="general-popup" style="width:500px">
    <div><span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span>Datos de la Suscripción</span></div>
    <div class="popup-text" id="contenidoEdicion">

    </div>
</div>