@model COES.MVC.Intranet.Areas.YupanaContinuo.Models.SimulacionModel
@{
    ViewBag.Title = "Parámetros de Aplicativo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Content/Scripts/multiselect.js"></script>
<link href="~/Content/Css/multiselect.css" rel="stylesheet" />

<link href="~/Areas/YupanaContinuo/Content/Css/css.css" rel="stylesheet" />
<script src="~/Areas/YupanaContinuo/Content/Scripts/parametro.js?v=1.0"></script>

<div class="form-title">
    <div class="content-titulo">Parámetros de Aplicativo - Yupana Continuo</div>
</div>

<div class="content-hijo" id="mainLayout">
    <div id="mensaje" class="action-message" style="margin:0; margin-bottom:10px; display: none"></div>

    <div class="search-content">
        <table>
            <tr>
                <td style="vertical-align: middle;">
                    <table class="content-tabla-search tabla_filtro_ho" style="width:auto">
                        <tr>
                            <td class="tbform-label">Fecha:</td>
                            <td>
                                <input type="text" id="txtFecha" value="@Model.Fecha" style="width: 94px;" />
                            </td>
                            <td class="tbform-label" style="padding-left: 15px;">Hora simulación:</td>
                            <td>
                                <select id="cbHora" style="width:61px;">
                                    @foreach (var item in Model.ListaHora)
                                    {
                                        <option value="@item.Entero1" selected="@item.Selected1">@item.String1</option>
                                    }
                                </select>
                                @if (Model.TienePermisoAdmin)
                                {
                                    <input type="button" id="btnEjecManual" value="Ejecución manual" />
                                    <input type="button" id="btnEjecAutomatica" value="Ejecución automática" />

                                    <input type="button" id="btnFinalizarEjec" value="Finalizar ejecución" style="margin-left: 30px;" />
                                }
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </div>

</div>

<div id="popup_formulario" class="general-popup" style="z-index:9999999998;">
    <div> <span class="button b-close"><span>X</span></span></div>
    <div class="popup-title"><span></span></div>

    <div id="div_formulario">
    </div>
</div>