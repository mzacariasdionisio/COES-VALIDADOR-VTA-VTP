@model COES.MVC.Intranet.Models.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <script type="text/javascript">
        var siteRoot = "@Url.Content("~/")";
    </script>
    <link href="~/Content/Css/login.css" rel="stylesheet" />
    <link href="~/Content/Css/popup.css" rel="stylesheet" />
    <script src="~/Content/Scripts/jquery.js"></script>
    <script src="~/Content/Scripts/efecto.js"></script>
    <script src="~/Content/Scripts/popup.js"></script>   
    <script src="~/Content/Scripts/login.js"></script>        
</head>

<body>  
    <div class="layout">     
    <header>       
        <div class="header">
            <div class="header-content">
                <div class="header-text">
                    <div class="header-text-item">
                        <img src="~/Content/Images/hide-menu.png" />
                    </div>                    
                    <div class="header-text-item">Intranet SGO - COES</div>
                </div>
                <div class="header-action">                    
                    <div class="header-action-item"><a href="http://www.coes.org.pe">Portal Web </a></div>                               
                </div>
            </div>
        </div>  
        <div style="clear:both"></div>
    </header>    
    <div class="content" style="min-height:400px">             
        <div class="login-body">
            <section>
                <table cellpadding="0" cellspacing="0">
                    <tr>
                        <td valign="top">

                            <div class="login-title">Intranet SGOCOES</div>
                            <div class="login-text">                                
                                
                                Puede ingresar al sistema sin autenticarse con usuario y clave, con esta opción sólo se mostrarán consultas de libre acceso.
                                <br />
                                <br />
                            </div>
                            <div class="login-action">
                                <input type="button" id="btnAccesoAnonimo" value="Ingresar" class="botonlogin" />
                            </div>
                        </td>
                        <td class="login-separer"></td>
                        <td valign="top" style="padding: 0 20px">
                            <div class="login-logo">                                 
                                     <img src="~/Content/Images/logocoes.png" />                              
                             </div>
                            @using (Html.BeginForm())
                            {
                                <div class="login-form" id="loginForm">
                                    
                                    <div class="login-content">
                                        
                                         <div class="login-label">USUARIO:</div>
                                         <div class="login-control">
                                             <input type="text" id="Usuario" name="Usuario" class="controllogin" />
                                         </div>
                                                                             
                                         <div class="login-label">CLAVE:</div>
                                         <div class="login-control">
                                             <input type="password" id="Clave" name="Clave" class="controllogin" />
                                         </div>
                                       
                                        <div class="login-action">
                                            <input id="btnEnviar" type="button" value="Aceptar" class="botonlogin" />
                                        </div>

                                        <div class="login-remember">
                                            <input type="checkbox" id="cbRecordar" checked="checked" />Recordar inicio de sesión
                                        </div>

                                        <div id="accionResultado" class="action-login">Ingresar usuario y clave.</div>

                                        <div style="clear:both"></div>

                                    </div>
                                </div>
                                
                                <input type="hidden" id="hfOriginalUrl" value="@ViewBag.OriginalUrl" />
                            }

                        </td>
                    </tr>
                </table>
            </section>
        </div>
    </div>   
    </div>
    <footer>
        <div class="footer">
            COES © Todos los derechos reservados 
            <br />
            Av. Los Conquistadores N° 1144, piso 2 - San Isidro, Lima - PERÚ Teléfono: (511) 611-8585
        </div>
    </footer>

    <div id="loading" class="loading">
         <div class="loading-image"><img src="~/Content/Images/loading.gif" /></div>
         <div class="loading-text">Procesando...</div>
    </div>

</body>

</html>



