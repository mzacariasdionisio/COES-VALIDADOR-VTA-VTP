@model COES.MVC.Publico.Areas.DirectorioImpugnaciones.Models.EventoAgendaModel
    

    <table id="tablaListaEventos" class="pretty tabla-icono">
        <thead>
            <tr>
                <th>Título</th>
                <th>Fecha del Evento</th>
                <th>Hora Inicio</th>
                <th>Hora Fin</th>
                <th style="width:400px">Ubicación</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var evento in Model.ListaEventosAgenda)
            {
                <tr>
                    <td><a href="JavaScript:mostrarEvento(@evento.Eveagcodi)">@evento.Eveagtitulo</a></td>
                    <td>@evento.Eveagfechinicio.Value.ToString("dd/MM/yyyy")</td>
                    <td>@evento.Eveagfechinicio.Value.ToString("hh:mm tt")</td>
                    <td>@evento.Eveagfechfin.Value.ToString("hh:mm tt")</td>
                    <td style="width:400px">@Html.Raw(evento.Eveagubicacion)</td>
                    <td>
                        <a href="JavaScript:download(@evento.Eveagcodi)">
                            @if (evento.Eveagextension == "pdf" || evento.Eveagextension == "PDF")
                            {
                                <img src="~/Content/Images/pdficon.png">
                            }
                            else if (evento.Eveagextension == "zip" || evento.Eveagextension == "ZIP" || evento.Eveagextension == "rar" || evento.Eveagextension == "RAR")
                            {
                                <img src="~/Content/Images/zipicon.gif" />
                            }
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
