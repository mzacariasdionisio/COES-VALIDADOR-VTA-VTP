    .datatables_filter {
        clear: none !important;
    }
</style>
<div class="main-banner" style="margin-top: -15px; background-image: url(../Content/Images/Banners/RegistroDeIntegrantes.jpg) ">
</div>
<div style="clear:both"></div>

<div class="container">
    <div class="row">
        <div class="col col-md-3 order-1 order-md-0">
            <nav class="sidebar">
                <ul class="sidebar-nav list-unstyled">
                    <li class="sidebar-nav--item">
                        <a href="~/Operacion/CaractSEIN/BaseDatos" class="sidebar-nav--link">Base de Datos</a>
