                                        </select>
                                    </div>
                                </div>
                                <div class="col col-md-6">
                                    <div class="coes-form-item td_empresa">
                                        <label class="d-block" for="">Empresa:</label>
                                        <select name="filter-2" id="cbEmpresa">
                                            <option value="-2">--TODOS--</option>
                                        </select>
                                    </div>
                                </div>
                                @*<div class="col col-md-4">
                                    <div class="coes-form-item">
                                        <input type="button" id="btnConsultar" class="coes-form-item--submit" value="Buscar">
                                    </div>
                                </div>*@
                            </div>
                        </form>
                    </div>

                </div>
            </div>

            <div class="">
                <div id="textoMensaje"></div>
                <div class="table-responsive">
                    <div class="table-list" id="listado"></div>
                </div>

                <div class="paginado" id="paginado">
                </div>
            </div>
        </div><!-- /.col-9 -->

    </div><!-- /.row -->
