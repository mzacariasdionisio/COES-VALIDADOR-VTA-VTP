@model COES.MVC.Publico.Areas.Eventos.Models.BusquedaEventoModel
@{
    ViewBag.Title = "Eventos Relevantes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Areas/Eventos/Content/Scripts/evento.js"></script>
<link href="~/Areas/Eventos/Content/Css/css.css" rel="stylesheet" />

