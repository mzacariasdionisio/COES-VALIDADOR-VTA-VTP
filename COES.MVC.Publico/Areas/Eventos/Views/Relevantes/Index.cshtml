<div class="main-banner" style="margin-top: -15px; background-image: url(../Content/Images/Banners/Informes.jpg) ">
</div>
<div style="clear:both"></div>

<div class="content-area">
    <div class="container">
        <div class="row">
            <div class="col col-md-12">
                <div class="coes-box mb-5">
                    <div class="coes-box--header coes-box--header--center-aligned">
                        <h3 class="coes-box--title">
                            Eventos Relevantes
                        </h3>
                    </div>
                    <div class="coes-box--content container">

                        <div class="coes-filters d-flex ">
                            <form action="" class="w-100">
                                <div class="d-flex justify-content-between align-items-end flex-wrap flex-lg-nowrap">

                                    <div class="coes-form-item">
                                        <label class="d-block" for="">Tipo de Equipo:</label>
                                        <select id="cbFamilia" name="IdFamilia">
                                            <option value="0">-TODOS-</option>
                                            @foreach (var item in Model.ListaFamilias)
                                            {
                                                <option value="@item.FAMCODI">@item.FAMNOMB</option>
                                            }
                                        </select>
                                    </div>

                                    <div class="coes-form-item">
                                        <label class="d-block" for="">Tipo de Empresa:</label>
                                        <select id="cbTipoEmpresa" name="IdTipoEmpresa">
                                            <option value="0">-TODOS-</option>
                                            @foreach (var item in Model.ListaTipoEmpresas)
                                            {
                                                <option value="@item.Tipoemprcodi">@item.Tipoemprdesc</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="coes-form-item">
                                        <label class="d-block" for="">Empresa:</label>
                                        <select id="cbEmpresa" name="IdEmpresa">
                                            <option value="0">-TODOS-</option>
                                            @foreach (var item in Model.ListaEmpresas)
                                            {
                                                <option value="@item.EMPRCODI">@item.EMPRNOMB</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="coes-form-item">
                                        <label class="d-block" for="">Desde:</label>
                                        <input type="date" id="FechaDesde" class="coes-form-item--date" name="FechaInicio" value="@Model.FechaInicio" style="width:160px" />
                                    </div>
                                    <div class="coes-form-item">
                                        <label class="d-block" for="">Hasta:</label>
                                        <input type="date" id="FechaHasta" class="coes-form-item--date" name="FechaFin" value="@Model.FechaFin" style="width:160px" />
                                    </div>

                                    <div class="coes-form-item">
                                        <input type="button" id="btnBuscar" class="coes-form-item--submit" value="Buscar">
                                    </div>
                                    <div class="coes-form-item">
                                        <input type="button" id="btnExportar" class="coes-form-item--submit" value="Exportar" />
                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
            <div class="">

                <div class="table-responsive">
                    <div class="paginado" id="paginado">
                    </div>
                    <table class="table table-hover">
                        <tbody id="listado">
                            <tr>
                                <th>Ver detalle</th>
                                <th>Empresa</th>
                                <th>Ubicación</th>
                                <th>Equipo</th>
                                <th>Inicio</th>
                                <th>Final</th>
                                <th>Descripción</th>
                            </tr>
                        </tbody>
                    </table>
                </div>


            </div>
        </div>
    </div>
    @*<div id="popupEdicion" class="general-popup">
        <div><span class="button b-close"><span>X</span></span></div>
        <div class="popup-title"><span>Detalle del Evento</span></div>
        <div class="popup-text" id="contenidoEdicion">

        </div>
    </div>*@
    <div class="modal fade" id="popupEdicion" tabindex="-1" aria-labelledby="LabelEvento" aria-hidden="true" style="display: none;">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content">
                <button type="button" id="btnCancelar" class="coes-modal-close--button" data-bs-dismiss="modal" aria-label="Close"></button>
                <div class="modal-header text-center">
                    <h5 class="modal-title" id="LabelEvento">Detalle del Evento</h5>
                </div>
                <div class="modal-body">
                    <div class="popup-text" id="contenidoEdicion"></div>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" id="hfVersion" name="Version" value="N" />
    <input type="hidden" id="hfTurno" name="Turno" value="" />
    <input type="hidden" id="hfIdTipoEvento" name="IdTipoEvento" value="0" />
    <input type="hidden" id="hfIndInterrupcion" name="IndInterrupcion" value="-1" />
    <input type="hidden" id="hfNroPagina" name="NroPagina" value="1" />
</div>


