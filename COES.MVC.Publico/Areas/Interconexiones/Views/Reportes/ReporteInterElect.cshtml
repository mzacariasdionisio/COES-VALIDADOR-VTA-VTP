@model COES.MVC.Publico.Areas.Interconexiones.Models.InterconexionesModel
@{
    ViewBag.Title = "ReporteHistorico";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}
<script src="~/Areas/Interconexiones/Content/Scripts/reportes.js"></script>
<script src="~/Content/Scripts/highcharts.js"></script>
<div class="form-title">
    <div class="content-titulo">Consulta Histórica de Intercambios Internacionales</div>
</div>

<div class="content-hijo" id="mainLayout">
    <div class="search-content">
        <table class="content-tabla-search" style="width:auto">
            <tr >
                <td>Interconexión:</td>
                <td style="width:300px" >
                    <select id="cbInterconexion" name="IdInterconexion" style="width:280px;">
                        @foreach (var item in Model.ListaInterconexion)
                        {
                            <option value="@item.Ptomedicodi">@item.Interdecrip @item.Interenlace</option>
                        }
                    </select>
                    <input type="hidden" id="hfInterconexion" value="@Model.IdPtomedicion"/>
                </td>
                <td>Fecha desde:</td>
                <td>
                    <input type="text" id="FechaDesde" name="FechaInicio" style="width:150px" value="@Model.FechaInicio"  />
                    <input type="hidden" id="hfFechaDesde"  value="@Model.FechaInicio"  />
                </td>
                <td>Fecha hasta:</td>
                <td>
                    <input type="text" id="FechaHasta" name="FechaFin" style="width:150px" value="@Model.FechaFin" />
                    <input type="hidden" id="hfFechaHasta" value="@Model.FechaFin" />
                </td>  
                <td>
                    
                </td>                                
            </tr>                                             
        </table>
    </div>
         <div style="width:400px; margin:auto; text-align:center; margin-top:15px" >
            <input type="button" id="btnBuscar" value="Consultar" />
            <input type="button" id="btnExpotar" value="Exportar Reporte" />
        </div>
    <div class="content-tabla">
        <div class="tabla-header">       
            <div class="table-paginado" id="paginado"></div>
        </div>
        <div style="clear:both; height:5px"></div>
        <div class="table-list" id="listado"></div>
    </div>       
</div>
