@model COES.MVC.Publico.Areas.MarcoNormativo.Models.DecisionEjecutivaModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Directivas y Notas Técnicas";
}

<script type="text/javascript">

    descargar = function (url) {
        document.location.href = siteRoot + "marconormativo/decisionejecutiva/Download?file=" + url;
    }
</script>

<style>
    .enlace-documento {
        line-height: 16px;
    }

        .enlace-documento a {
            text-decoration: underline !important;
            color: #335873 !important;
        }
</style>

