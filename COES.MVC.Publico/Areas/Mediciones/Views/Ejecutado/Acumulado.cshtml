@model COES.MVC.Publico.Areas.Mediciones.Models.AcumuladoModel
@{
    ViewBag.Title = "Acumulado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Areas/Mediciones/Content/Css/mediciones.css" rel="stylesheet" />
<script src="~/Areas/Mediciones/Content/Scripts/acumulado.js"></script>
<script src="~/Content/Scripts/multiselect.js"></script>
<link href="~/Content/Css/multiselect.css" rel="stylesheet" />
<script src="~/Content/Scripts/tablescroll.js"></script>

<div class="form-title">
    <div class="content-titulo">Despacho Ejecutado Acumulado Mensual</div>
</div>

<div class="content-hijo" id="mainLayout">
    <div class="content-search">
        <table class="content-tabla-search" style="width:auto">
            <tr>
                <td>Mes desde:</td>
                <td>Mes Hasta:</td>
                <td>Tipo de Generación:</td>
                <td>Tipo empresa:</td>
                <td>Empresa:</td>
            </tr>
            <tr>
                <td>
                    <input type="text" id="txtFechaDesde" style="width:140px" value="@Model.FechaInicio" />
                </td>
                <td>
                    <input type="text" id="txtFechaHasta" style="width:140px" value="@Model.FechaFin" />
                </td>
                <td>
                    <select id="cbTipoGeneracion" multiple="multiple">
                        @foreach (var item in Model.ListaTipoGeneracion)
                        {
                            <option value="@item.Tgenercodi">@item.Tgenernomb</option>
                        }
                    </select>
                    <input type="hidden" id="hfTipoGeneracion" />
                </td>
                <td>
                    <select id="cbTipoEmpresa" multiple="multiple">
                        @foreach (var item in Model.ListaTipoEmpresas)
                        {
                            <option value="@item.Tipoemprcodi">@item.Tipoemprdesc</option>
                        }
                    </select>
                    <input type="hidden" id="hfTipoEmpresa" />
                </td>
                <td>
                    <div id="empresas"></div>
                </td>
            </tr>
            <tr class="search-separer">
                <td colspan="5" style="line-height:15px"></td>
            </tr>
            <tr>
                <td colspan="5" style="text-align:center">
                    <input type="button" id="btnConsultar" value="Consultar datos" />
                    <input type="button" id="btnExportar" value="Exportar" />
                </td>
            </tr>
        </table>
    </div>
    <div class="content-tabla">        
        <div style="clear:both; height:15px"></div>
        <div class="tablescroll" id="listado"></div>
        <div style="clear:both"></div>
    </div>
    <br />
    <input type="hidden" id="hfEmpresa" />
    <input type="hidden" id="hfTipoGeneracion" />
</div>
