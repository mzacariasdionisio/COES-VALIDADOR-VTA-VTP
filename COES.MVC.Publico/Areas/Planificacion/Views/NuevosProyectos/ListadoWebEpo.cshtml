@model  IEnumerable<COES.Dominio.DTO.Sic.EpoEstudioEpoDTO>

    <style>
        .dataTables_scrollBody {
            /*        overflow-x: auto;
        overflow-y: auto;
        height: 475px !important;*/
        }
    </style>

    <table border="0" class="tabla-formulario" cellspacing="0" width="100%" id="tabla">
        <thead>
            <tr>
                <th width="8%">Código<br />Proyecto</th>
                <th width="8%">Código<br />Estudio</th>
                <th width="15%">Nombre Estudio</th>
                <th width="8%">Responsable Estudio</th>
                <th width="8%">Fecha<br />Presentación EPO</th>
                <th width="8%">Fecha<br />Conformidad EPO</th>
                <th width="15%">Titular</th>
                <th width="10%">Estado</th>
                <th width="10%">Resumen<br />Ejecutivo</th>
                <th width="8%">Vigencia</th>
                <th width="8%">Gestión</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="8%" class="text-left">@item.Estepocodiproy</td>
                    <td width="8%" class="text-left">@item.Estepocodiusu</td>
                    <td width="15%" class="text-left">@item.Esteponomb</td>
                    <td width="15%" class="text-left">@item.Username</td>
                    <td width="8%">@(item.Estepofechaini.HasValue ? (item.Estepofechaini.Value.ToString("dd/MM/yyyy") != "01/01/0001" ? item.Estepofechaini.Value.ToString("dd/MM/yyyy") : "") : "")</td>
                    <td width="8%">@(item.Estepofechafin.HasValue ? (item.Estepofechafin.Value.ToString("dd/MM/yyyy") != "01/01/0001" ? item.Estepofechafin.Value.ToString("dd/MM/yyyy") : "") : "")</td>
                    <td width="15%" class="text-left">@item.Emprnomb</td>
                    <td width="10%">@item.Estadescripcion</td>
                    <td width="10%">
                        @if (!string.IsNullOrEmpty(item.Esteporesumenejecutivoenl))
                        {
                            <a class="coes-button coes-button--plain-text" target="_blank" href="@item.Esteporesumenejecutivoenl">Descargar</a>
                        }
                    </td>
                    <td width="8%">@item.EstepoVigencia</td>
                    <td width="8%">
                        @*<a href="#" onclick="javascript: verdetalle(@item.Estepocodi)">Ver Detalle</a>*@
                        <button type="button" class="coes-button coes-button--plain-text" onclick="javascript: verdetalle(@item.Estepocodi)">Ver Detalle</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
 
