<script type="text/javascript">
    $(function () {
        $('#Map > area').mouseover(function () {
            if ($(this).attr("data-descrip") != "") {
                var c = $(this).attr('coords').split(',');
                var t = c[1] - c[2];
                var l = c[0] - c[3];
                $('.organigrama-content').show();

                $('.organigrama-content > h1').text($(this).attr("title"));
                $('.organigrama-content > p').text($(this).attr("data-descrip"));
            }
        });

        $('#Map > area').mouseout(function () {
            $('.organigrama-content').hide();
            $('.organigrama-content > h1').text("");
            $('.organigrama-content > p').text("");
        });
    })

</script>

